@{
    ViewData["Title"] = "首頁";
}

<!-- Hero 橫幅（漸層＋搜尋＋登入鈕，純占位） -->
<section class="hero-banner mb-3">
    <div class="container">
        <div class="d-flex flex-column flex-lg-row align-items-center gap-3 py-4">
            <div class="d-flex align-items-center gap-2">
                <img src="~/images/logo.svg" alt="Logo" height="42" />
                <strong class="fs-5">Demo Hub</strong>
            </div>

            <form class="flex-grow-1">
                <div class="input-group hero-search">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input class="form-control" placeholder="搜尋文章、遊戲、看板..." />
                </div>
            </form>

            <div class="d-flex gap-2">
                <a class="btn btn-outline-dark">註冊</a>
                <a class="btn btn-dark">登入</a>
            </div>
        </div>
    </div>
</section>

<div class="container-fluid">
    <div class="row g-3">
        <!-- 中欄 -->
        <div class="col-12 col-lg-9 col-xxl-9">
            <!-- 精選卡片 -->
            <section class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="m-0">精選</h5>
                    <a href="#" class="text-decoration-none small">看更多</a>
                </div>
                <div class="row g-3">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="col-12 col-sm-6 col-lg-3">
                            <a class="card h-100 shadow-sm hover-lift text-reset text-decoration-none" href="#">
                                <div class="ratio ratio-4x3 card-thumb-skeleton"></div>
                                <div class="card-body">
                                    <span class="badge bg-teal me-2">分類</span>
                                    <h6 class="card-title mt-2">卡片標題</h6>
                                    <p class="card-text text-muted small mb-0">摘要文字（占位）。</p>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </section>

            <!-- GNN 新聞（分頁骨架） -->
            <section class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="m-0">GNN 新聞</h5>
                    <ul class="nav nav-pills small" id="gnnTabs" role="tablist">
                        <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#t0">焦點</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#t1">手機</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#t2">PC</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#t3">主機</button></li>
                        <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#t4">活動</button></li>
                    </ul>
                </div>

                <div class="tab-content">
                    @for (int t = 0; t < 5; t++)
                    {
                        <div id="t@t" class="tab-pane fade @(t == 0 ? "show active" : "")">
                            <div class="row g-3">
                                @for (int i = 0; i < 6; i++)
                                {
                                    <div class="col-12 col-md-6 col-lg-4">
                                        <a class="card h-100 shadow-sm hover-lift text-reset text-decoration-none" href="#">
                                            <div class="ratio ratio-16x9 card-thumb-skeleton"></div>
                                            <div class="card-body">
                                                <span class="badge bg-secondary me-2">多平台</span>
                                                <h6 class="card-title mt-2">新聞標題</h6>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>         
    </div>
</div>

@section Styles {
    <style>
        /* Hero 橫幅（淡色漸層 + 下方細框） */
        .hero-banner {
            background: linear-gradient(90deg, #d9f2ff 0%, #eafff7 100%);
            border-bottom: 1px solid #e6e6e6;
        }

        /* 搜尋框外觀（左 icon、右 input 無縫銜接） */
        .hero-search .input-group-text {
            background: #fff;
            border-right: 0;
        }

        .hero-search .form-control {
            border-left: 0;
        }

            .hero-search .form-control:focus {
                box-shadow: none;
                border-color: #86b7fe;
            }

        /* 卡片 hover 微抬起效果 */
        .hover-lift {
            transition: transform .15s ease, box-shadow .15s ease;
        }

            .hover-lift:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(0,0,0,.08) !important;
            }

        /* 圖片骨架（shimmer） */
        .card-thumb-skeleton {
            background: linear-gradient(90deg,#e9ecef 25%, #f8f9fa 37%, #e9ecef 63%);
            background-size: 400% 100%;
            animation: home-skeleton 1.2s ease-in-out infinite;
            border-top-left-radius: .375rem;
            border-top-right-radius: .375rem;
        }
        @@keyframes home-skeleton {
            0%

        {
            background-position: 100% 0;
        }

        100% {
            background-position: 0 0;
        }

        }

        /* 小色塊 */
        .bg-teal {
            background: #02c39a !important;
        }

        /* 右欄占位（300x250 風格）—這頁暫存用 */
        .right-rail-box {
            width: 300px;
            height: 250px;
            background: #fff;
            border: 1px solid #e9ecef;
            border-radius: .5rem;
            box-shadow: 0 2px 10px rgba(0,0,0,.04);
        }
    </style>
}
