@model IEnumerable<GamiPort.Models.NewsApi.Article>

@if (Model != null && Model.Any())
{
    <div class="row g-3">
        @foreach (var article in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <a class="card h-100 shadow-sm hover-lift text-reset text-decoration-none" href="@article.Url" target="_blank">
                    <div class="ratio ratio-16x9 bg-light">
                        @if (!string.IsNullOrEmpty(article.UrlToImage))
                        {
                            <img src="@article.UrlToImage" class="card-img-top" style="object-fit: cover;" alt="News Image">
                        }
                        else
                        {
                            <img src="/images/placeholder-16x9.png" class="card-img-top" style="object-fit: cover;" alt="Placeholder Image">
                        }
                    </div>
                    <div class="card-body">
                        <h6 class="card-title mt-2" title="@article.Title">@article.Title</h6>
                        <p class="card-text small text-muted">@article.Source.Name - @article.PublishedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</p>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="text-center p-4">
        <p class="text-muted">目前沒有新聞可顯示。</p>
    </div>
}
