@model GamiPort.Models.ViewModels.TopbarVM
@using GamiPort.Services
@inject ICurrentUserService CurrentUser

@{
    // 商城首頁（優先 Store/Index），網站首頁（根目錄 Home/Index）
    var storeHomeUrl = Url.Action("Index", "Store", new { area = "OnlineStore" })
                       ?? Url.Action("Index", "Home", new { area = "OnlineStore" });
    var siteHomeUrl = Url.Action("Index", "Home", new { area = "" });
}

<header class="topbar1 navbar navbar-expand-lg navbar-light bg-light border-bottom sticky-top">
    <div class="container-fluid">

        <!-- 漢堡：開左側 offcanvas -->
        <button class="navbar-toggler d-lg-none me-2" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#mainOffcanvas"
                aria-controls="mainOffcanvas" aria-label="Open menu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- 品牌：回商城首頁（含玻璃跳動小方塊） -->
        <a class="navbar-brand fw-semibold d-flex align-items-center gap-2 text-decoration-none nav-elevate" href="@storeHomeUrl" title="回 GamiStore 首頁">
            <span class="brand-glass d-inline-grid place-items-center"><i class="bi bi-controller"></i></span>
            <span class="text-dark">GamiStore</span>
        </a>

        <!-- 右側功能列（黑字＋Icon，hover 浮起） -->
        <ul class="navbar-nav ms-auto align-items-lg-center topbar-links">
            <li class="nav-item">
                <a class="nav-link nav-elevate" href="@siteHomeUrl" title="網站首頁">
                    <i class="bi bi-house-door me-1"></i> 網站首頁
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-elevate" href="@storeHomeUrl" title="商城首頁">
                    <i class="bi bi-shop me-1"></i> 商城首頁
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-elevate" href="/OnlineStore/store/favorites" title="我的收藏">
                    <i class="bi bi-heart me-1"></i> 我的收藏
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-elevate" href="/OnlineStore/orders" title="我的訂單">
                    <i class="bi bi-receipt me-1"></i> 我的訂單
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-elevate" href="/OnlineStore/notice" title="商城公告">
                    <i class="bi bi-megaphone me-1"></i> 商城公告
                </a>
            </li>

            @* 登入狀態 *@
            @if (CurrentUser.IsAuthenticated)
            {
                <li class="nav-item dropdown ms-2">
                    <a class="nav-link dropdown-toggle d-flex align-items-center nav-elevate" href="#" id="userMenu"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle me-1"></i>
                        <span>@(CurrentUser.NickName ?? "使用者")</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                        <li class="dropdown-header text-secondary small">已登入：@(CurrentUser.NickName ?? "使用者")</li>
                        <li>
                            <a class="dropdown-item" asp-area="Login" asp-controller="Introduce" asp-action="Details">
                                <i class="bi bi-person-badge me-2"></i> 檢視個人資料
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Login" asp-controller="Introduce" asp-action="Edit">
                                <i class="bi bi-pencil-square me-2"></i> 編輯個人資料
                            </a>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <form asp-area="Login" asp-controller="Login" asp-action="Logout" method="post" class="px-2 py-1 mb-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger w-100">
                                    <i class="bi bi-box-arrow-right me-2"></i> 登出
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
            }
            else
            {
                <li class="nav-item ms-2">
                    <a class="btn btn-primary" asp-area="Login" asp-controller="Login" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right me-1"></i> 登入
                    </a>
                </li>
            }
        </ul>
    </div>
</header>

<!-- 左側 Offcanvas：沿用 Sidebar -->
<div class="offcanvas offcanvas-start offcanvas-main" tabindex="-1" id="mainOffcanvas" aria-labelledby="mainOffcanvasLabel">
    <div class="offcanvas-header">
        <h6 class="offcanvas-title" id="mainOffcanvasLabel">主選單</h6>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
        @await Html.PartialAsync("/Areas/OnlineStore/Views/Shared/_Sidebar.cshtml")
    </div>
</div>

<style>
    /* ===== 高度與互動（提供外層量測變數） ===== */
    .topbar1.navbar {
        min-height: 68px;
    }

    .topbar1 .nav-link, .topbar1 .navbar-brand span {
        color: #111 !important;
    }

    .nav-elevate {
        border-radius: .55rem;
        transition: transform .15s ease, box-shadow .15s ease, background-color .15s ease;
    }

        .nav-elevate:hover {
            transform: translateY(-2px);
            background: rgba(0,0,0,.04);
            box-shadow: 0 10px 26px rgba(0,0,0,.12);
        }

    /* 玻璃跳動 */
    .brand-glass {
        width: 32px;
        height: 32px;
        border-radius: 12px;
        background: rgba(255,255,255,.55);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(0,0,0,.08);
        box-shadow: 0 8px 22px rgba(0,0,0,.10);
        display: grid;
        place-items: center;
        animation: brand-bounce 2.4s ease-in-out infinite;
    }
    @@keyframes brand-bounce {
        0%,100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-2px);
    }

    }

    /* 手機時微調間距（避免看起來太扁） */
    @@media (max-width: 992px) {
        .topbar1 .nav-link

    {
        padding: .5rem .5rem;
    }

    }
</style>

<script>
    // 量測 Default 實際高度，寫回 :root --topbar-h（給外層與 StoreBar 對齊）
    document.addEventListener('DOMContentLoaded', function(){
      const root = document.documentElement;
      const topbar = document.querySelector('.topbar1.navbar');
      if(topbar){
        const h = topbar.offsetHeight || 68;
        root.style.setProperty('--topbar-h', h + 'px');
      }
    });
</script>
