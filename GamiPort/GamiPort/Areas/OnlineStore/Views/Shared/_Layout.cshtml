@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- 基底套件 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- 全站共用樣式（用 Layout 載入，partial 不要宣告 section） -->
    <link href="~/css/layout-shell.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/topbar1.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/sidebar.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/topbar2.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/right-rail.css" rel="stylesheet" asp-append-version="true" />

    @RenderSection("Styles", required: false) @* 頁面額外樣式才用這個 *@
</head>
<body>
    @await Component.InvokeAsync("TopbarLevel1")

    <div class="layout-wrap">
        <aside class="layout-sidebar d-none d-lg-block">
            @await Html.PartialAsync("_Sidebar")
        </aside>

        <main class="layout-main">
            @await Html.PartialAsync("_TopbarLevel2")

            <div class="container-fluid py-3">
                <div class="row g-4">
                    <div class="col-12 col-xxl-9">
                        @RenderBody()
                    </div>
                    <aside class="col-xl-3 d-none d-xl-block">
                        <div class="right-rail">
                            @await Html.PartialAsync("_RightRailAds")
                        </div>
                    </aside>
                </div>
            </div>
        </main>
    </div>

    <footer class="layout-footer border-top">
        @await Html.PartialAsync("_Footer")
    </footer>

    @await Html.PartialAsync("_MiniDock")

    <!-- [FIX] 刪掉 CDN jQuery（會觸發 SRI 錯誤） -->
    @* <script src="https://code.jquery.com/jquery-3.7.1.min.js"
              integrity="sha256-7N2BqM2eR7YkN7OZkQZ3r3d8G8Yz2QfX7WXE5f1f5wE="
              crossorigin="anonymous"></script> *@

    <!-- [FIX] 刪掉重複的 _MiniDock（你剛才有兩次） -->
    @* @await Html.PartialAsync("_MiniDock") *@

    <!-- ✅ 先載 jQuery（本機檔，避免 SRI 問題） -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- ✅ 再載 Bootstrap（只載一次） -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ 全站共用腳本（只載一次） -->
    <script src="~/js/sidebar.js" asp-append-version="true"></script>

    <!-- ✅ 讓各 View（Step1/Step2）注入自己的 _ValidationScriptsPartial 與頁面腳本 -->
    @RenderSection("Scripts", required: false)
</body>
</html>
