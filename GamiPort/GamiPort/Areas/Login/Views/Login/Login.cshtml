@model GamiPort.Models.ViewModels.LoginVM
@{
    ViewData["Title"] = "登入";
    // 如果你用主 _Layout：也可在 Controller 設 ViewData["HideRightRail"]=true 等把右欄/浮動鈕隱藏
}

<div class="container d-flex justify-content-center align-items-start pt-3 pb-5"
     style="min-height: calc(100vh - 64px);">
    <div class="w-100" style="max-width: 420px;">
        <h3 class="text-center mb-3 mt-0">登入 GamiPort</h3>

        <form asp-area="Login" asp-controller="Login" asp-action="Login"
              method="post" class="card p-4 shadow-sm">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">帳號 </label>
                <input asp-for="UserAccount" class="form-control" />
                <span asp-validation-for="UserAccount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">密碼</label>
                <input asp-for="UserPassword" class="form-control" type="password" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>

            <button type="submit" class="btn btn-primary w-100">登入</button>
            <environment include="Development">
            <button type="button" id="Member1" class="btn btn-outline-secondary">使用者1</button>
            </environment>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
         //最高管理者資料填入
        (function () {
                const btn = document.getElementById('Member1');
            btn?.addEventListener('click', function () {
                        const acc = document.getElementById('UserAccount');
                    const pwd = document.getElementById('UserPassword');
                    if (acc) acc.value = 'dragonknight88';
                    if (pwd) pwd.value = 'Password001@@';
                acc?.focus();
            });
    })();
</script>
}
