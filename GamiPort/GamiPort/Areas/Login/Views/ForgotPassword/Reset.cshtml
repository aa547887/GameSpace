@model GamiPort.Areas.Login.Models.ResetPasswordVM
@{
    ViewData["Title"] = "重設密碼";
}
<div class="container py-4" style="max-width: 520px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h4 class="mb-3">@ViewData["Title"]</h4>
            <p class="text-muted">請設定新的登入密碼。</p>

            <form asp-area="Login" asp-controller="ForgotPassword" asp-action="Reset" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                @* 帶回 Token 與 UserId *@
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Token" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <input asp-for="NewPassword" class="form-control" placeholder="輸入新密碼（8~32 字元）" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="再次輸入新密碼" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">確定更改密碼</button>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-area="Login" asp-controller="Login" asp-action="Login">返回登入</a>
                </div>
            </form>

            <hr class="my-4" />
            <small class="text-muted">
                完成後，舊密碼將會失效；請使用新密碼重新登入。
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
