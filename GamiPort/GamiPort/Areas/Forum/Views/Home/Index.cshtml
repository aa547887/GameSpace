@section Scripts {
    <!-- 只載入口檔，讓它自己 import Vue；不要再額外載 Vue CDN，避免重複 -->
    <script type="module" src="~/js/forum/main.js" asp-append-version="true"></script>
    <!-- ✅ 把搜尋的 JS 放這裡（只在 Home 頁載入） -->
    <script type="module" src="~/js/forum/home-search.js" asp-append-version="true"></script>
    <!-- 除錯用，可先留著，看 Console 是否出現這行 -->
    <script>console.log('[Home/Index] Scripts section loaded ✅');</script>
}
