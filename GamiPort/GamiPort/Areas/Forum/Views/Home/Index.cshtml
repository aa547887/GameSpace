@* Areas/Forum/Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "論壇 / 所有遊戲";
}

@section Styles {
    <!-- 你的 forum.css 可留，但別動版面寬度到破版就好 -->
    <link rel="stylesheet" href="~/css/Forum/forum.css" asp-append-version="true" />
    <style>
        /* 安全的小樣式，避免拉寬整頁造成溢出 */
        html, body, .container, .container-fluid {
            min-width: 0;
        }

        .board-header h2 {
            font-weight: 600;
        }
    </style>
}

<div class="board-header d-flex align-items-center mb-3">
    <h2 class="m-0">論壇 / 所有遊戲YAYAYA</h2>
</div>

<!-- ✅ 搜尋結果 / 論壇列表的掛載容器 -->
<div id="home-content">
    <div id="forums-app">
        <forum-list></forum-list>
    </div>
</div>

<!-- ✅ Vue 掛載點（ID 必須是 #forums-app，和 main.js 對得上） -->
<div id="forums-app">
    <forum-list></forum-list>
</div>

