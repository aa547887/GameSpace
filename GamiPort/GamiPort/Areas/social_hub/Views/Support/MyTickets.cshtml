@model List<GamiPort.Areas.social_hub.Controllers.SupportController.MyTicketRow>
@{
    Layout ??= "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "我的客訴";
}
<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">我的客訴</h5>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-sm">← 返回首頁</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">尚無客訴工單。</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th style="width:100px;">#</th>
                        <th>主旨</th>
                        <th style="width:160px;">最後更新</th>
                        <th style="width:120px;">狀態</th>
                        <th style="width:120px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        var last = t.LastMessageAt ?? t.CreatedAt;
                        <tr>
                            <td>@t.TicketId</td>
                            <td class="text-truncate" style="max-width:460px;">@t.Subject</td>
                            <td>@last.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</td>
                            <td>
                                @if (t.IsClosed)
                                {
                                    <span class="badge bg-secondary">已結單</span>
                                }
                                else
                                {

                                    <span class="badge bg-success">處理中</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-primary"
                                   href="@Url.Action("Ticket", "Support", new { area = "social_hub", id = t.TicketId })">打開</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
