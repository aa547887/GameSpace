@* ===========================================================
   Partial: _ChatPanel
   Model: IEnumerable<SupportMessageVM>  或 你的分頁 ViewModel 中的 Items
   角色：把訊息畫成 左灰(客服)/右藍(使用者) 泡泡 + 預留分頁區
   ===========================================================
@model IEnumerable<GamiPort.Areas.social_hub.Controllers.SupportController.SupportMessageVM>

<div class="gp-chat-list">
    @foreach (var m in Model ?? Enumerable.Empty<GamiPort.Areas.social_hub.Controllers.SupportController.SupportMessageVM>())
    {
        var isMine = (m.SenderUserId != null); // 前台＝使用者就是我
                                               <div class="gp-msg @(isMine ? "mine" : "other")" data-mine="@(isMine.ToString().ToLower())" data-sender="@(isMine ? "user" : "manager")">
                                                   <div class="gp-bubble">
                                                       @Html.Raw(System.Net.WebUtility.HtmlEncode(m.MessageText))
                                                   </div>
                                               </div>
    }
</div>
 *@
