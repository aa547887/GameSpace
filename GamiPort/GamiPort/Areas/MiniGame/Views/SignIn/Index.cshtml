@{
    ViewData["Title"] = "每日簽到";
}

@* Nick鐘新增：模仿 _Layout.cshtml 的邏輯，只有登入後才載入簽到功能 UI *@
@if (User.Identity?.IsAuthenticated == true)
{
    <div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-calendar-check-fill fs-2 me-3 text-success"></i>
        <div>
            <h2 class="mb-0">每日簽到</h2>
            <p class="text-muted mb-0">每天簽到領取點數、寵物經驗與優惠券</p>
        </div>
    </div>

    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle fs-5 me-2"></i>
        <div>此功能開發中，敬請期待...</div>
    </div>

    <!-- 簽到狀態 -->
    <div class="row g-4 mb-4">
        <div class="col-md-12">
            <div class="card border-success">
                <div class="card-body text-center py-5">
                    <i class="bi bi-calendar-check fs-1 text-success mb-3"></i>
                    <h3>今日簽到狀態</h3>
                    <p class="text-muted mb-4">-- / --</p>
                    <button class="btn btn-success btn-lg" disabled>
                        <i class="bi bi-check-circle"></i> 立即簽到
                    </button>
                    <div class="mt-3">
                        <small class="text-muted">連續簽到天數：-- 天</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 月曆型簽到簿 -->
    <div class="row g-4 mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-calendar3"></i> 本月簽到記錄
                </div>
                <div class="card-body">
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-calendar3 fs-1 mb-3"></i>
                        <p>月曆型簽到簿開發中...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 簽到歷史紀錄 -->
    <div class="row g-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-clock-history"></i> 簽到歷史紀錄
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>簽到日期</th>
                                    <th>獲得點數</th>
                                    <th>寵物經驗</th>
                                    <th>商城優惠券</th>
                                    <th>狀態</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5" class="text-center text-muted">暫無簽到記錄</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TODO 清單 -->
    <div class="mt-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-list-check"></i> 待開發功能清單
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>查看月曆型簽到簿並執行簽到</li>
                    <li>查看簽到歷史紀錄（何時簽到與獎品：點數/寵物經驗/商城優惠券）</li>
                    <li>顯示連續簽到天數與獎勵加成</li>
                    <li>簽到提醒通知</li>
                </ul>
            </div>
        </div>
    </div>
    </div>
}
