@using GamiPort.Areas.MemberManagement.ViewModels
@{
    var home = ViewData.Model as HomePageVM; // ← 如果不是小屋頁，會是 null
}

@if (home is null)
{
    @* <!-- 不是小屋頁：這裡放你原本的廣告/預設右欄，或保持空白 -->
    <div class="card mb-3">
        <div class="card-body text-muted small">右側欄（非小屋頁）</div>
    </div> *@
}
else
{
    <!-- 小屋頁右側欄：沿用之前的 _RightRailHome 內容 -->
    <div class="card mb-3">
        <div class="card-body">
            <form asp-area="MemberManagement" asp-controller="MyHome" asp-action="Search" method="get" class="d-flex gap-2">
                <input type="text" name="q" class="form-control" placeholder="輸入暱稱 / HomeCode / UserId">
                <button class="btn btn-outline-primary">送出</button>
            </form>
            @if (TempData["SearchError"] is string err)
            {
                <div class="text-danger small mt-2">@err</div>
            }
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header fw-semibold">我的資訊</div>
        <div class="card-body">
            <div>暱稱：@home.UserNickName</div>
            <div>性別：@(home.Gender == "M" ?"男性":"女性")</div>

            <div class="mt-2">
                <div class="fw-semibold mb-1">自我介紹：</div>
                @if (!home.IsOwner && home.IsPublic == false)
                {
                    <div class="small text-muted">不公開</div>
                }
                else
                {
                <div class="small text-muted">@((string.IsNullOrWhiteSpace(home.IntroText) ? "尚未填寫" : home.IntroText))</div>
                }           
            </div>

            @if (home.IsOwner)
            {
                <div class="mt-3 d-flex gap-2">
                    <a class="btn btn-sm btn-outline-secondary" asp-area="Login" asp-controller="Introduce" asp-action="Edit">自我介紹編輯</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-area="MemberManagement" asp-controller="HomeSetting" asp-action="Edit">小屋編輯</a>
                </div>
            }

            <div class="mt-3">
                <div class="fw-semibold">小屋邀請碼：</div>
                <div class="input-group input-group-sm">
                    <input class="form-control" value="@home.HomeCode" readonly id="homeCodeInput">
                    <button type="button" class="btn btn-outline-secondary"
                            onclick="navigator.clipboard.writeText(document.getElementById('homeCodeInput').value)">
                        複製
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-header">
            <i class="bi bi-people me-1"></i> 好友列表
        </div>

        <div class="card-body">
            @if (!home.IsOwner && home.IsPublic == false)
            {
                 <div class="small text-muted">不公開</div>
            }
            else
            {
            <!-- ===== 已成為好友 ===== -->
            <div class="d-flex align-items-center mb-2">

                <span id="toggle-acc" class="toggle-symbol" role="button"
                      data-bs-toggle="collapse" data-bs-target="#collapse-acc"
                      aria-expanded="true" aria-controls="collapse-acc">▾</span>
                <strong class="me-2">已成為好友 (@Model.FriendAcceptedList.Count)：</strong>
            </div>

            <div id="collapse-acc" class="collapse show">
                @if ((Model.FriendAcceptedList?.Count ?? 0) > 0)
                {
                    <ul class="list-group mb-3">
                        @foreach (var f in Model.FriendAcceptedList)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @f.NickName
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-area="MemberManagement"
                                   asp-controller="MyHome"
                                   asp-action="User"
                                   asp-route-id="@f.UserId">拜訪</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted small mb-3">目前沒有好友</div>
                }
            </div>
            }
            <!-- ===== 待回應 ===== -->
        @if (Model.IsOwner)
        {
            <div class="d-flex align-items-center mb-2 mt-2">

                <span id="toggle-pend" class="toggle-symbol" role="button"
                      data-bs-toggle="collapse" data-bs-target="#collapse-pend"
                      aria-expanded="true" aria-controls="collapse-pend">▾</span>
                <strong class="me-2">待回應 (@Model.FriendPendingList.Count)：</strong>
            </div>

            <div id="collapse-pend" class="collapse show">
                @if ((Model.FriendPendingList?.Count ?? 0) > 0)
                {
                    <ul class="list-group">
                        @foreach (var f in Model.FriendPendingList)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @f.NickName
                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-area="MemberManagement"
                                   asp-controller="MyHome"
                                   asp-action="User"
                                   asp-route-id="@f.UserId">拜訪</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted small">目前沒有待回應</div>
                }
            </div>
         
         }
        </div>
    </div>

    <style>
 
        .toggle-symbol {
            cursor: pointer;
            user-select: none;
            font-size: 1.1rem;
            color: #444;
            line-height: 1;
            transition: color 0.2s ease;
        }

            .toggle-symbol:hover {
                color: #0d6efd;
            }
    </style>

    
        <script>
            // 切換 ▾ / ▸ 符號
            function setToggleBehavior(symbolId, collapseId) {
                const symbol = document.getElementById(symbolId);
                const collapseEl = document.getElementById(collapseId);

                if (!symbol || !collapseEl) return;

                collapseEl.addEventListener('show.bs.collapse', () => symbol.textContent = '▾');
                collapseEl.addEventListener('hide.bs.collapse', () => symbol.textContent = '▸');
            }

            document.addEventListener('DOMContentLoaded', function () {
                setToggleBehavior('toggle-acc', 'collapse-acc');
                setToggleBehavior('toggle-pend', 'collapse-pend');
            });
        </script>
    
    }