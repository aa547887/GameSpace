@model GameSpace.Controllers.LoginController.LoginSuccessVM
@{
    ViewData["Title"] = "登入成功";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<ul class="list-group" style="max-width: 520px;">
    <li class="list-group-item"><strong>ManagerId：</strong> @Model.ManagerId</li>
    <li class="list-group-item"><strong>ManagerName：</strong> @Model.ManagerName</li>
    <li class="list-group-item">
        <strong>RoleName：</strong>
        @if (Model.Positions?.Count > 0)
        {
            @string.Join(", ", Model.Positions)
        }
        else
        {
            <span class="text-muted">（無）</span>
        }
    </li>
</ul>


<p class="mt-3">
    <a asp-controller="Home" asp-action="rqad" class="btn btn-outline-secondary">回首頁(ps.我是bug)</a>
</p>
