@model GameSpace.Controllers.LoginController.LoginInput
@{
    ViewData["Title"] = "管理者登入";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Index" method="post" class="mt-3">
    @Html.AntiForgeryToken()



    <div class="col-12 col-lg-4">
        <!-- lg↑ 1/3 寬，以下滿版 -->
        <div class="mb-3">
            <label asp-for="ManagerAccount" class="form-label"></label>
            <input asp-for="ManagerAccount"
                   class="form-control"
                   id="ManagerAccount"
                   maxlength="32" autocomplete="off" />
            <span asp-validation-for="ManagerAccount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ManagerPassword" class="form-label"></label>
            <input asp-for="ManagerPassword"
                   type="password"
                   class="form-control"
                   id="ManagerPassword"
                   maxlength="32" autocomplete="new-password" />
            <span asp-validation-for="ManagerPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-wrap gap-2">
        <button type="submit" class="btn btn-primary">登入</button>
        <button type="button" id="fillDemoBtn" class="btn btn-outline-secondary">最高管理者資料填入</button>
        <button type="button" id="secondRole" class="btn btn-outline-secondary">使用者與論壇管理者資料填入</button>
        <button type="button" id="shoppingRole" class="btn btn-outline-secondary">商城與購物管理者資料填入</button>
        <button type="button" id="MessageRole" class="btn btn-outline-secondary">論壇管理者(權限僅論壇)</button>
        <button type="button" id="social99" class="btn btn-outline-secondary">管理員99(聊天系統測試用)</button>
        <button type="button" id="social100" class="btn btn-outline-secondary">管理員100(聊天系統測試用)</button>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
         //最高管理者資料填入
        (function () {
            const btn = document.getElementById('fillDemoBtn');
            btn?.addEventListener('click', function () {
                const acc = document.getElementById('ManagerAccount');
                const pwd = document.getElementById('ManagerPassword');
                if (acc) acc.value = 'zhang_zhiming_01';
                if (pwd) pwd.value = 'AdminPass001@@';
                acc?.focus();
            });

          // 使用者與論壇管理者資料填入
            const secondRoleBtn = document.getElementById('secondRole');
            secondRoleBtn?.addEventListener('click', function () {
                const acc = document.getElementById('ManagerAccount');
                const pwd = document.getElementById('ManagerPassword');
                if (acc) acc.value = 'li_xiaohua_02';
                if (pwd) pwd.value = 'SecurePass002#';
                acc?.focus();
            });
                      // 使用者與論壇管理者資料填入
            const shoppingRoleBtn = document.getElementById('shoppingRole');
            shoppingRoleBtn?.addEventListener('click', function () {
                const acc = document.getElementById('ManagerAccount');
                const pwd = document.getElementById('ManagerPassword');
                if (acc) acc.value = 'wang_meiling_03';
                if (pwd) pwd.value = 'StrongPwd003!';
                acc?.focus();
            });

                       // 論壇管理者資料填入
            const MessageRoleBtn = document.getElementById('MessageRole');
            MessageRoleBtn?.addEventListener('click', function () {
                const acc = document.getElementById('ManagerAccount');
                const pwd = document.getElementById('ManagerPassword');
                if (acc) acc.value = 'john_anderson_06';
                if (pwd) pwd.value = 'AdminJohn006^';
                acc?.focus();
            });

                                   // 管理員99填入
        const social99Btn = document.getElementById('social99');
        social99Btn?.addEventListener('click', function () {
            const acc = document.getElementById('ManagerAccount');
            const pwd = document.getElementById('ManagerPassword');
            if (acc) acc.value = 'qu_wenjie_99';
            if (pwd) pwd.value = 'MelodyHero099^';
            acc?.focus();
        });

                  // 管理員100填入
        const social100Btn = document.getElementById('social100');
        social100Btn?.addEventListener('click', function () {
            const acc = document.getElementById('ManagerAccount');
            const pwd = document.getElementById('ManagerPassword');
            if (acc) acc.value = 'kenneth_brown_100';
            if (pwd) pwd.value = 'KennethB100&';
            acc?.focus();
        });

        })();
    </script>
}
