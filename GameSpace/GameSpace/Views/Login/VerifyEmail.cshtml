@model GameSpace.Controllers.LoginController.VerifyEmailInput
@{
    ViewData["Title"] = "電子信箱驗證";
    var devOtp = TempData["DevOtp"] as string;
}

<h2 class="mb-2">@ViewData["Title"]</h2>
<p class="text-muted">我們已傳送 6 碼驗證碼至：<strong>@Model.MaskedEmail</strong></p>

@if (!string.IsNullOrWhiteSpace(devOtp))
{
    <div class="alert alert-warning">
        <strong>開發測試用驗證碼：</strong> @devOtp
    </div>
}

<form asp-action="VerifyEmail" method="post" class="mt-3" autocomplete="off">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3" style="max-width: 260px;">
        <label asp-for="Code" class="form-label"></label>
        <input asp-for="Code"
               class="form-control"
               inputmode="numeric"
               pattern="[0-9]*"
               maxlength="6"
               placeholder="請輸入 6 碼" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">送出驗證</button>
    <a asp-action="Index" class="btn btn-link">返回登入</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
