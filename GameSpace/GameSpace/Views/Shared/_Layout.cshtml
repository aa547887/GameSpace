<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GamiPort</title>

    <link rel="icon" type="image/x-icon" href="~/icon/ImageToStl.com_Gamiport.ico" asp-append-version="true" />

    <!-- Bootstrap 5 & FontAwesome -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/stylecol.css" rel="stylesheet" />

    

    @RenderSection("Styles", required: false)
</head>
<body id="top" class="d-flex flex-column vh-100">

    <!-- 第一層 Topbar -->
    @Html.Partial("_TopbarLevel1")

    <div class="d-flex flex-grow-1 position-relative">

        <!-- Sidebar -->
        <div id="sidebar" class="bg-dark text-white d-flex flex-column">
            <div class="p-3 flex-grow-1 d-flex flex-column">
                @Html.Partial("_Sidebar")
            </div>
        </div>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="flex-grow-1 d-flex flex-column overflow-hidden ms-0">
            <!-- 第二層 Topbar -->
            @* @Html.Partial("_TopbarLevel2") *@

            <!-- Main Content -->
            <div class="flex-grow-1 overflow-auto p-3">
                @RenderBody()
            </div>

            <!-- Footer -->
            @Html.Partial("_Footer")

        </div>

    </div>

    <!-- Toggle Button 左下固定 -->
    <button id="sidebarToggle" class="btn btn-primary position-fixed bottom-0 start-0 m-3">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Scroll to Top Button 右下固定 -->
    <a class="btn btn-primary rounded-circle position-fixed bottom-0 end-0 m-3" href="#top"
       style="width:45px;height:45px;">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- 一定要在 supportHub.js 之前載入 -->
    <script src='@("https://cdn.jsdelivr.net/npm/@microsoft/signalr@8/dist/browser/signalr.min.js")'></script>

    <!-- 2) 指定要連的前台 Hub（跨站） -->
    <script>
        // ★ 指向「前台」:7160 的 SupportHub
        window.GP_SUPPORT_HUB_URL = "https://localhost:7160/hubs/support";
    </script>

    <!-- 3) 載入前端單例：supportHub.js（建議也從前台拿，避免版本不一致） -->
    <script src="https://localhost:7160/js/social_hub/supportHub.js"></script>

    <!-- Bootstrap 5 JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/font-awesome/js/all.min.js"></script>
    <script src="~/js/test.js"></script>

    

    @RenderSection("Scripts", required: false)
</body>

</html>


