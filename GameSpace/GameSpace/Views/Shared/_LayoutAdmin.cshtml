@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
@* _LayoutAdmin.cshtml *@
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>GamiPort</title>
    <link rel="icon" type="image/x-icon" href="~/icon/ImageToStl.com_Gamiport.ico" asp-append-version="true" />
    <!-- Bootstrap 5 & FontAwesome -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/stylecol.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body id="top" class="d-flex flex-column vh-100">

    <!-- 第一層 Topbar（含 GameSpace 返回首頁、使用者選單） -->
    @await Html.PartialAsync("_TopbarLevel1")

    <div class="d-flex flex-grow-1 position-relative">

        <!-- Sidebar（依權限顯示各系統） -->
        <aside id="sidebar" class="bg-dark text-white d-flex flex-column">
            <div class="p-3 flex-grow-1 d-flex flex-column">
                @await Html.PartialAsync("_Sidebar")
            </div>
        </aside>

        <!-- Content Wrapper -->
        <section id="content-wrapper" class="flex-grow-1 d-flex flex-column overflow-hidden ms-0">

            <!-- 第二層 Topbar（可放頁內操作/麵包屑等） -->
            @await Html.PartialAsync("_TopbarLevel2")

            <!-- Main Content -->
            <main class="flex-grow-1 overflow-auto p-3">
                @RenderBody()
            </main>

            <!-- Footer -->
            @await Html.PartialAsync("_Footer")

        </section>

    </div>

    <!-- Toggle Button（左下固定：摺疊側欄） -->
    <button id="sidebarToggle" class="btn btn-primary position-fixed bottom-0 start-0 m-3" type="button" aria-label="Toggle sidebar">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Scroll to Top Button（右下固定） -->
    <a class="btn btn-primary rounded-circle position-fixed bottom-0 end-0 m-3" href="#top" style="width:45px;height:45px;" aria-label="Scroll to top">
        <i class="fas fa-angle-up"></i>
    </a>

    @* 聊天功能（需要時再啟用）
    @* @await Html.PartialAsync("_Chat")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>
    <script src="~/lib/social_hub/js/chat.js"></script>
    <link href="~/lib/social_hub/css/chat.css" rel="stylesheet" /> *@

    <!-- Bootstrap 5 JS & 其他 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/font-awesome/js/all.min.js"></script>
    <script src="~/js/test.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
