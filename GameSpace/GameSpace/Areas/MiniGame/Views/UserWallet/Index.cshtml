@{
    ViewData["Title"] = "我的錢包";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-wallet mr-2"></i>我的錢包
        </h1>
        <div class="d-flex">
            <span class="badge badge-success mr-2">
                <i class="fas fa-circle text-success"></i> 正常
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">點數餘額</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">1,500</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">優惠券</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">5</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-ticket-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">電子券</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">3</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gift fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">本月獲得</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">800</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <ul class="nav nav-tabs card-header-tabs" id="walletTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="points-tab" data-toggle="tab" href="#points" role="tab">
                                <i class="fas fa-coins"></i> 點數記錄
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="coupons-tab" data-toggle="tab" href="#coupons" role="tab">
                                <i class="fas fa-ticket-alt"></i> 我的優惠券
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="evouchers-tab" data-toggle="tab" href="#evouchers" role="tab">
                                <i class="fas fa-gift"></i> 我的電子券
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="walletTabsContent">
                        <div class="tab-pane fade show active" id="points" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="pointsTable">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>時間</th>
                                            <th>類型</th>
                                            <th>金額</th>
                                            <th>餘額</th>
                                            <th>備註</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>2024-01-15 14:30</td>
                                            <td><span class="badge badge-success">簽到獎勵</span></td>
                                            <td class="text-success">+10</td>
                                            <td>1,500</td>
                                            <td>每日簽到</td>
                                        </tr>
                                        <tr>
                                            <td>2024-01-15 13:45</td>
                                            <td><span class="badge badge-info">遊戲獎勵</span></td>
                                            <td class="text-success">+50</td>
                                            <td>1,490</td>
                                            <td>小遊戲高分</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="coupons" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="couponsTable">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>優惠券名稱</th>
                                            <th>折扣</th>
                                            <th>狀態</th>
                                            <th>到期日</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>滿額折扣券</td>
                                            <td>9折</td>
                                            <td><span class="badge badge-success">可使用</span></td>
                                            <td>2024-02-15</td>
                                            <td><button class="btn btn-sm btn-primary">使用</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="evouchers" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="evouchersTable">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>電子券名稱</th>
                                            <th>面額</th>
                                            <th>狀態</th>
                                            <th>到期日</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>現金券</td>
                                            <td>NT$ 100</td>
                                            <td><span class="badge badge-info">未使用</span></td>
                                            <td>2024-03-15</td>
                                            <td><button class="btn btn-sm btn-info">查看</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $("#pointsTable, #couponsTable, #evouchersTable").DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
            },
            "pageLength": 10,
            "order": [[ 0, "desc" ]]
        });
    });
</script>
