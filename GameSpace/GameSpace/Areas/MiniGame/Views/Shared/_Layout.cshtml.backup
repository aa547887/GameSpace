<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GamiPort - MiniGame Area</title>

    <link rel="icon" type="image/x-icon" href="~/icon/ImageToStl.com_Gamiport.ico" asp-append-version="true" />
    
    <!-- Bootstrap 5 & FontAwesome -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    
    <!-- 共用樣式（全域 wwwroot） -->
    <link href="~/css/site.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body class="sb-nav-fixed">

    <!-- Topbar -->
    @Html.Partial("_TopbarLevel1")

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <!-- Sidebar -->
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    @{
                        var sidebar = (string?)ViewBag.Sidebar;
                        if (string.IsNullOrEmpty(sidebar))
                        {
                            sidebar = Context.Request.Query["sidebar"];
                        }

                        if (string.Equals(sidebar, "admin", StringComparison.OrdinalIgnoreCase))
                        {
                            @await Html.PartialAsync("_Sidebar.Admin")
                        }
                        else
                        {
                            @await Html.PartialAsync("_Sidebar.Member")
                        }
                    }
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">登入身份：</div>
                    <div class="small">@(User.Identity?.Name ?? "訪客")</div>
                </div>
            </nav>
        </div>

        <!-- Content Wrapper -->
        <div id="layoutSidenav_content">
            <main>
                <!-- Page Header -->
                @Html.Partial("_TopbarLevel2")

                <!-- Main Content -->
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>

                <!-- Footer -->
                @Html.Partial("_Footer")
            </main>
        </div>
    </div>

    
    
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap 5 JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/font-awesome/js/all.min.js"></script>
    <script src="~/js/test.js"></script>


    <!-- 動態切換左側側欄的程式 -->
    <script>
        $(document).on("click", ".js-load-sidebar", function (e) {
            e.preventDefault();
            var url = $(this).attr("href");
            if (!url) return;

            $("#leftSidebar").load(url);
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
