<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameSpace MiniGame Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- SB Admin CSS -->
    <link href="~/lib/sb-admin/css/sb-admin-2.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet">
    
    <!-- DataTables CSS -->
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        .sidebar-brand-text {
            font-size: 1.2rem;
            font-weight: 600;
        }
        .nav-item .nav-link {
            color: #858796;
        }
        .nav-item .nav-link:hover {
            color: #5a5c69;
        }
        .nav-item .nav-link.active {
            color: #4e73df;
        }
        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
        }
        .table th {
            background-color: #f8f9fc;
            border-top: none;
        }
        .btn-group .btn {
            margin-right: 2px;
        }
        .btn-group .btn:last-child {
            margin-right: 0;
        }
        /* 無障礙設計 */
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }
        .focus-visible {
            outline: 2px solid #4e73df;
            outline-offset: 2px;
        }
        /* 響應式設計優化 */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            .sidebar.show {
                transform: translateX(0);
            }
        }
    </style>
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar" role="navigation" aria-label="主要導航">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "AdminDashboard")" aria-label="MiniGame Admin 首頁">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-gamepad" aria-hidden="true"></i>
                </div>
                <div class="sidebar-brand-text mx-3">MiniGame Admin</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminDashboard" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminDashboard")" aria-label="儀表板">
                    <i class="fas fa-fw fa-tachometer-alt" aria-hidden="true"></i>
                    <span>儀表板</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                用戶管理
            </div>

            <!-- Nav Item - Users -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminUser" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminUser")" aria-label="用戶管理">
                    <i class="fas fa-fw fa-users" aria-hidden="true"></i>
                    <span>用戶管理</span>
                </a>
            </li>

            <!-- Nav Item - Wallet -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminWallet" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminWallet")" aria-label="點數管理">
                    <i class="fas fa-fw fa-wallet" aria-hidden="true"></i>
                    <span>點數管理</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                遊戲系統
            </div>

            <!-- Nav Item - Sign In -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminSignIn" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminSignIn")" aria-label="簽到管理">
                    <i class="fas fa-fw fa-calendar-check" aria-hidden="true"></i>
                    <span>簽到管理</span>
                </a>
            </li>

            <!-- Nav Item - Pet -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminPet" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminPet")" aria-label="寵物管理">
                    <i class="fas fa-fw fa-paw" aria-hidden="true"></i>
                    <span>寵物管理</span>
                </a>
            </li>

            <!-- Nav Item - MiniGame -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminMiniGame" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminMiniGame")" aria-label="遊戲管理">
                    <i class="fas fa-fw fa-gamepad" aria-hidden="true"></i>
                    <span>遊戲管理</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                優惠系統
            </div>

            <!-- Nav Item - Coupon -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminCoupon" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminCoupon")" aria-label="優惠券管理">
                    <i class="fas fa-fw fa-ticket-alt" aria-hidden="true"></i>
                    <span>優惠券管理</span>
                </a>
            </li>

            <!-- Nav Item - EVoucher -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminEVoucher" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminEVoucher")" aria-label="電子禮券管理">
                    <i class="fas fa-fw fa-gift" aria-hidden="true"></i>
                    <span>電子禮券管理</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                系統管理
            </div>

            <!-- Nav Item - Manager -->
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminManager" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "AdminManager")" aria-label="管理者管理">
                    <i class="fas fa-fw fa-users-cog" aria-hidden="true"></i>
                    <span>管理者管理</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle" aria-label="切換側邊欄">
                    <i class="fas fa-angle-left" aria-hidden="true"></i>
                </button>
            </div>
        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" role="navigation" aria-label="頂部導航">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3" aria-label="切換側邊欄">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="搜尋..." aria-label="搜尋" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" aria-label="執行搜尋">
                                    <i class="fas fa-search fa-sm" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                        <li class="nav-item dropdown no-arrow d-sm-none">
                            <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-search fa-fw" aria-hidden="true"></i>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in" aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search" role="search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small" placeholder="搜尋..." aria-label="搜尋" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button" aria-label="執行搜尋">
                                                <i class="fas fa-search fa-sm" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>

                        <!-- Nav Item - Alerts -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bell fa-fw" aria-hidden="true"></i>
                                <!-- Counter - Alerts -->
                                <span class="badge badge-danger badge-counter">3+</span>
                            </a>
                            <!-- Dropdown - Alerts -->
                            <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="alertsDropdown">
                                <h6 class="dropdown-header">
                                    通知中心
                                </h6>
                                <a class="dropdown-item d-flex align-items-center" href="#">
                                    <div class="mr-3">
                                        <div class="icon-circle bg-primary">
                                            <i class="fas fa-file-alt text-white" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="small text-gray-500">December 12, 2019</div>
                                        <span class="font-weight-bold">新的月報表已準備就緒！</span>
                                    </div>
                                </a>
                                <a class="dropdown-item text-center small text-gray-500" href="#">顯示所有通知</a>
                            </div>
                        </li>

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">管理員</span>
                                <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60" alt="管理員頭像">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400" aria-hidden="true"></i>
                                    個人資料
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400" aria-hidden="true"></i>
                                    設定
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400" aria-hidden="true"></i>
                                    活動記錄
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400" aria-hidden="true"></i>
                                    登出
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; GameSpace MiniGame Admin @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top" aria-label="回到頂部">
        <i class="fas fa-angle-up" aria-hidden="true"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">準備登出？</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="關閉">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">選擇「登出」如果您準備結束當前的會話。</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">取消</button>
                    <a class="btn btn-primary" href="@Url.Action("Logout", "Account")">登出</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/lib/sb-admin/js/sb-admin-2.min.js"></script>

    <!-- DataTables JavaScript -->
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>

    <!-- Chart.js -->
    <script src="~/lib/chart.js/Chart.min.js"></script>

    <!-- 自定義JavaScript -->
    <script>
        // 確保所有JavaScript依賴都已載入
        document.addEventListener('DOMContentLoaded', function() {
            // 初始化DataTables
            if (typeof $.fn.DataTable !== 'undefined') {
                var dataTables = document.querySelectorAll('.data-table');
                dataTables.forEach(function(table) {
                    $(table).DataTable({
                        language: {
                            url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json'
                        },
                        responsive: true,
                        pageLength: 10,
                        order: [[0, 'desc']]
                    });
                });
            }
            
            // 鍵盤導航支援
            var interactiveElements = document.querySelectorAll('a, button');
            interactiveElements.forEach(function(element) {
                element.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        element.click();
                    }
                });
            });
            
            // 無障礙設計支援
            var formElements = document.querySelectorAll('input, button, select, textarea');
            formElements.forEach(function(element) {
                element.addEventListener('focus', function() {
                    element.classList.add('focus-visible');
                });
                element.addEventListener('blur', function() {
                    element.classList.remove('focus-visible');
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


