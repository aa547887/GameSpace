<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniGame 後台管理系統</title>
    
    <!-- Bootstrap 5 & FontAwesome -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/stylecol.css" rel="stylesheet" />
    
    @RenderSection("Styles", required: false)
</head>
<body id="top" class="d-flex flex-column vh-100">
    
    <!-- 第一層 Topbar -->
    <partial name="_TopbarLevel1" />
    
    <div class="d-flex flex-grow-1 position-relative">
        
        <!-- Sidebar -->
        <div id="sidebar" class="bg-dark text-white d-flex flex-column">
            <div class="p-3 flex-grow-1 d-flex flex-column">
                <partial name="_Sidebar" />
            </div>
        </div>
        
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="flex-grow-1 d-flex flex-column overflow-hidden ms-0">
            
            <!-- Main Content -->
            <div class="flex-grow-1 overflow-auto p-3">
                @RenderBody()
            </div>
            
            <!-- Footer -->
            <partial name="_Footer" />
            
        </div>
        
    </div>
    
    <!-- Toggle Button 左下固定 -->
    <button id="sidebarToggle" class="btn btn-primary position-fixed bottom-0 start-0 m-3">
        <i class="fas fa-bars"></i>
    </button>
    
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/test.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
