@model GameSpace.Areas.MiniGame.Models.AdminMiniGameRecordsViewModel
@{
    ViewData["Title"] = "查詢會員遊戲紀錄";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">查詢會員遊戲紀錄</h1>
    </div>

    <!-- 搜索區域 -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">搜索條件</h6>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="QueryRecords">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="userId">用戶ID</label>
                                    <input type="number" class="form-control" id="userId" name="userId" 
                                           value="@Model.UserId" placeholder="輸入用戶ID">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="userName">用戶名稱</label>
                                    <input type="text" class="form-control" id="userName" name="userName" 
                                           value="@Model.UserName" placeholder="輸入用戶名稱">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="gameName">遊戲名稱</label>
                                    <input type="text" class="form-control" id="gameName" name="gameName" 
                                           value="@Model.GameName" placeholder="輸入遊戲名稱">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <i class="fas fa-search"></i> 搜索
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 統計信息 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總遊戲次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GameRecords.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">勝利次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GameRecords.Count(r => r.IsWin)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-trophy fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">失敗次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GameRecords.Count(r => !r.IsWin)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">淨收益</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GameRecords.Sum(r => r.PointsEarned)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 遊戲紀錄列表 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">遊戲紀錄列表</h6>
                </div>
                <div class="card-body">
                    @if (Model.GameRecords.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>遊戲時間</th>
                                        <th>用戶ID</th>
                                        <th>用戶名稱</th>
                                        <th>遊戲名稱</th>
                                        <th>遊戲結果</th>
                                        <th>獲得點數</th>
                                        <th>遊戲時長</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.GameRecords.OrderByDescending(r => r.GameTime))
                                    {
                                        <tr>
                                            <td>@record.GameTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                            <td>@record.UserId</td>
                                            <td>@record.UserName</td>
                                            <td class="font-weight-bold">@record.GameName</td>
                                            <td>
                                                @if (record.IsWin)
                                                {
                                                    <span class="badge badge-success">勝利</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">失敗</span>
                                                }
                                            </td>
                                            <td class="@(record.PointsEarned > 0 ? "text-success" : "text-danger")">
                                                @(record.PointsEarned > 0 ? "+" : "")@record.PointsEarned
                                            </td>
                                            <td>@record.GameDuration 秒</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="viewGameDetails(@record.Id)">
                                                    <i class="fas fa-eye"></i> 詳情
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-gamepad fa-3x text-gray-300 mb-3"></i>
                            <p class="text-gray-500">沒有找到符合條件的遊戲記錄</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function viewGameDetails(recordId) {
        // 這裡可以添加查看遊戲詳情的功能
        alert('查看遊戲記錄詳情: ' + recordId);
    }
</script>
