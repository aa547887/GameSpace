@model GameSpace.Areas.MiniGame.Models.AdminMiniGameRulesViewModel
@{
    ViewData["Title"] = "小遊戲規則設定";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">小遊戲規則設定</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- 小遊戲規則設定表單 -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">小遊戲規則設定</h6>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="SetGameRule">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">遊戲名稱</label>
                                    <input type="text" class="form-control" id="name" name="name" 
                                           value="@Model.MiniGameRule.Name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="entryCost">入場費用</label>
                                    <input type="number" class="form-control" id="entryCost" name="entryCost" 
                                           value="@Model.MiniGameRule.EntryCost" min="0" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="winReward">勝利獎勵</label>
                                    <input type="number" class="form-control" id="winReward" name="winReward" 
                                           value="@Model.MiniGameRule.WinReward" min="0" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="losePenalty">失敗懲罰</label>
                                    <input type="number" class="form-control" id="losePenalty" name="losePenalty" 
                                           value="@Model.MiniGameRule.LosePenalty" min="0" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="maxPlayers">最大玩家數</label>
                                    <input type="number" class="form-control" id="maxPlayers" name="maxPlayers" 
                                           value="@Model.MiniGameRule.MaxPlayers" min="1" max="10" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="isActive">是否啟用</label>
                                    <select class="form-control" id="isActive" name="isActive">
                                        <option value="true" @(Model.MiniGameRule.IsActive ? "selected" : "")>啟用</option>
                                        <option value="false" @(!Model.MiniGameRule.IsActive ? "selected" : "")>停用</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description">遊戲描述</label>
                            <textarea class="form-control" id="description" name="description" rows="4">@Model.MiniGameRule.Description</textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> 儲存設定
                            </button>
                            <a href="@Url.Action("Index", "AdminMiniGame")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> 返回列表
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 規則說明 -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">規則說明</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6><i class="fas fa-gamepad"></i> 小遊戲系統說明</h6>
                        <ul class="mb-0">
                            <li><strong>入場費用：</strong>參與遊戲需要消耗的點數</li>
                            <li><strong>勝利獎勵：</strong>獲勝後可獲得的點數</li>
                            <li><strong>失敗懲罰：</strong>失敗後額外扣除的點數</li>
                            <li><strong>最大玩家數：</strong>單場遊戲的最大參與人數</li>
                            <li><strong>是否啟用：</strong>控制遊戲是否開放使用</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 當前規則狀態 -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">當前規則狀態</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>遊戲名稱</th>
                                    <th>入場費用</th>
                                    <th>勝利獎勵</th>
                                    <th>失敗懲罰</th>
                                    <th>最大玩家數</th>
                                    <th>狀態</th>
                                    <th>最後更新時間</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="font-weight-bold">@Model.MiniGameRule.Name</td>
                                    <td class="text-danger">@Model.MiniGameRule.EntryCost</td>
                                    <td class="text-success">@Model.MiniGameRule.WinReward</td>
                                    <td class="text-warning">@Model.MiniGameRule.LosePenalty</td>
                                    <td class="text-info">@Model.MiniGameRule.MaxPlayers</td>
                                    <td>
                                        @if (Model.MiniGameRule.IsActive)
                                        {
                                            <span class="badge badge-success">啟用</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">停用</span>
                                        }
                                    </td>
                                    <td>@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
