@{
    ViewData["Title"] = "遊戲規則設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-cog mr-2"></i>遊戲規則設定
        </h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> 返回列表
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-gamepad"></i> 遊戲規則配置
                    </h6>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="maxScore">最高分數</label>
                            <input type="number" class="form-control" id="maxScore" value="10000" min="1">
                        </div>
                        
                        <div class="form-group">
                            <label for="timeLimit">時間限制 (秒)</label>
                            <input type="number" class="form-control" id="timeLimit" value="60" min="1">
                        </div>
                        
                        <div class="form-group">
                            <label for="pointsPerScore">每分數對應點數</label>
                            <input type="number" class="form-control" id="pointsPerScore" value="0.1" step="0.1" min="0">
                        </div>
                        
                        <div class="form-group">
                            <label for="dailyLimit">每日遊戲次數限制</label>
                            <input type="number" class="form-control" id="dailyLimit" value="10" min="1">
                        </div>
                        
                        <div class="form-group">
                            <label for="bonusThreshold">獎勵門檻分數</label>
                            <input type="number" class="form-control" id="bonusThreshold" value="1000" min="0">
                        </div>
                        
                        <div class="form-group">
                            <label for="bonusMultiplier">獎勵倍數</label>
                            <input type="number" class="form-control" id="bonusMultiplier" value="2" step="0.1" min="1">
                        </div>
                        
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="enableLeaderboard" checked>
                                <label class="form-check-label" for="enableLeaderboard">
                                    啟用排行榜
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> 儲存設定
                            </button>
                            <button type="button" class="btn btn-secondary ml-2">
                                <i class="fas fa-undo"></i> 重置
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle"></i> 規則說明
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> 分數越高獲得點數越多</li>
                        <li><i class="fas fa-check text-success"></i> 有時間限制增加挑戰性</li>
                        <li><i class="fas fa-check text-success"></i> 每日有遊戲次數限制</li>
                        <li><i class="fas fa-exclamation-triangle text-warning"></i> 修改後立即生效</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
$(document).ready(function() {
    // 載入現有設定
    loadCurrentSettings();
    
    // 表單提交處理
    $("#gameRulesForm").on("submit", function(e) {
        e.preventDefault();
        saveSettings();
    });
});

function loadCurrentSettings() {
    $.ajax({
        url: "@Url.Action("GetGameRules", "AdminMiniGame")",
        type: "GET",
        success: function(response) {
            if (response.success) {
                var rules = response.data;
                $("#maxScore").val(rules.maxScore);
                $("#timeLimit").val(rules.timeLimit);
                $("#pointsPerScore").val(rules.pointsPerScore);
                $("#dailyLimit").val(rules.dailyLimit);
                $("#bonusThreshold").val(rules.bonusThreshold);
                $("#bonusMultiplier").val(rules.bonusMultiplier);
                $("#enableLeaderboard").prop("checked", rules.enableLeaderboard);
            }
        },
        error: function() {
            console.log("載入設定失敗，使用預設值");
        }
    });
}

function saveSettings() {
    var formData = {
        maxScore: $("#maxScore").val(),
        timeLimit: $("#timeLimit").val(),
        pointsPerScore: $("#pointsPerScore").val(),
        dailyLimit: $("#dailyLimit").val(),
        bonusThreshold: $("#bonusThreshold").val(),
        bonusMultiplier: $("#bonusMultiplier").val(),
        enableLeaderboard: $("#enableLeaderboard").is(":checked")
    };
    
    // 驗證表單
    if (!validateForm(formData)) {
        return;
    }
    
    if (!confirm("確定要儲存遊戲規則嗎？此操作將影響所有遊戲。")) {
        return;
    }
    
    $.ajax({
        url: "@Url.Action("UpdateGameRules", "AdminMiniGame")",
        type: "POST",
        data: formData,
        success: function(response) {
            if (response.success) {
                alert("遊戲規則已成功更新！");
                showSuccessMessage("設定已儲存");
            } else {
                alert("儲存失敗: " + response.message);
            }
        },
        error: function() {
            alert("儲存失敗，請稍後再試");
        }
    });
}

function validateForm(data) {
    if (data.maxScore < 1) {
        alert("最高分數必須大於 0");
        return false;
    }
    
    if (data.timeLimit < 1) {
        alert("時間限制必須大於 0");
        return false;
    }
    
    if (data.pointsPerScore < 0) {
        alert("每分數對應點數不能為負數");
        return false;
    }
    
    if (data.dailyLimit < 1) {
        alert("每日遊戲次數限制必須大於 0");
        return false;
    }
    
    if (data.bonusThreshold < 0) {
        alert("獎勵門檻分數不能為負數");
        return false;
    }
    
    if (data.bonusMultiplier < 1) {
        alert("獎勵倍數必須大於等於 1");
        return false;
    }
    
    return true;
}

function resetForm() {
    if (confirm("確定要重置為預設值嗎？")) {
        $("#maxScore").val(10000);
        $("#timeLimit").val(60);
        $("#pointsPerScore").val(0.1);
        $("#dailyLimit").val(10);
        $("#bonusThreshold").val(1000);
        $("#bonusMultiplier").val(2);
        $("#enableLeaderboard").prop("checked", true);
    }
}

function showSuccessMessage(message) {
    // 顯示成功訊息
    var alertHtml = "<div class=\"alert alert-success alert-dismissible fade show\" role=\"alert\">" +
                   "<i class=\"fas fa-check-circle\"></i> " + message +
                   "<button type=\"button\" class=\"close\" data-dismiss=\"alert\" aria-label=\"Close\">" +
                   "<span aria-hidden=\"true\">&times;</span></button></div>";
    
    $(".container-fluid").prepend(alertHtml);
    
    // 3秒後自動隱藏
    setTimeout(function() {
        $(".alert").fadeOut();
    }, 3000);
}
</script>

