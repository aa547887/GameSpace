@model GameSpace.Areas.MiniGame.Models.AdminMiniGameIndexViewModel
@{
    ViewData["Title"] = "小遊戲系統管理";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">小遊戲系統管理</h1>
    </div>

    <!-- 統計卡片 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總遊戲次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GameRecords.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">勝利次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GameRecords.Count(r => r.IsWin)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-trophy fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">失敗次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GameRecords.Count(r => !r.IsWin)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">淨收益</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GameRecords.Sum(r => r.PointsEarned)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 功能按鈕區域 -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">功能選單</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("GameRules", "AdminMiniGame")" class="btn btn-primary btn-block">
                                <i class="fas fa-cog"></i><br>
                                小遊戲規則設定
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("QueryRecords", "AdminMiniGame")" class="btn btn-success btn-block">
                                <i class="fas fa-search"></i><br>
                                查詢會員遊戲紀錄
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("GameReport", "AdminMiniGame")" class="btn btn-info btn-block">
                                <i class="fas fa-chart-bar"></i><br>
                                遊戲統計報表
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("GameSettings", "AdminMiniGame")" class="btn btn-warning btn-block">
                                <i class="fas fa-tools"></i><br>
                                遊戲系統設定
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 最近遊戲記錄 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">最近遊戲記錄</h6>
                </div>
                <div class="card-body">
                    @if (Model.GameRecords.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>遊戲時間</th>
                                        <th>用戶ID</th>
                                        <th>用戶名稱</th>
                                        <th>遊戲名稱</th>
                                        <th>遊戲結果</th>
                                        <th>獲得點數</th>
                                        <th>遊戲時長</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.GameRecords.OrderByDescending(r => r.GameTime).Take(20))
                                    {
                                        <tr>
                                            <td>@record.GameTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                            <td>@record.UserId</td>
                                            <td>@record.UserName</td>
                                            <td class="font-weight-bold">@record.GameName</td>
                                            <td>
                                                @if (record.IsWin)
                                                {
                                                    <span class="badge badge-success">勝利</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">失敗</span>
                                                }
                                            </td>
                                            <td class="@(record.PointsEarned > 0 ? "text-success" : "text-danger")">
                                                @(record.PointsEarned > 0 ? "+" : "")@record.PointsEarned
                                            </td>
                                            <td>@record.GameDuration 秒</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="viewGameDetails(@record.Id)">
                                                    <i class="fas fa-eye"></i> 詳情
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-gamepad fa-3x text-gray-300 mb-3"></i>
                            <p class="text-gray-500">暫無遊戲記錄</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function viewGameDetails(recordId) { window.location.href = `/MiniGame/AdminMiniGame/ViewGameRecords?id=${recordId}`; }
</script>

