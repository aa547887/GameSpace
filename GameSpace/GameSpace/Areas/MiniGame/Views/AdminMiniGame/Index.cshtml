@{
    ViewData["Title"] = "小遊戲系統管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- 頁面標題 -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-gamepad me-2 text-primary"></i>小遊戲系統管理
        </h1>
        <div class="d-flex">
            <a href="@Url.Action("GameRules")" class="btn btn-primary me-2 shadow-sm">
                <i class="fas fa-cog"></i> 遊戲規則設定
            </a>
            <a href="@Url.Action("QueryRecords")" class="btn btn-success shadow-sm">
                <i class="fas fa-history"></i> 查看遊戲紀錄
            </a>
        </div>
    </div>

    <!-- 統計卡片 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-primary shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">今日遊戲次數</div>
                            <div class="h5 mb-0 fw-bold text-gray-800" id="todayGames">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-success">+5.2%</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-success shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">勝利次數</div>
                            <div class="h5 mb-0 fw-bold text-gray-800" id="wins">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-success">+12</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-trophy fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-info shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">平均分數</div>
                            <div class="h5 mb-0 fw-bold text-gray-800" id="avgScore">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-success">+8.5</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-warning shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">活躍玩家</div>
                            <div class="h5 mb-0 fw-bold text-gray-800" id="activePlayers">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-success">+15</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 搜尋和篩選區域 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-search"></i> 搜尋與篩選
                    </h6>
                </div>
                <div class="card-body">
                    <form id="searchForm" class="row g-3">
                        <div class="col-md-3">
                            <label for="searchType" class="form-label">搜尋類型</label>
                            <select class="form-select" id="searchType" name="searchType">
                                <option value="all">全部記錄</option>
                                <option value="wins">勝利記錄</option>
                                <option value="losses">失敗記錄</option>
                                <option value="highScore">高分記錄</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="userId" class="form-label">會員ID</label>
                            <input type="text" class="form-control" id="userId" name="userId" placeholder="輸入會員ID">
                        </div>
                        <div class="col-md-3">
                            <label for="dateFrom" class="form-label">開始日期</label>
                            <input type="date" class="form-control" id="dateFrom" name="dateFrom">
                        </div>
                        <div class="col-md-3">
                            <label for="dateTo" class="form-label">結束日期</label>
                            <input type="date" class="form-control" id="dateTo" name="dateTo">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> 搜尋
                            </button>
                            <button type="button" class="btn btn-secondary" id="resetSearch">
                                <i class="fas fa-undo"></i> 重置
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 資料表格 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-table"></i> 遊戲記錄
                    </h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">操作選項</div>
                            <a class="dropdown-item" href="#" id="exportData">
                                <i class="fas fa-download fa-sm fa-fw me-2 text-gray-400"></i>
                                匯出資料
                            </a>
                            <a class="dropdown-item" href="#" id="refreshData">
                                <i class="fas fa-sync fa-sm fa-fw me-2 text-gray-400"></i>
                                重新整理
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="gameTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>記錄ID</th>
                                    <th>會員ID</th>
                                    <th>遊戲類型</th>
                                    <th>分數</th>
                                    <th>結果</th>
                                    <th>獎勵點數</th>
                                    <th>遊戲時間</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody id="gameTableBody">
                                <!-- 動態載入資料 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function() {
        // 初始化 DataTable
        var table = $("#gameTable").DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
            },
            "pageLength": 25,
            "order": [[6, "desc"]],
            "columnDefs": [
                { "orderable": false, "targets": 7 }
            ],
            "processing": true,
            "serverSide": false,
            "ajax": {
                "url": "@Url.Action("GetGameData")",
                "type": "POST"
            }
        });
        
        // 載入統計數據
        loadStatistics();
        
        // 搜尋表單提交
        $("#searchForm").on("submit", function(e) {
            e.preventDefault();
            var formData = $(this).serialize();
            // 執行搜尋邏輯
            console.log("搜尋條件:", formData);
        });
        
        // 重置搜尋
        $("#resetSearch").on("click", function() {
            $("#searchForm")[0].reset();
            table.search("").draw();
        });
        
        // 匯出資料
        $("#exportData").on("click", function() {
            // 執行匯出邏輯
            console.log("匯出資料");
        });
        
        // 重新整理
        $("#refreshData").on("click", function() {
            table.ajax.reload();
            loadStatistics();
        });
    });
    
    function loadStatistics() {
        // 模擬載入統計數據
        setTimeout(function() {
            $("#todayGames").text("234");
            $("#wins").text("156");
            $("#avgScore").text("1,234");
            $("#activePlayers").text("89");
        }, 1000);
    }
</script>




