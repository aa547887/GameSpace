@model GameSpace.Areas.MiniGame.Models.ViewModels.SignInRuleInputModel
@{
    ViewData["Title"] = "編輯簽到規則";
}

@await Html.PartialAsync("_MiniGameAdminTabs")

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-edit me-2"></i>編輯簽到規則</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditSignInRule" method="post">
                @Html.AntiForgeryToken()
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>注意：</strong>修改規則後，將影響後續簽到的獎勵發放。已簽到的紀錄不受影響。
                </div>

                <!-- 簽到天數（唯讀） -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="SignInDay" class="form-label">連續簽到天數</label>
                        <input asp-for="SignInDay" type="number" class="form-control" readonly />
                        <small class="text-muted">此欄位不可修改</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IsActive" class="form-label">是否啟用</label>
                        <div class="form-check form-switch mt-2">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                啟用此規則
                            </label>
                        </div>
                        <small class="text-muted">停用後，該天數的簽到將不會發放獎勵</small>
                    </div>
                </div>

                <!-- 獎勵設定 -->
                <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-gift me-2"></i>獎勵內容</h5>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Points" class="form-label">獎勵點數 <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input asp-for="Points" type="number" min="0" class="form-control" />
                            <span class="input-group-text">點</span>
                        </div>
                        <span asp-validation-for="Points" class="text-danger"></span>
                        <small class="text-muted">不可為負數</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Experience" class="form-label">獎勵經驗值 <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input asp-for="Experience" type="number" min="0" class="form-control" />
                            <span class="input-group-text">EXP</span>
                        </div>
                        <span asp-validation-for="Experience" class="text-danger"></span>
                        <small class="text-muted">不可為負數</small>
                    </div>
                </div>

                <!-- 優惠券設定 -->
                <div class="mb-3">
                    <label asp-for="CouponTypeCode" class="form-label">優惠券類型代碼</label>
                    <input asp-for="CouponTypeCode" class="form-control" placeholder="選填，例如：SIGNIN7DAY" />
                    <span asp-validation-for="CouponTypeCode" class="text-danger"></span>
                    <small class="text-muted">若不發放優惠券請留空。最多 50 字元。</small>
                </div>

                <!-- 規則說明 -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">規則說明</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="選填，例如：連續簽到 7 天獎勵"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <small class="text-muted">最多 500 字元</small>
                </div>

                <!-- 預覽區 -->
                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <h6 class="card-title"><i class="fas fa-eye me-2"></i>規則預覽</h6>
                        <p class="card-text mb-1">
                            <strong>連續簽到 <span id="preview-days">@Model?.SignInDay</span> 天</strong>，可獲得：
                        </p>
                        <ul class="mb-0">
                            <li>點數：<span id="preview-points">@Model?.Points</span> 點</li>
                            <li>經驗值：<span id="preview-exp">@Model?.Experience</span> EXP</li>
                            <li>優惠券：<span id="preview-coupon">@(string.IsNullOrEmpty(Model?.CouponTypeCode) ? "無" : Model.CouponTypeCode)</span></li>
                            <li>狀態：<span id="preview-status" class="badge bg-@(Model?.IsActive == true ? "success" : "secondary")">@(Model?.IsActive == true ? "啟用" : "停用")</span></li>
                        </ul>
                    </div>
                </div>

                <!-- 操作按鈕 -->
                <div class="mt-4 border-top pt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>儲存變更
                    </button>
                    <a asp-action="SignInRules" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>取消
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // 即時預覽
        function updatePreview() {
            const points = document.querySelector('input[name="Points"]').value || '0';
            const exp = document.querySelector('input[name="Experience"]').value || '0';
            const coupon = document.querySelector('input[name="CouponTypeCode"]').value || '無';
            const isActive = document.querySelector('input[name="IsActive"]').checked;

            document.getElementById('preview-points').textContent = points;
            document.getElementById('preview-exp').textContent = exp;
            document.getElementById('preview-coupon').textContent = coupon;

            const statusBadge = document.getElementById('preview-status');
            statusBadge.textContent = isActive ? '啟用' : '停用';
            statusBadge.className = 'badge bg-' + (isActive ? 'success' : 'secondary');
        }

        document.querySelector('input[name="Points"]').addEventListener('input', updatePreview);
        document.querySelector('input[name="Experience"]').addEventListener('input', updatePreview);
        document.querySelector('input[name="CouponTypeCode"]').addEventListener('input', updatePreview);
        document.querySelector('input[name="IsActive"]').addEventListener('change', updatePreview);

        // 初始化預覽
        updatePreview();
    </script>
}
