@model GameSpace.Areas.MiniGame.Models.AdminAdjustEVouchersViewModel
@{
    ViewData["Title"] = "調整會員電子禮券";
    Layout = "~/Areas/MiniGame/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-gift mr-2"></i>調整會員電子禮券
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.UserEVouchers.Any())
                    {
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5 class="card-title">用戶信息</h5>
                                        <p><strong>用戶ID:</strong> @Model.UserId</p>
                                        <p><strong>用戶名:</strong> @Model.UserName</p>
                                        <p><strong>禮券總數:</strong> @Model.UserEVouchers.Count</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive mb-4">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>禮券名稱</th>
                                        <th>面額</th>
                                        <th>使用狀態</th>
                                        <th>獲得時間</th>
                                        <th>到期時間</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var evoucher in Model.UserEVouchers)
                                    {
                                        <tr>
                                            <td>@evoucher.EVoucherName</td>
                                            <td>
                                                <span class="badge bg-primary fs-6">@evoucher.Amount.ToString("C0")</span>
                                            </td>
                                            <td>
                                                @if (evoucher.IsUsed)
                                                {
                                                    <span class="badge bg-secondary">已使用</span>
                                                }
                                                else if (evoucher.ExpiryDate < DateTime.Now)
                                                {
                                                    <span class="badge bg-danger">已過期</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">可用</span>
                                                }
                                            </td>
                                            <td>@evoucher.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>@evoucher.ExpiryDate.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                @if (!evoucher.IsUsed && evoucher.ExpiryDate > DateTime.Now)
                                                {
                                                    <button class="btn btn-sm btn-danger" onclick="removeEVoucher(@evoucher.Id)">
                                                        <i class="fas fa-trash mr-1"></i>移除
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <form asp-action="AdjustEVouchers" method="post">
                            <input type="hidden" asp-for="UserId" />
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="EVoucherName" class="form-label">禮券名稱</label>
                                        <input asp-for="EVoucherName" class="form-control" placeholder="輸入禮券名稱" />
                                        <span asp-validation-for="EVoucherName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group mb-3">
                                        <label asp-for="Amount" class="form-label">面額</label>
                                        <input asp-for="Amount" class="form-control" type="number" min="0" step="0.01" />
                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group mb-3">
                                        <label asp-for="ExpiryDays" class="form-label">有效天數</label>
                                        <input asp-for="ExpiryDays" class="form-control" type="number" min="1" value="30" />
                                        <span asp-validation-for="ExpiryDays" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Reason" class="form-label">發放原因</label>
                                <textarea asp-for="Reason" class="form-control" rows="2" placeholder="請輸入發放原因..."></textarea>
                                <span asp-validation-for="Reason" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-plus mr-1"></i>發放禮券
                                </button>
                                <a asp-action="QueryEVouchers" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left mr-1"></i>返回查詢
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            未找到指定的用戶電子禮券信息
                        </div>
                        <div class="text-center">
                            <a asp-action="QueryEVouchers" class="btn btn-primary">
                                <i class="fas fa-arrow-left mr-1"></i>返回查詢
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function removeEVoucher(evoucherId) {
            if (confirm('確定要移除這張電子禮券嗎？')) {
                // 這裡可以添加AJAX調用來移除電子禮券
                alert('電子禮券移除功能需要後端實現');
            }
        }
    </script>
}
