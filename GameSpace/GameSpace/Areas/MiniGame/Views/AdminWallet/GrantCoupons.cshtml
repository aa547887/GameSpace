                            <td>生日禮物</td>
                            <td>管理員</td>
                            <td><span class="badge badge-success">成功</span></td>
                        </tr>
                        <tr>
                            <td>2024-01-15 12:20:08</td>
                            <td>user003</td>
                            <td>節日優惠券</td>
                            <td>2</td>
                            <td>節日活動</td>
                            <td>系統</td>
                            <td><span class="badge badge-success">成功</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- 預覽 Modal -->
<div class="modal fade" id="previewModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">發放預覽</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="previewContent">
                    <!-- 預覽內容將在這裡顯示 -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                <button type="button" class="btn btn-primary" onclick="confirmGrant()">確認發放</button>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // 初始化 DataTable
    $("#couponTypesTable, #recentGrantsTable").DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
        },
        "pageLength": 10,
        "order": [[ 0, "asc" ]]
    });
});

function resetForm() {
    if (confirm("確定要重置表單嗎？所有未儲存的變更將會遺失。")) {
        document.getElementById("grantForm").reset();
    }
}

function previewGrant() {
    var formData = $("#grantForm").serialize();
    var isValid = validateForm();

    if (!isValid) {
        return;
    }

    $.ajax({
        url: "@Url.Action("PreviewGrantCoupons", "AdminWallet")",
        type: "POST",
        data: formData,
        success: function(response) {
            if (response.success) {
                showPreview(response.data);
            } else {
                alert("預覽失敗: " + response.message);
            }
        },
        error: function() {
            alert("預覽請求失敗，請稍後再試");
        }
    });
}

function showPreview(data) {
    var previewHtml = "<h6>發放設定預覽</h6>";
    previewHtml += "<p><strong>用戶ID:</strong> " + data.userId + "</p>";
    previewHtml += "<p><strong>優惠券類型:</strong> " + data.couponTypeName + "</p>";
    previewHtml += "<p><strong>發放數量:</strong> " + data.quantity + "</p>";
    previewHtml += "<p><strong>到期日期:</strong> " + data.expiryDate + "</p>";
    previewHtml += "<p><strong>發放原因:</strong> " + data.reason + "</p>";
    previewHtml += "<p><strong>面額:</strong> " + data.value + "</p>";

    $("#previewContent").html(previewHtml);
    $("#previewModal").modal("show");
}

function confirmGrant() {
    $("#previewModal").modal("hide");
    $("#grantForm").submit();
}

// 表單驗證
function validateForm() {
    const userId = document.getElementById("UserId").value.trim();
    const couponTypeId = document.getElementById("CouponTypeId").value;
    const quantity = document.getElementById("Quantity").value;
    const expiryDate = document.getElementById("ExpiryDate").value;
    const reason = document.getElementById("Reason").value;

    if (!userId) {
        alert("請輸入用戶ID");
        return false;
    }

    if (!couponTypeId) {
        alert("請選擇優惠券類型");
        return false;
    }

    if (!quantity || quantity <= 0) {
        alert("請輸入有效的發放數量");
        return false;
    }

    if (!expiryDate) {
        alert("請選擇到期日期");
        return false;
    }

    if (!reason) {
        alert("請選擇發放原因");
        return false;
    }

    return true;
}

// 表單提交驗證
document.getElementById("grantForm").addEventListener("submit", function(e) {
    if (!validateForm()) {
        e.preventDefault();
        return;
    }

    const userId = document.getElementById("UserId").value.trim();
    const quantity = document.getElementById("Quantity").value;

    if (!confirm(`確定要發放 ${quantity} 張優惠券給用戶 ${userId} 嗎？`)) {
        e.preventDefault();
        return;
    }
});
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
