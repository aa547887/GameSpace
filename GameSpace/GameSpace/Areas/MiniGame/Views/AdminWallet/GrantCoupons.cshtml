@model GameSpace.Areas.MiniGame.Models.GrantCouponsModel
@{
    ViewData["Title"] = "發放會員擁有商城優惠券";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-gift mr-2"></i>發放會員擁有商城優惠券
        </h1>
        <div class="d-flex">
            <a href="@Url.Action("Index")" class="btn btn-secondary mr-2">
                <i class="fas fa-arrow-left"></i> 返回
            </a>
        </div>
    </div>

    <!-- 發放表單 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-gift"></i> 優惠券發放資訊
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="GrantCoupons" method="post" id="grantForm">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UserId" class="control-label">用戶ID *</label>
                            <input asp-for="UserId" class="form-control" placeholder="輸入用戶ID" required />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CouponTypeId" class="control-label">優惠券類型 *</label>   
                            <select asp-for="CouponTypeId" class="form-control" required>
                                <option value="">請選擇優惠券類型</option>
                                <option value="1">新用戶優惠券</option>
                                <option value="2">生日優惠券</option>
                                <option value="3">節日優惠券</option>
                                <option value="4">活動優惠券</option>
                            </select>
                            <span asp-validation-for="CouponTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label">發放數量 *</label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" max="10" placeholder="輸入數量" required />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ExpiryDate" class="control-label">到期日期 *</label>       
                            <input asp-for="ExpiryDate" class="form-control" type="date" required />
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Reason" class="control-label">發放原因 *</label>
                            <select asp-for="Reason" class="form-control" required>
                                <option value="">請選擇發放原因</option>
                                <option value="活動獎勵">活動獎勵</option>
                                <option value="補償">補償</option>
                                <option value="客服處理">客服處理</option>
                                <option value="生日禮物">生日禮物</option>
                                <option value="其他">其他</option>
                            </select>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CustomValue" class="control-label">自訂面額</label>        
                            <input asp-for="CustomValue" class="form-control" type="number" step="0.01" min="0" placeholder="留空使用預設面額" />
                            <span asp-validation-for="CustomValue" class="text-danger"></span>
                            <small class="form-text text-muted">留空將使用優惠券類型的預設面額</small> 
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">詳細說明</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="輸入詳細說明"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-gift"></i> 發放優惠券
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="resetForm()">
                        <i class="fas fa-undo"></i> 重置
                    </button>
                    <button type="button" class="btn btn-info" onclick="previewGrant()">
                        <i class="fas fa-eye"></i> 預覽
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 優惠券類型資訊 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-info-circle"></i> 可用優惠券類型
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="couponTypesTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>類型ID</th>
                            <th>類型名稱</th>
                            <th>預設面額</th>
                            <th>使用條件</th>
                            <th>狀態</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>新用戶優惠券</td>
                            <td>NT$ 100</td>
                            <td>滿NT$ 500可用</td>
                            <td><span class="badge badge-success">啟用</span></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>生日優惠券</td>
                            <td>NT$ 200</td>
                            <td>滿NT$ 1000可用</td>
                            <td><span class="badge badge-success">啟用</span></td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>節日優惠券</td>
                            <td>NT$ 150</td>
                            <td>滿NT$ 800可用</td>
                            <td><span class="badge badge-success">啟用</span></td>
                        </tr>
                        <tr>
                            <td>4</td>
                            <td>活動優惠券</td>
                            <td>NT$ 300</td>
                            <td>滿NT$ 1500可用</td>
                            <td><span class="badge badge-success">啟用</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 最近發放記錄 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-history"></i> 最近發放記錄
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="recentGrantsTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>發放時間</th>
                            <th>用戶ID</th>
                            <th>優惠券類型</th>
                            <th>發放數量</th>
                            <th>發放原因</th>
                            <th>操作者</th>
                            <th>狀態</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
