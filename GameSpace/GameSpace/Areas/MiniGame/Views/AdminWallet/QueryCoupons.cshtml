@model GameSpace.Areas.MiniGame.Models.AdminQueryCouponsViewModel
@{
    ViewData["Title"] = "查詢會員商城優惠券";
    Layout = "~/Areas/MiniGame/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-ticket-alt mr-2"></i>查詢會員商城優惠券
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="QueryCoupons" method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="SearchTerm" class="form-label">搜索條件</label>
                                    <input asp-for="SearchTerm" class="form-control" placeholder="輸入用戶名或ID" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <i class="fas fa-search mr-1"></i>搜索
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="form-label">&nbsp;</label>
                                    <a asp-action="QueryCoupons" class="btn btn-secondary btn-block">
                                        <i class="fas fa-refresh mr-1"></i>重置
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>

                    @if (Model != null && Model.Coupons.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>用戶ID</th>
                                        <th>用戶名</th>
                                        <th>優惠券名稱</th>
                                        <th>折扣類型</th>
                                        <th>折扣值</th>
                                        <th>使用狀態</th>
                                        <th>獲得時間</th>
                                        <th>到期時間</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var coupon in Model.Coupons)
                                    {
                                        <tr>
                                            <td>@coupon.UserId</td>
                                            <td>@coupon.UserName</td>
                                            <td>@coupon.CouponName</td>
                                            <td>
                                                @if (coupon.DiscountType == "Percentage")
                                                {
                                                    <span class="badge bg-info">百分比</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">固定金額</span>
                                                }
                                            </td>
                                            <td>@coupon.DiscountValue</td>
                                            <td>
                                                @if (coupon.IsUsed)
                                                {
                                                    <span class="badge bg-secondary">已使用</span>
                                                }
                                                else if (coupon.ExpiryDate < DateTime.Now)
                                                {
                                                    <span class="badge bg-danger">已過期</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">可用</span>
                                                }
                                            </td>
                                            <td>@coupon.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>@(coupon.ExpiryDate?.ToString("yyyy-MM-dd HH:mm") ?? "無期限")</td>
                                            <td>
                                                <a asp-action="AdjustCoupons" asp-route-userId="@coupon.UserId" 
                                                   class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit mr-1"></i>管理優惠券
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="分頁導航">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" asp-action="QueryCoupons" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchTerm="@Model.SearchTerm">上一頁</a>
                                    </li>
                                    
                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="QueryCoupons" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm">@i</a>
                                        </li>
                                    }
                                    
                                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" asp-action="QueryCoupons" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchTerm="@Model.SearchTerm">下一頁</a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    }
                    else if (Model != null && !string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle mr-2"></i>
                            未找到符合條件的優惠券
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-ticket-alt fa-3x mb-3"></i>
                            <p>請輸入搜索條件來查詢會員商城優惠券</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
