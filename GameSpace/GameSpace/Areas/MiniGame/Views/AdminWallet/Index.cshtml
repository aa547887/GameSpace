@model GameSpace.Areas.MiniGame.Models.AdminWalletIndexViewModel
@{
    ViewData["Title"] = "會員點數管理";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">會員點數管理</h1>
    </div>

    <!-- 統計卡片 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總用戶數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.WalletSummary.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">總點數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.WalletSummary.TotalPoints</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">平均點數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.WalletSummary.AveragePoints</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 功能按鈕 -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("QueryPoints", "AdminWallet")" class="btn btn-primary">
                    <i class="fas fa-search"></i> 查詢會員點數
                </a>
                <a href="@Url.Action("QueryCoupons", "AdminWallet")" class="btn btn-success">
                    <i class="fas fa-ticket-alt"></i> 查詢會員商城優惠券
                </a>
                <a href="@Url.Action("QueryEVouchers", "AdminWallet")" class="btn btn-info">
                    <i class="fas fa-gift"></i> 查詢會員電子禮券
                </a>
                <a href="@Url.Action("AdjustPoints", "AdminWallet")" class="btn btn-warning">
                    <i class="fas fa-edit"></i> 調整會員點數
                </a>
                <a href="@Url.Action("AdjustCoupons", "AdminWallet")" class="btn btn-secondary">
                    <i class="fas fa-edit"></i> 調整會員商城優惠券
                </a>
                <a href="@Url.Action("AdjustEVouchers", "AdminWallet")" class="btn btn-dark">
                    <i class="fas fa-edit"></i> 調整會員電子禮券
                </a>
                <a href="@Url.Action("QueryHistory", "AdminWallet")" class="btn btn-light">
                    <i class="fas fa-history"></i> 查詢會員收支明細
                </a>
            </div>
        </div>
    </div>

    <!-- 內容區域 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">會員點數列表</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>用戶ID</th>
                                    <th>用戶名稱</th>
                                    <th>點數餘額</th>
                                    <th>最後更新時間</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var wallet in Model.Wallets.Items)
                                {
                                    <tr>
                                        <td>@wallet.UserId</td>
                                        <td>@wallet.UserName</td>
                                        <td>@wallet.UserPoint</td>
                                        <td>@wallet.LastUpdated.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            <a href="@Url.Action("AdjustPoints", "AdminWallet", new { userId = wallet.UserId })" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> 調整點數
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
