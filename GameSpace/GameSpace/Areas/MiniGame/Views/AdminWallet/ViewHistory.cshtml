@model GameSpace.Areas.MiniGame.Models.WalletHistoryModel
@{
    ViewData["Title"] = "查看會員收支明細";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">查看會員收支明細</h1>
    </div>

    <!-- 搜尋表單 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">搜尋條件</h6>
        </div>
        <div class="card-body">
            <form method="get" id="searchForm">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="userId">用戶ID</label>
                            <input type="text" class="form-control" id="userId" name="userId" placeholder="輸入用戶ID">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="transactionType">交易類型</label>
                            <select class="form-control" id="transactionType" name="transactionType">
                                <option value="">全部</option>
                                <option value="Points">會員點數</option>
                                <option value="Coupon">商城優惠券</option>
                                <option value="EVoucher">電子禮券</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="actionType">操作類型</label>
                            <select class="form-control" id="actionType" name="actionType">
                                <option value="">全部</option>
                                <option value="Earn">獲得</option>
                                <option value="Spend">花費</option>
                                <option value="Use">使用</option>
                                <option value="Expire">過期</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="startDate">開始日期</label>
                            <input type="date" class="form-control" id="startDate" name="startDate">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="endDate">結束日期</label>
                            <input type="date" class="form-control" id="endDate" name="endDate">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> 搜尋
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="resetForm()">
                        <i class="fas fa-undo"></i> 重置
                    </button>
                    <button type="button" class="btn btn-success" onclick="exportHistory()">
                        <i class="fas fa-download"></i> 匯出
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 統計資訊 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總收入</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalIncome">NT$ 0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-up fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">總支出</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalExpense">NT$ 0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-down fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">淨變動</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="netChange">NT$ 0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-balance-scale fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">交易筆數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="transactionCount">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 交易記錄 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">交易記錄</h6>
            <span class="badge badge-info" id="resultCount">共 0 筆記錄</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>交易時間</th>
                            <th>用戶ID</th>
                            <th>交易類型</th>
                            <th>操作類型</th>
                            <th>金額/數量</th>
                            <th>餘額</th>
                            <th>描述</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Transactions != null && Model.Transactions.Any())
                        {
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@transaction.UserId</td>
                                    <td>
                                        @switch (transaction.TransactionType)
                                        {
                                            case "Points":
                                                <span class="badge badge-primary">會員點數</span>
                                                break;
                                            case "Coupon":
                                                <span class="badge badge-success">商城優惠券</span>
                                                break;
                                            case "EVoucher":
                                                <span class="badge badge-warning">電子禮券</span>
                                                break;
                                            default:
                                                <span class="badge badge-secondary">@transaction.TransactionType</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @switch (transaction.ActionType)
                                        {
                                            case "Earn":
                                                <span class="badge badge-success">獲得</span>
                                                break;
                                            case "Spend":
                                                <span class="badge badge-danger">花費</span>
                                                break;
                                            case "Use":
                                                <span class="badge badge-info">使用</span>
                                                break;
                                            case "Expire":
                                                <span class="badge badge-warning">過期</span>
                                                break;
                                            default:
                                                <span class="badge badge-secondary">@transaction.ActionType</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (transaction.TransactionType == "Points")
                                        {
                                            <span class="@(transaction.ActionType == "Earn" ? "text-success" : "text-danger")">
                                                @(transaction.ActionType == "Earn" ? "+" : "-")@transaction.Amount
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="@(transaction.ActionType == "Earn" ? "text-success" : "text-danger")">
                                                @(transaction.ActionType == "Earn" ? "+" : "-")@transaction.Quantity
                                            </span>
                                        }
                                    </td>
                                    <td>@transaction.Balance</td>
                                    <td>@transaction.Description</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" onclick="viewTransactionDetails(@transaction.Id)">
                                            <i class="fas fa-eye"></i> 詳情
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">請輸入搜尋條件進行查詢</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
function resetForm() {
    document.getElementById("searchForm").reset();
}

function exportHistory() {
    // 匯出交易記錄
    alert("匯出功能開發中...");
}

function viewTransactionDetails(transactionId) {
    // 查看交易詳情
    alert("查看交易詳情: " + transactionId);
}

// 更新統計資訊
function updateStatistics() {
    // 模擬統計數據
    document.getElementById("totalIncome").textContent = "NT$ 15,680";
    document.getElementById("totalExpense").textContent = "NT$ 8,420";
    document.getElementById("netChange").textContent = "NT$ 7,260";
    document.getElementById("transactionCount").textContent = "156";
}

// 更新結果計數
function updateResultCount() {
    const rows = document.querySelectorAll("tbody tr");
    const count = rows.length - (rows.length > 0 && rows[0].cells[0].textContent.includes("請輸入") ? 1 : 0);
    document.getElementById("resultCount").textContent = `共 ${count} 筆記錄`;
}

// 頁面載入時執行
document.addEventListener("DOMContentLoaded", function() {
    updateStatistics();
    updateResultCount();
});
</script>
