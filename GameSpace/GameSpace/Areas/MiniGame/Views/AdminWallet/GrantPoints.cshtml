@{
    ViewData["Title"] = "發放點數";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-plus-circle mr-2"></i>發放點數
        </h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> 返回列表
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-coins"></i> 點數發放設定
                    </h6>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="userId">會員ID</label>
                            <input type="text" class="form-control" id="userId" placeholder="請輸入會員ID">
                        </div>
                        
                        <div class="form-group">
                            <label for="pointsAmount">點數數量</label>
                            <input type="number" class="form-control" id="pointsAmount" placeholder="請輸入點數數量" min="1">
                        </div>
                        
                        <div class="form-group">
                            <label for="reason">發放原因</label>
                            <select class="form-control" id="reason">
                                <option value="">請選擇發放原因</option>
                                <option value="signin">簽到獎勵</option>
                                <option value="game">遊戲獎勵</option>
                                <option value="activity">活動獎勵</option>
                                <option value="compensation">補償</option>
                                <option value="other">其他</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="description">備註說明</label>
                            <textarea class="form-control" id="description" rows="3" placeholder="請輸入備註說明"></textarea>
                        </div>
                        
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="confirm">
                                <label class="form-check-label" for="confirm">
                                    確認發放點數
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i> 確認發放
                            </button>
                            <button type="button" class="btn btn-secondary ml-2">
                                <i class="fas fa-times"></i> 取消
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle"></i> 發放說明
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> 點數將立即到帳</li>
                        <li><i class="fas fa-check text-success"></i> 系統會自動記錄交易</li>
                        <li><i class="fas fa-check text-success"></i> 會員會收到通知</li>
                        <li><i class="fas fa-exclamation-triangle text-warning"></i> 請確認會員ID正確</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
