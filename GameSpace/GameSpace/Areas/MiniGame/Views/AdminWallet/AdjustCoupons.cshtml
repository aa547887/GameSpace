@model GameSpace.Areas.MiniGame.Models.AdminAdjustCouponsViewModel
@{
    ViewData["Title"] = "調整會員商城優惠券";
    Layout = "~/Areas/MiniGame/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-ticket-alt mr-2"></i>調整會員商城優惠券
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.UserCoupons.Any())
                    {
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5 class="card-title">用戶信息</h5>
                                        <p><strong>用戶ID:</strong> @Model.UserId</p>
                                        <p><strong>用戶名:</strong> @Model.UserName</p>
                                        <p><strong>優惠券總數:</strong> @Model.UserCoupons.Count</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive mb-4">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>優惠券名稱</th>
                                        <th>折扣類型</th>
                                        <th>折扣值</th>
                                        <th>使用狀態</th>
                                        <th>獲得時間</th>
                                        <th>到期時間</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var coupon in Model.UserCoupons)
                                    {
                                        <tr>
                                            <td>@coupon.CouponName</td>
                                            <td>
                                                @if (coupon.DiscountType == "Percentage")
                                                {
                                                    <span class="badge bg-info">百分比</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">固定金額</span>
                                                }
                                            </td>
                                            <td>@coupon.DiscountValue</td>
                                            <td>
                                                @if (coupon.IsUsed)
                                                {
                                                    <span class="badge bg-secondary">已使用</span>
                                                }
                                                else if (coupon.ExpiryDate < DateTime.Now)
                                                {
                                                    <span class="badge bg-danger">已過期</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">可用</span>
                                                }
                                            </td>
                                            <td>@coupon.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>@coupon.ExpiryDate.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                @if (!coupon.IsUsed && coupon.ExpiryDate > DateTime.Now)
                                                {
                                                    <button class="btn btn-sm btn-danger" onclick="removeCoupon(@coupon.Id)">
                                                        <i class="fas fa-trash mr-1"></i>移除
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <form asp-action="AdjustCoupons" method="post">
                            <input type="hidden" asp-for="UserId" />
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="CouponName" class="form-label">優惠券名稱</label>
                                        <input asp-for="CouponName" class="form-control" placeholder="輸入優惠券名稱" />
                                        <span asp-validation-for="CouponName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group mb-3">
                                        <label asp-for="DiscountType" class="form-label">折扣類型</label>
                                        <select asp-for="DiscountType" class="form-control">
                                            <option value="Percentage">百分比</option>
                                            <option value="Fixed">固定金額</option>
                                        </select>
                                        <span asp-validation-for="DiscountType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group mb-3">
                                        <label asp-for="DiscountValue" class="form-label">折扣值</label>
                                        <input asp-for="DiscountValue" class="form-control" type="number" min="0" step="0.01" />
                                        <span asp-validation-for="DiscountValue" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group mb-3">
                                        <label asp-for="ExpiryDays" class="form-label">有效天數</label>
                                        <input asp-for="ExpiryDays" class="form-control" type="number" min="1" value="30" />
                                        <span asp-validation-for="ExpiryDays" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Reason" class="form-label">發放原因</label>
                                <textarea asp-for="Reason" class="form-control" rows="2" placeholder="請輸入發放原因..."></textarea>
                                <span asp-validation-for="Reason" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-plus mr-1"></i>發放優惠券
                                </button>
                                <a asp-action="QueryCoupons" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left mr-1"></i>返回查詢
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            未找到指定的用戶優惠券信息
                        </div>
                        <div class="text-center">
                            <a asp-action="QueryCoupons" class="btn btn-primary">
                                <i class="fas fa-arrow-left mr-1"></i>返回查詢
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function removeCoupon(couponId) {
            if (confirm('確定要移除這張優惠券嗎？')) {
                // 這裡可以添加AJAX調用來移除優惠券
                alert('優惠券移除功能需要後端實現');
            }
        }
    </script>
}
