@model IEnumerable<GameSpace.Models.UserSignInStat>
@{
    ViewData["Title"] = "簽到管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">簽到管理</h1>
        <a href="@Url.Action("Create")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> 新增簽到記錄
        </a>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">簽到記錄列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>記錄ID</th>
                            <th>用戶</th>
                            <th>簽到時間</th>
                            <th>點數獲得</th>
                            <th>經驗獲得</th>
                            <th>優惠券獲得</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var signIn in Model)
                        {
                            <tr>
                                <td>@signIn.LogId</td>
                                <td>@signIn.User?.UserName</td>
                                <td>@signIn.SignTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (signIn.PointsGained > 0)
                                    {
                                        <span class="badge badge-success">+@signIn.PointsGained</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">0</span>
                                    }
                                </td>
                                <td>
                                    @if (signIn.ExpGained > 0)
                                    {
                                        <span class="badge badge-info">+@signIn.ExpGained</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">0</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(signIn.CouponGained) && signIn.CouponGained != "0")
                                    {
                                        <span class="badge badge-warning">@signIn.CouponGained</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">無</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = signIn.LogId })" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = signIn.LogId })" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- DataTables JavaScript -->
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>

<script>
.ready(function() {
    #dataTable.DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
        },
        "pageLength": 25,
        "order": [[ 0, "desc" ]]
    });
});
</script>
