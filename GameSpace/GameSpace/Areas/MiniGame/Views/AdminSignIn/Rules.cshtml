@{
    ViewData["Title"] = "簽到規則設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-calendar-check mr-2"></i>簽到規則設定
        </h1>
        <div class="d-flex">
            <a href="@Url.Action("Index")" class="btn btn-secondary mr-2">
                <i class="fas fa-arrow-left"></i> 返回
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-cog"></i> 簽到規則設定
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateRules" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SignInRule.DailyPoints" class="form-label">每日簽到點數</label>
                                    <input asp-for="SignInRule.DailyPoints" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="SignInRule.DailyPoints" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SignInRule.WeeklyBonusPoints" class="form-label">週獎勵點數</label>
                                    <input asp-for="SignInRule.WeeklyBonusPoints" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="SignInRule.WeeklyBonusPoints" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SignInRule.MonthlyBonusPoints" class="form-label">月獎勵點數</label>
                                    <input asp-for="SignInRule.MonthlyBonusPoints" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="SignInRule.MonthlyBonusPoints" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SignInRule.ConsecutiveDays" class="form-label">連續簽到天數</label>
                                    <input asp-for="SignInRule.ConsecutiveDays" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="SignInRule.ConsecutiveDays" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="SignInRule.Description" class="form-label">規則描述</label>
                                    <textarea asp-for="SignInRule.Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="SignInRule.Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> 儲存設定
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                                    <i class="fas fa-undo"></i> 重置
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function resetForm() {
        document.querySelector('form').reset();
    }
</script>
