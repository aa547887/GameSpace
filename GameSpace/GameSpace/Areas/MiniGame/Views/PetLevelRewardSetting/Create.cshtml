@model GameSpace.Areas.MiniGame.Models.ViewModels.PetLevelRewardSettingCreateViewModel
@{
    ViewData["Title"] = "新增寵物升級獎勵設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- 頁面標題 -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">新增寵物升級獎勵設定</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> 返回列表
        </a>
    </div>

    <!-- 表單 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">獎勵設定資訊</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Level" class="control-label">等級 *</label>
                            <input asp-for="Level" class="form-control" placeholder="請輸入等級 (1-100)" />
                            <span asp-validation-for="Level" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RewardType" class="control-label">獎勵類型 *</label>
                            <input asp-for="RewardType" class="form-control" placeholder="請輸入獎勵類型" />
                            <span asp-validation-for="RewardType" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RewardAmount" class="control-label">獎勵數量 *</label>
                            <input asp-for="RewardAmount" class="form-control" placeholder="請輸入獎勵數量" />
                            <span asp-validation-for="RewardAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IsEnabled" class="control-label">啟用狀態</label>
                            <div class="form-check">
                                <input asp-for="IsEnabled" class="form-check-input" type="checkbox" />
                                <label asp-for="IsEnabled" class="form-check-label">啟用此獎勵設定</label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">獎勵描述</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="請輸入獎勵描述"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> 建立獎勵設定
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> 取消
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

