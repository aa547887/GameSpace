@model GameSpace.Areas.MiniGame.Models.ViewModels.PetLevelRewardSettingViewModel
@{
    ViewData["Title"] = "刪除寵物升級獎勵設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- 頁面標題 -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 text-danger">刪除寵物升級獎勵設定</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> 返回列表
        </a>
    </div>

    <!-- 警告訊息 -->
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">警告！</h4>
        <p>您確定要刪除這個寵物升級獎勵設定嗎？此操作無法復原。</p>
        <hr>
        <p class="mb-0">請仔細確認以下資訊是否為您要刪除的設定。</p>
    </div>

    <!-- 詳細資料 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">獎勵設定資訊</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">設定ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">等級:</dt>
                        <dd class="col-sm-8">@Model.Level</dd>
                        
                        <dt class="col-sm-4">獎勵類型:</dt>
                        <dd class="col-sm-8">@Model.RewardType</dd>
                        
                        <dt class="col-sm-4">獎勵數量:</dt>
                        <dd class="col-sm-8">@Model.RewardAmount</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">啟用狀態:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsEnabled)
                            {
                                <span class="badge badge-success">啟用</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">停用</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">建立時間:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                        
                        <dt class="col-sm-4">更新時間:</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                        
                        <dt class="col-sm-4">建立者:</dt>
                        <dd class="col-sm-8">@(Model.CreatedBy ?? "系統")</dd>
                        
                        <dt class="col-sm-4">更新者:</dt>
                        <dd class="col-sm-8">@(Model.UpdatedBy ?? "系統")</dd>
                    </dl>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="row mt-3">
                    <div class="col-md-12">
                        <dt>獎勵描述:</dt>
                        <dd>@Model.Description</dd>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- 確認刪除表單 -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Delete" method="post">
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> 確認刪除
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> 取消
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

