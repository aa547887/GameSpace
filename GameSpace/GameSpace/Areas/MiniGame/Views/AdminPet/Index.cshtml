@{
    ViewData["Title"] = "寵物系統管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- 頁面標題 -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-paw mr-2 text-primary"></i>寵物系統管理
        </h1>
        <div class="d-flex">
            <a href="@Url.Action("SystemRules")" class="btn btn-primary mr-2 shadow-sm">
                <i class="fas fa-cog"></i> 系統規則
            </a>
            <a href="@Url.Action("QueryPets")" class="btn btn-success shadow-sm">
                <i class="fas fa-search"></i> 查詢寵物
            </a>
        </div>
    </div>

    <!-- 統計卡片 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總寵物數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalPets">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-success">+23</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-paw fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">活躍寵物</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="activePets">載入中...</div>
                            <div class="text-xs text-muted">活躍率 <span class="text-success">65.2%</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-heart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">平均等級</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="avgLevel">載入中...</div>
                            <div class="text-xs text-muted">最高等級 <span class="text-info">50</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-star fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">今日互動</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="todayInteractions">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-warning">+18.5%</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-hand-paper fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 快速操作 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt"></i> 快速操作
                    </h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">操作選項</div>
                            <a class="dropdown-item" href="@Url.Action("ListWithQuery")">
                                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                寵物清單查詢
                            </a>
                            <a class="dropdown-item" href="@Url.Action("IndividualSettings")">
                                <i class="fas fa-user-cog fa-sm fa-fw mr-2 text-gray-400"></i>
                                個別寵物設定
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("QueryPets")" class="btn btn-outline-primary btn-block btn-hover">
                                <i class="fas fa-search"></i> 查詢寵物
                                <small class="d-block text-muted">搜尋特定寵物資訊</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("ListWithQuery")" class="btn btn-outline-success btn-block btn-hover">
                                <i class="fas fa-list"></i> 寵物列表
                                <small class="d-block text-muted">瀏覽所有寵物清單</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("SystemRules")" class="btn btn-outline-info btn-block btn-hover">
                                <i class="fas fa-cog"></i> 系統規則
                                <small class="d-block text-muted">設定整體寵物系統規則</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("IndividualSettings")" class="btn btn-outline-warning btn-block btn-hover">
                                <i class="fas fa-user-cog"></i> 個別設定
                                <small class="d-block text-muted">管理會員個別寵物設定</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 寵物類型分布 -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie"></i> 寵物類型分布
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="petTypeChart" width="100%" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar"></i> 等級分布
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="levelDistributionChart" width="100%" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- 最近寵物活動 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock"></i> 最近寵物活動
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="recentPetActivityTable">
                            <thead>
                                <tr>
                                    <th>時間</th>
                                    <th>會員ID</th>
                                    <th>寵物名稱</th>
                                    <th>活動類型</th>
                                    <th>等級變化</th>
                                    <th>狀態</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2024-01-15 14:30</td>
                                    <td>user001</td>
                                    <td>小藍</td>
                                    <td><span class="badge badge-primary">餵食</span></td>
                                    <td>15 → 16</td>
                                    <td><span class="badge badge-success">成功</span></td>
                                </tr>
                                <tr>
                                    <td>2024-01-15 14:25</td>
                                    <td>user002</td>
                                    <td>小紅</td>
                                    <td><span class="badge badge-success">遊戲</span></td>
                                    <td>12 → 13</td>
                                    <td><span class="badge badge-success">成功</span></td>
                                </tr>
                                <tr>
                                    <td>2024-01-15 14:20</td>
                                    <td>user003</td>
                                    <td>小綠</td>
                                    <td><span class="badge badge-info">休息</span></td>
                                    <td>8 → 8</td>
                                    <td><span class="badge badge-success">成功</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1) !important;
    }
    
    .btn-hover {
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .btn-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }
    
    .btn-hover::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }
    
    .btn-hover:hover::before {
        left: 100%;
    }
    
    .card-header {
        background: linear-gradient(135deg, #f8f9fc 0%, #e3e6f0 100%);
        border-bottom: 1px solid #e3e6f0;
    }
    
    .table th {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        font-weight: 600;
    }
    
    .badge {
        font-size: 0.75em;
        padding: 0.5em 0.8em;
    }
    
    .text-xs {
        font-size: 0.7rem;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    $(document).ready(function() {
        // 模擬載入數據
        setTimeout(function() {
            $("#totalPets").text("1,890");
            $("#activePets").text("1,234");
            $("#avgLevel").text("15.6");
            $("#todayInteractions").text("456");
        }, 1000);
        
        // 初始化 DataTable
        $("#recentPetActivityTable").DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
            },
            "pageLength": 10,
            "order": [[0, "desc"]],
            "columnDefs": [
                { "orderable": false, "targets": 5 }
            ]
        });
        
        // 創建寵物類型分布圖表
        var ctx1 = document.getElementById("petTypeChart").getContext("2d");
        var petTypeChart = new Chart(ctx1, {
            type: "doughnut",
            data: {
                labels: ["史萊姆", "小龍", "精靈", "其他"],
                datasets: [{
                    data: [45, 30, 20, 5],
                    backgroundColor: [
                        "#667eea",
                        "#28a745",
                        "#17a2b8",
                        "#ffc107"
                    ],
                    borderWidth: 2,
                    borderColor: "#fff"
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: "bottom"
                    }
                }
            }
        });
        
        // 創建等級分布圖表
        var ctx2 = document.getElementById("levelDistributionChart").getContext("2d");
        var levelDistributionChart = new Chart(ctx2, {
            type: "bar",
            data: {
                labels: ["1-5", "6-10", "11-15", "16-20", "21-25", "26-30"],
                datasets: [{
                    label: "寵物數量",
                    data: [120, 200, 350, 280, 150, 80],
                    backgroundColor: "rgba(102, 126, 234, 0.8)",
                    borderColor: "#667eea",
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: "rgba(0, 0, 0, 0.1)"
                        }
                    },
                    x: {
                        grid: {
                            color: "rgba(0, 0, 0, 0.1)"
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
        
        // 添加載入動畫
        $(".card").each(function(index) {
            $(this).css("animation-delay", (index * 0.1) + "s");
            $(this).addClass("fade-in");
        });
    });
</script>
