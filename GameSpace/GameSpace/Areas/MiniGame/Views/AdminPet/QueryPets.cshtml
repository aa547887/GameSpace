@model GameSpace.Areas.MiniGame.Models.AdminPetQueryViewModel
@{
    ViewData["Title"] = "查詢會員寵物資料";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">查詢會員寵物資料</h1>
    </div>

    <!-- 搜索區域 -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">搜索條件</h6>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="QueryPets">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="userId">用戶ID</label>
                                    <input type="number" class="form-control" id="userId" name="userId" 
                                           value="@Model.UserId" placeholder="輸入用戶ID">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="userName">用戶名稱</label>
                                    <input type="text" class="form-control" id="userName" name="userName" 
                                           value="@Model.UserName" placeholder="輸入用戶名稱">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="petName">寵物名稱</label>
                                    <input type="text" class="form-control" id="petName" name="petName" 
                                           value="@Model.PetName" placeholder="輸入寵物名稱">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <i class="fas fa-search"></i> 搜索
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 統計信息 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總寵物數量</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Pets.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-paw fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">活躍寵物</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Pets.Count(p => p.IsActive)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-heart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">平均等級</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.Pets.Any() ? Model.Pets.Average(p => p.Level).ToString("F1") : "0")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-star fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">總餵食次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Pets.Sum(p => p.FeedingCount)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-utensils fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 寵物資料列表 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">寵物資料列表</h6>
                </div>
                <div class="card-body">
                    @if (Model.Pets.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>寵物ID</th>
                                        <th>寵物名稱</th>
                                        <th>用戶ID</th>
                                        <th>用戶名稱</th>
                                        <th>等級</th>
                                        <th>餵食次數</th>
                                        <th>狀態</th>
                                        <th>創建時間</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pet in Model.Pets.OrderByDescending(p => p.CreatedAt))
                                    {
                                        <tr>
                                            <td>@pet.Id</td>
                                            <td class="font-weight-bold">@pet.Name</td>
                                            <td>@pet.UserId</td>
                                            <td>@pet.UserName</td>
                                            <td>
                                                <span class="badge badge-info">Lv.@pet.Level</span>
                                            </td>
                                            <td class="text-warning">@pet.FeedingCount</td>
                                            <td>
                                                @if (pet.IsActive)
                                                {
                                                    <span class="badge badge-success">活躍</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">休眠</span>
                                                }
                                            </td>
                                            <td>@pet.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="viewPetDetails(@pet.Id)">
                                                    <i class="fas fa-eye"></i> 詳情
                                                </button>
                                                <button class="btn btn-sm btn-warning" onclick="editPet(@pet.Id)">
                                                    <i class="fas fa-edit"></i> 編輯
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-paw fa-3x text-gray-300 mb-3"></i>
                            <p class="text-gray-500">沒有找到符合條件的寵物資料</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function viewPetDetails(petId) { window.location.href = `/MiniGame/AdminPet/IndividualSettings?id=${petId}`; }

    function editPet(petId) { window.location.href = `/MiniGame/AdminPet/IndividualSettings?id=${petId}&mode=edit`; }
</script>

