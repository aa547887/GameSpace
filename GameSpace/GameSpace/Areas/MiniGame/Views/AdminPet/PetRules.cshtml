@model GameSpace.Areas.MiniGame.Models.AdminPetRulesViewModel
@{
    ViewData["Title"] = "寵物系統規則設定";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">寵物系統規則設定</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- 寵物規則設定表單 -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">寵物系統規則設定</h6>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="SetPetRule">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">規則名稱</label>
                                    <input type="text" class="form-control" id="name" name="name" 
                                           value="@Model.PetRule.Name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="maxPets">最大寵物數量</label>
                                    <input type="number" class="form-control" id="maxPets" name="maxPets" 
                                           value="@Model.PetRule.MaxPets" min="1" max="10" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="feedingCost">餵食成本</label>
                                    <input type="number" class="form-control" id="feedingCost" name="feedingCost" 
                                           value="@Model.PetRule.FeedingCost" min="1" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="feedingReward">餵食獎勵</label>
                                    <input type="number" class="form-control" id="feedingReward" name="feedingReward" 
                                           value="@Model.PetRule.FeedingReward" min="1" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="isActive">是否啟用</label>
                                    <select class="form-control" id="isActive" name="isActive">
                                        <option value="true" @(Model.PetRule.IsActive ? "selected" : "")>啟用</option>
                                        <option value="false" @(!Model.PetRule.IsActive ? "selected" : "")>停用</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="description">規則描述</label>
                                    <textarea class="form-control" id="description" name="description" rows="3">@Model.PetRule.Description</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> 儲存設定
                            </button>
                            <a href="@Url.Action("Index", "AdminPet")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> 返回列表
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 規則說明 -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">規則說明</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6><i class="fas fa-paw"></i> 寵物系統說明</h6>
                        <ul class="mb-0">
                            <li><strong>最大寵物數量：</strong>每個用戶最多可擁有的寵物數量</li>
                            <li><strong>餵食成本：</strong>每次餵食寵物消耗的點數</li>
                            <li><strong>餵食獎勵：</strong>餵食寵物後獲得的點數獎勵</li>
                            <li><strong>是否啟用：</strong>控制寵物系統是否開放使用</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 當前規則狀態 -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">當前規則狀態</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>規則名稱</th>
                                    <th>最大寵物數量</th>
                                    <th>餵食成本</th>
                                    <th>餵食獎勵</th>
                                    <th>狀態</th>
                                    <th>最後更新時間</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.PetRule.Name</td>
                                    <td class="text-info font-weight-bold">@Model.PetRule.MaxPets</td>
                                    <td class="text-danger">@Model.PetRule.FeedingCost</td>
                                    <td class="text-success">@Model.PetRule.FeedingReward</td>
                                    <td>
                                        @if (Model.PetRule.IsActive)
                                        {
                                            <span class="badge badge-success">啟用</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">停用</span>
                                        }
                                    </td>
                                    <td>@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
