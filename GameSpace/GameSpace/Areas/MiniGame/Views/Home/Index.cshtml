@{
    ViewData["Title"] = "小遊戲管理系統";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-gamepad mr-2"></i>小遊戲管理系統
        </h1>
        <div class="d-flex">
            <span class="badge badge-success mr-2">
                <i class="fas fa-circle text-success"></i> 系統正常
            </span>
            <span class="badge badge-info">
                <i class="fas fa-clock"></i> @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
            </span>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row">
        <!-- 會員點數系統 -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                會員點數系統
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                管理會員點數與優惠券
                            </div>
                            <div class="text-xs text-muted mt-1">
                                <i class="fas fa-coins"></i> 點數管理 | 優惠券發放 | 電子券管理
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "AdminWallet")" class="btn btn-primary btn-sm">
                            <i class="fas fa-arrow-right"></i> 進入管理
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- 會員簽到系統 -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                會員簽到系統
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                管理簽到規則與紀錄
                            </div>
                            <div class="text-xs text-muted mt-1">
                                <i class="fas fa-calendar-check"></i> 簽到規則 | 統計分析 | 獎勵設定
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "AdminSignInStats")" class="btn btn-success btn-sm">
                            <i class="fas fa-arrow-right"></i> 進入管理
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- 寵物系統 -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                寵物系統
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                管理寵物規則與資料
                            </div>
                            <div class="text-xs text-muted mt-1">
                                <i class="fas fa-paw"></i> 寵物設定 | 屬性管理 | 成長規則
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-paw fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "AdminPet")" class="btn btn-info btn-sm">
                            <i class="fas fa-arrow-right"></i> 進入管理
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- 小遊戲系統 -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                小遊戲系統
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                管理遊戲規則與紀錄
                            </div>
                            <div class="text-xs text-muted mt-1">
                                <i class="fas fa-gamepad"></i> 遊戲規則 | 記錄查詢 | 獎勵設定
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "AdminMiniGame")" class="btn btn-warning btn-sm">
                            <i class="fas fa-arrow-right"></i> 進入管理
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt"></i> 快速操作
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("GrantPoints", "AdminWallet")" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-plus-circle"></i> 發放點數
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("GrantCoupons", "AdminWallet")" class="btn btn-outline-success btn-block">
                                <i class="fas fa-ticket-alt"></i> 發放優惠券
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("RuleSettings", "AdminSignInStats")" class="btn btn-outline-info btn-block">
                                <i class="fas fa-cog"></i> 簽到規則設定
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("SystemRules", "AdminPet")" class="btn btn-outline-warning btn-block">
                                <i class="fas fa-paw"></i> 寵物系統規則
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Status Row -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-line"></i> 系統統計
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總會員數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">1,234</div>
                        </div>
                        <div class="col-4">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">今日簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">567</div>
                        </div>
                        <div class="col-4">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">活躍寵物</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">890</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-exclamation-triangle"></i> 系統通知
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i> 系統運行正常，所有功能可用
                    </div>
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-clock"></i> 定期維護時間：每週日凌晨 2:00-4:00
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 頁面載入完成後的初始化
    $(document).ready(function() {
        // 添加卡片懸停效果
        $(".card").hover(
            function() {
                $(this).addClass("shadow-lg").removeClass("shadow");
            },
            function() {
                $(this).addClass("shadow").removeClass("shadow-lg");
            }
        );
        
        // 更新時間顯示
        setInterval(function() {
            $(".badge-info").html("<i class=\"fas fa-clock\"></i> " + new Date().toLocaleString("zh-TW"));
        }, 1000);
    });
</script>
