@{
    ViewData["Title"] = "用戶管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- 頁面標題 -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">用戶管理</h1>
        <div>
            <a href="@Url.Action("Create", "AdminUser")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> 新增用戶
            </a>
            <a href="@Url.Action("Export", "AdminUser")" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
                <i class="fas fa-download fa-sm text-white-50"></i> 匯出用戶
            </a>
        </div>
    </div>

    <!-- 搜尋和篩選 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">搜尋和篩選</h6>
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("Index", "AdminUser")">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="searchTerm">搜尋關鍵字</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="用戶名稱或帳號">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="status">狀態</label>
                            <select class="form-control" id="status" name="status">
                                <option value="">全部</option>
                                <option value="active" @(ViewBag.Status == "active" ? "selected" : "")>啟用</option>
                                <option value="locked" @(ViewBag.Status == "locked" ? "selected" : "")>鎖定</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="sortBy">排序方式</label>
                            <select class="form-control" id="sortBy" name="sortBy">
                                <option value="name" @(ViewBag.SortBy == "name" ? "selected" : "")>用戶名稱</option>
                                <option value="account" @(ViewBag.SortBy == "account" ? "selected" : "")>帳號</option>
                                <option value="created" @(ViewBag.SortBy == "created" ? "selected" : "")>註冊時間</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="pageSize">每頁顯示</label>
                            <select class="form-control" id="pageSize" name="pageSize">
                                <option value="10" @(ViewBag.PageSize == 10 ? "selected" : "")>10</option>
                                <option value="25" @(ViewBag.PageSize == 25 ? "selected" : "")>25</option>
                                <option value="50" @(ViewBag.PageSize == 50 ? "selected" : "")>50</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> 搜尋
                                </button>
                                <a href="@Url.Action("Index", "AdminUser")" class="btn btn-secondary">
                                    <i class="fas fa-undo"></i> 重置
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- 用戶列表 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">用戶列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="userTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>用戶ID</th>
                            <th>用戶名稱</th>
                            <th>帳號</th>
                            <th>狀態</th>
                            <th>註冊時間</th>
                            <th>最後登入</th>
                            <th>點數餘額</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.User_ID</td>
                                    <td>@user.User_name</td>
                                    <td>@user.User_Account</td>
                                    <td>
                                        @if (user.User_LockoutEnabled && user.User_LockoutEnd.HasValue && user.User_LockoutEnd > DateTime.Now)
                                        {
                                            <span class="badge badge-danger">鎖定</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">啟用</span>
                                        }
                                    </td>
                                    <td>@user.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@user.LastLoginAt?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@(user.User_Wallet?.User_Point ?? 0)</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "AdminUser", new { id = user.User_ID })" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "AdminUser", new { id = user.User_ID })" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "AdminUser", new { id = user.User_ID })" class="btn btn-danger btn-sm" onclick="return confirm('確定要刪除這個用戶嗎？')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">沒有找到用戶資料</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- 分頁 -->
            @if (Model != null && Model.TotalCount > 0)
            {
                <nav aria-label="用戶分頁">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", "AdminUser", new { page = Model.PageNumber - 1, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status, sortBy = ViewBag.SortBy, pageSize = ViewBag.PageSize })">上一頁</a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", "AdminUser", new { page = i, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status, sortBy = ViewBag.SortBy, pageSize = ViewBag.PageSize })">@i</a>
                            </li>
                        }
                        
                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", "AdminUser", new { page = Model.PageNumber + 1, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status, sortBy = ViewBag.SortBy, pageSize = ViewBag.PageSize })">下一頁</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#userTable').DataTable({
                "paging": false,
                "searching": false,
                "info": false,
                "ordering": true,
                "columnDefs": [
                    { "orderable": false, "targets": 7 }
                ]
            });
        });
    </script>
}
