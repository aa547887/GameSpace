@model IEnumerable<GameSpace.Models.User>
@{
    ViewData["Title"] = "用戶管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">用戶管理</h1>
        <a href="@Url.Action("Create")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> 新增用戶
        </a>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">用戶列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>用戶ID</th>
                            <th>用戶名稱</th>
                            <th>帳號</th>
                            <th>Email</th>
                            <th>狀態</th>
                            <th>註冊時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.UserName</td>
                                <td>@user.UserAccount</td>
                                <td>@(user.UserIntroduce?.Email ?? "未設定")</td>
                                <td>
                                    @if (user.UserRight?.UserStatus == true)
                                    {
                                        <span class="badge badge-success">啟用</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">停用</span>
                                    }
                                </td>
                                <td>@(user.UserIntroduce?.CreateAccount.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = user.UserId })" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = user.UserId })" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = user.UserId })" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- DataTables JavaScript -->
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>

<script>
.ready(function() {
    #dataTable.DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
        },
        "pageLength": 25,
        "order": [[ 0, "desc" ]]
    });
});
</script>

