@model GameSpace.Areas.MiniGame.Models.Settings.PetColorChangeSettings
@{
    ViewData["Title"] = "刪除寵物換色點數設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">刪除寵物換色點數設定</h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> 返回列表
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">確認刪除</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>警告：</strong>您確定要刪除此設定嗎？此操作無法復原。
            </div>

            <dl class="row">
                <dt class="col-sm-3">設定ID</dt>
                <dd class="col-sm-9">@Model.SettingId</dd>

                <dt class="col-sm-3">設定名稱</dt>
                <dd class="col-sm-9">@Model.SettingName</dd>

                <dt class="col-sm-3">換色所需點數</dt>
                <dd class="col-sm-9">@Model.PointsRequired.ToString("N0")</dd>

                <dt class="col-sm-3">狀態</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">啟用</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">停用</span>
                    }
                </dd>

                <dt class="col-sm-3">建立時間</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input asp-for="SettingId" type="hidden" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> 確認刪除
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> 取消
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

