@{
    ViewData["Title"] = "會員簽到統計管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-calendar-check mr-2"></i>會員簽到統計管理
        </h1>
        <div class="d-flex">
            <a href="@Url.Action("RuleSettings")" class="btn btn-primary mr-2">
                <i class="fas fa-cog"></i> 規則設定
            </a>
            <a href="@Url.Action("SignInRules")" class="btn btn-success">
                <i class="fas fa-calendar-alt"></i> 簽到規則
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">今日簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">567</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">連續簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">234</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-fire fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">本月簽到率</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">78.5%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">總簽到次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">12,456</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-trophy fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-list"></i> 管理功能
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("QueryRecords")" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-search"></i> 查詢記錄
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("ViewRecords")" class="btn btn-outline-success btn-block">
                                <i class="fas fa-eye"></i> 查看記錄
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("RuleSettings")" class="btn btn-outline-info btn-block">
                                <i class="fas fa-cog"></i> 規則設定
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("SignInRules")" class="btn btn-outline-warning btn-block">
                                <i class="fas fa-calendar-alt"></i> 簽到規則
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
