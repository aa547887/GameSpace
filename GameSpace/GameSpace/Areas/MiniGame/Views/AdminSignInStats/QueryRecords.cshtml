@{
    ViewData["Title"] = "查詢簽到記錄";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-calendar-check mr-2"></i>查詢簽到記錄
        </h1>
        <div class="d-flex">
            <a href="@Url.Action("Index")" class="btn btn-secondary mr-2">
                <i class="fas fa-arrow-left"></i> 返回
            </a>
        </div>
    </div>

    <!-- 搜尋區域 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-filter"></i> 搜尋條件
                    </h6>
                </div>
                <div class="card-body">
                    <form id="searchForm">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="userId" class="form-label">會員ID</label>
                                <input type="text" class="form-control" id="userId" name="userId" placeholder="輸入會員ID">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="userName" class="form-label">會員名稱</label>
                                <input type="text" class="form-control" id="userName" name="userName" placeholder="輸入會員名稱">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="startDate" class="form-label">開始日期</label>
                                <input type="date" class="form-control" id="startDate" name="startDate">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="endDate" class="form-label">結束日期</label>
                                <input type="date" class="form-control" id="endDate" name="endDate">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="signInType" class="form-label">簽到類型</label>
                                <select class="form-control" id="signInType" name="signInType">
                                    <option value="">全部類型</option>
                                    <option value="daily">每日簽到</option>
                                    <option value="weekly">每週簽到</option>
                                    <option value="monthly">每月簽到</option>
                                    <option value="special">特殊簽到</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="status" class="form-label">狀態</label>
                                <select class="form-control" id="status" name="status">
                                    <option value="">全部狀態</option>
                                    <option value="success">成功</option>
                                    <option value="failed">失敗</option>
                                    <option value="missed">錯過</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="minPoints" class="form-label">最小獎勵點數</label>
                                <input type="number" class="form-control" id="minPoints" name="minPoints" placeholder="0">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="maxPoints" class="form-label">最大獎勵點數</label>
                                <input type="number" class="form-control" id="maxPoints" name="maxPoints" placeholder="999999">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-right">
                                <button type="button" class="btn btn-primary" id="searchBtn">
                                    <i class="fas fa-search"></i> 搜尋
                                </button>
                                <button type="button" class="btn btn-secondary" id="resetBtn">
                                    <i class="fas fa-undo"></i> 重置
                                </button>
                                <button type="button" class="btn btn-success" id="exportBtn">
                                    <i class="fas fa-download"></i> 匯出
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 統計概覽 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總簽到次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalSignIns">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">成功簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="successSignIns">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">總獎勵點數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalPoints">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">連續簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="maxStreak">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-fire fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 結果區域 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-list"></i> 查詢結果
                    </h6>
                    <span class="badge badge-info" id="resultCount">共 0 筆資料</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="signInTable">
                            <thead class="thead-light">
                                <tr>
                                    <th>會員ID</th>
                                    <th>會員名稱</th>
                                    <th>簽到日期</th>
                                    <th>簽到類型</th>
                                    <th>狀態</th>
                                    <th>獎勵點數</th>
                                    <th>連續天數</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- 簽到記錄數據將通過 AJAX 動態載入 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 詳細資訊 Modal -->
<div class="modal fade" id="detailModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">簽到記錄詳細資訊</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>基本資訊</h6>
                        <table class="table table-sm">
                            <tr><td>會員ID:</td><td id="detailUserId"></td></tr>
                            <tr><td>會員名稱:</td><td id="detailUserName"></td></tr>
                            <tr><td>簽到日期:</td><td id="detailSignInDate"></td></tr>
                            <tr><td>簽到類型:</td><td id="detailSignInType"></td></tr>
                            <tr><td>狀態:</td><td id="detailStatus"></td></tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>獎勵資訊</h6>
                        <table class="table table-sm">
                            <tr><td>獎勵點數:</td><td id="detailPoints"></td></tr>
                            <tr><td>連續天數:</td><td id="detailStreak"></td></tr>
                            <tr><td>簽到時間:</td><td id="detailSignInTime"></td></tr>
                            <tr><td>IP地址:</td><td id="detailIpAddress"></td></tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                <button type="button" class="btn btn-warning" id="revokeSignInBtn">撤銷簽到</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // 初始化 DataTable
        var table = $("#signInTable").DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
            },
            "pageLength": 25,
            "order": [[ 2, "desc" ]],
            "columnDefs": [
                { "orderable": false, "targets": 7 }
            ]
        });

        // 搜尋功能
        $("#searchBtn").click(function() {
            var formData = $("#searchForm").serialize();
            $.ajax({
                url: "@Url.Action("SearchSignInRecords", "AdminSignInStats")",
                type: "POST",
                data: formData,
                success: function(response) {
                    if (response.success) {
                        loadDataToTable(response.data);
                        updateStatistics(response.statistics);
                    } else {
                        alert("搜尋失敗: " + response.message);
                    }
                },
                error: function() {
                    alert("搜尋請求失敗，請稍後再試");
                }
            });
        });

        // 重置功能
        $("#resetBtn").click(function() {
            $("#searchForm")[0].reset();
            table.clear().draw();
            $("#resultCount").text("共 0 筆資料");
            updateStatistics({ totalSignIns: 0, successSignIns: 0, totalPoints: 0, maxStreak: 0 });
        });

        // 匯出功能
        $("#exportBtn").click(function() {
            var formData = $("#searchForm").serialize();
            window.open("@Url.Action("ExportSignInRecords", "AdminSignInStats")?" + formData, "_blank");
        });

        // 載入數據到表格
        function loadDataToTable(data) {
            table.clear();
            data.forEach(function(row) {
                var statusClass = "";
                switch(row.status) {
                    case "成功": statusClass = "badge-success"; break;
                    case "失敗": statusClass = "badge-danger"; break;
                    case "錯過": statusClass = "badge-warning"; break;
                }
                
                var actionButtons = "<button class=\"btn btn-sm btn-info\" onclick=\"viewDetail(\
 + row.recordId + 
\)\">查看</button>";
                if (row.status === "成功") {
                    actionButtons += " <button class=\"btn btn-sm btn-warning\" onclick=\"revokeSignIn(\ + row.recordId + \)\">撤銷</button>";
                }
                
                table.row.add([
                    row.userId,
                    row.userName,
                    row.signInDate,
                    row.signInType,
                    "<span class=\"badge " + statusClass + "\">" + row.status + "</span>",
                    row.points,
                    row.streak,
                    actionButtons
                ]);
            });
            table.draw();
            $("#resultCount").text("共 " + data.length + " 筆資料");
        }

        // 更新統計資訊
        function updateStatistics(stats) {
            $("#totalSignIns").text(stats.totalSignIns);
            $("#successSignIns").text(stats.successSignIns);
            $("#totalPoints").text(stats.totalPoints.toLocaleString());
            $("#maxStreak").text(stats.maxStreak);
        }

        // 查看詳細資訊
        window.viewDetail = function(recordId) {
            $.ajax({
                url: "@Url.Action("GetSignInDetail", "AdminSignInStats")",
                type: "GET",
                data: { recordId: recordId },
                success: function(response) {
                    if (response.success) {
                        $("#detailUserId").text(response.data.userId);
                        $("#detailUserName").text(response.data.userName);
                        $("#detailSignInDate").text(response.data.signInDate);
                        $("#detailSignInType").text(response.data.signInType);
                        $("#detailStatus").text(response.data.status);
                        $("#detailPoints").text(response.data.points);
                        $("#detailStreak").text(response.data.streak);
                        $("#detailSignInTime").text(response.data.signInTime);
                        $("#detailIpAddress").text(response.data.ipAddress);
                        $("#detailModal").modal("show");
                    } else {
                        alert("獲取詳細資訊失敗: " + response.message);
                    }
                },
                error: function() {
                    alert("獲取詳細資訊失敗，請稍後再試");
                }
            });
        };

        // 撤銷簽到
        window.revokeSignIn = function(recordId) {
            if (confirm("確定要撤銷此簽到記錄嗎？")) {
                $.ajax({
                    url: "@Url.Action("RevokeSignIn", "AdminSignInStats")",
                    type: "POST",
                    data: { recordId: recordId },
                    success: function(response) {
                        if (response.success) {
                            alert("簽到記錄撤銷成功");
                            $("#searchBtn").click(); // 重新搜尋
                        } else {
                            alert("簽到記錄撤銷失敗: " + response.message);
                        }
                    },
                    error: function() {
                        alert("簽到記錄撤銷失敗，請稍後再試");
                    }
                });
            }
        };

        // 撤銷簽到按鈕
        $("#revokeSignInBtn").click(function() {
            var recordId = $("#detailUserId").text();
            if (confirm("確定要撤銷此簽到記錄嗎？")) {
                $.ajax({
                    url: "@Url.Action("RevokeSignIn", "AdminSignInStats")",
                    type: "POST",
                    data: { recordId: recordId },
                    success: function(response) {
                        if (response.success) {
                            alert("簽到記錄撤銷成功");
                            $("#detailModal").modal("hide");
                            $("#searchBtn").click(); // 重新搜尋
                        } else {
                            alert("簽到記錄撤銷失敗: " + response.message);
                        }
                    },
                    error: function() {
                        alert("簽到記錄撤銷失敗，請稍後再試");
                    }
                });
            }
        });
    });
</script>
