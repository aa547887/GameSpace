@model GameSpace.Areas.MiniGame.Models.AdminSignInUserHistoryViewModel
@{
    ViewData["Title"] = "查詢會員簽到紀錄";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">查詢會員簽到紀錄</h1>
    </div>

    <!-- 搜索區域 -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">搜索條件</h6>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="QueryRecords">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="userId">用戶ID</label>
                                    <input type="number" class="form-control" id="userId" name="userId" 
                                           value="@Model.UserId" placeholder="輸入用戶ID">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="userName">用戶名稱</label>
                                    <input type="text" class="form-control" id="userName" name="userName" 
                                           value="@Model.UserName" placeholder="輸入用戶名稱">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="startDate">開始日期</label>
                                    <input type="date" class="form-control" id="startDate" name="startDate">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <i class="fas fa-search"></i> 搜索
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 統計信息 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總簽到次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SignInHistory.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">總獲得點數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SignInHistory.Sum(x => x.PointsEarned)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">最長連續天數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.SignInHistory.Any() ? Model.SignInHistory.Max(x => x.ConsecutiveDays) : 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-fire fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">最後簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.SignInHistory.Any() ? Model.SignInHistory.Max(x => x.SignInDate).ToString("MM-dd") : "無")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 簽到紀錄列表 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">簽到紀錄列表</h6>
                </div>
                <div class="card-body">
                    @if (Model.SignInHistory.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>簽到日期</th>
                                        <th>用戶ID</th>
                                        <th>用戶名稱</th>
                                        <th>獲得點數</th>
                                        <th>連續天數</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.SignInHistory.OrderByDescending(x => x.SignInDate))
                                    {
                                        <tr>
                                            <td>@record.SignInDate.ToString("yyyy-MM-dd")</td>
                                            <td>@record.UserId</td>
                                            <td>@record.UserName</td>
                                            <td class="text-success font-weight-bold">+@record.PointsEarned</td>
                                            <td>
                                                @if (record.ConsecutiveDays >= 7)
                                                {
                                                    <span class="badge badge-danger">@record.ConsecutiveDays 天</span>
                                                }
                                                else if (record.ConsecutiveDays >= 3)
                                                {
                                                    <span class="badge badge-warning">@record.ConsecutiveDays 天</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-info">@record.ConsecutiveDays 天</span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="viewDetails(@record.Id)">
                                                    <i class="fas fa-eye"></i> 詳情
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-gray-300 mb-3"></i>
                            <p class="text-gray-500">沒有找到符合條件的簽到記錄</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function viewDetails(recordId) {
        // 這裡可以添加查看詳情的功能
        alert('查看簽到記錄詳情: ' + recordId);
    }
</script>
