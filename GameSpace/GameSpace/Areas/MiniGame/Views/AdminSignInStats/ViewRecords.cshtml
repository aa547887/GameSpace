@model IEnumerable<GameSpace.Areas.MiniGame.Models.SignInRecordModel>
@{
    ViewData["Title"] = "查看會員簽到紀錄";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">查看會員簽到紀錄</h1>
    </div>

    <!-- 搜尋表單 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">搜尋條件</h6>
        </div>
        <div class="card-body">
            <form method="get" id="searchForm">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="userId">用戶ID</label>
                            <input type="text" class="form-control" id="userId" name="userId" placeholder="輸入用戶ID">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="userName">用戶名稱</label>
                            <input type="text" class="form-control" id="userName" name="userName" placeholder="輸入用戶名稱">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="signInDate">簽到日期</label>
                            <input type="date" class="form-control" id="signInDate" name="signInDate">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="startDate">開始日期</label>
                            <input type="date" class="form-control" id="startDate" name="startDate">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="endDate">結束日期</label>
                            <input type="date" class="form-control" id="endDate" name="endDate">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> 搜尋
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="resetForm()">
                        <i class="fas fa-undo"></i> 重置
                    </button>
                    <button type="button" class="btn btn-success" onclick="exportRecords()">
                        <i class="fas fa-download"></i> 匯出
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 統計資訊 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總簽到次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalSignIns">1,234</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">總發放點數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalPoints">12,340</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-coins fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">最長連續簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="longestStreak">30 天</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-fire fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">最後簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="lastSignIn">2024-01-15</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 簽到記錄 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">簽到記錄</h6>
            <span class="badge badge-info" id="resultCount">共 0 筆記錄</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>簽到時間</th>
                            <th>用戶ID</th>
                            <th>用戶名稱</th>
                            <th>獲得點數</th>
                            <th>連續天數</th>
                            <th>獎勵類型</th>
                            <th>IP位址</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td>@record.SignInDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@record.UserId</td>
                                    <td>@record.UserName</td>
                                    <td>
                                        <span class="font-weight-bold text-success">+@record.PointsEarned</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-info">@record.ConsecutiveDays 天</span>
                                    </td>
                                    <td>
                                        @if (record.BonusType == "Daily")
                                        {
                                            <span class="badge badge-primary">每日簽到</span>
                                        }
                                        else if (record.BonusType == "Consecutive")
                                        {
                                            <span class="badge badge-success">連續獎勵</span>
                                        }
                                        else if (record.BonusType == "Weekly")
                                        {
                                            <span class="badge badge-info">週獎勵</span>
                                        }
                                        else if (record.BonusType == "Monthly")
                                        {
                                            <span class="badge badge-warning">月獎勵</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@record.BonusType</span>
                                        }
                                    </td>
                                    <td>@record.IPAddress</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" onclick="viewSignInDetails(@record.Id)">
                                            <i class="fas fa-eye"></i> 詳情
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">請輸入搜尋條件進行查詢</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
function resetForm() {
    document.getElementById("searchForm").reset();
}

function exportRecords() {
    // 匯出簽到記錄
    alert("匯出功能開發中...");
}

function viewSignInDetails(recordId) {
    // 查看簽到詳情
    alert("查看簽到詳情: " + recordId);
}

// 更新結果計數
function updateResultCount() {
    const rows = document.querySelectorAll("tbody tr");
    const count = rows.length - (rows.length > 0 && rows[0].cells[0].textContent.includes("請輸入") ? 1 : 0);
    document.getElementById("resultCount").textContent = `共 ${count} 筆記錄`;
}

// 頁面載入時執行
document.addEventListener("DOMContentLoaded", function() {
    updateResultCount();
});
</script>
