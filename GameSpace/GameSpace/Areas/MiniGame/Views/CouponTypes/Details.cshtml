@model GameSpace.Models.CouponType
@{
    ViewData["Title"] = "優惠類型明細";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.CouponTypeId</dd>

            <dt class="col-sm-3">名稱</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">折扣類型</dt>
            <dd class="col-sm-9">@Model.DiscountType</dd>

            <dt class="col-sm-3">折扣值</dt>
            <dd class="col-sm-9">@Model.DiscountValue</dd>

            <dt class="col-sm-3">最低消費</dt>
            <dd class="col-sm-9">@Model.MinSpend</dd>

            <dt class="col-sm-3">有效期間</dt>
            <dd class="col-sm-9">
                <div>@Model.ValidFrom.ToString("yyyy/MM/dd HH:mm") → @Model.ValidTo.ToString("yyyy/MM/dd HH:mm")</div>
            </dd>

            <dt class="col-sm-3">點數成本</dt>
            <dd class="col-sm-9">@Model.PointsCost</dd>

            <dt class="col-sm-3">描述</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.CouponTypeId" class="btn btn-warning">編輯</a>
    <a asp-action="Index" class="btn btn-outline-secondary">返回清單</a>
</div>
