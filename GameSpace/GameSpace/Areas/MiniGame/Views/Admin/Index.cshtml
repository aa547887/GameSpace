@{
    ViewData["Title"] = "MiniGame 管理後台";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- 頁面標題 -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-tachometer-alt mr-2 text-primary"></i>MiniGame 管理後台
        </h1>
        <div class="d-flex">
            <span class="text-muted">歡迎回來，管理員！</span>
        </div>
    </div>

    <!-- 統計卡片 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總會員數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalUsers">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-success">+5.2%</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">今日簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="todaySignIns">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-success">+12</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">活躍寵物</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="activePets">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-info">+8</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-paw fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 hover-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">今日遊戲</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="todayGames">載入中...</div>
                            <div class="text-xs text-muted">較昨日 <span class="text-warning">+23</span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 功能模組 -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-wallet"></i> 會員錢包管理
                    </h6>
                    <a href="@Url.Action("Index", "AdminWallet")" class="btn btn-sm btn-primary">進入管理</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("QueryPoints", "AdminWallet")" class="btn btn-outline-primary btn-sm btn-block">
                                <i class="fas fa-search"></i> 查詢會員點數
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("QueryCoupons", "AdminWallet")" class="btn btn-outline-success btn-sm btn-block">
                                <i class="fas fa-ticket-alt"></i> 查詢優惠券
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("QueryEVouchers", "AdminWallet")" class="btn btn-outline-info btn-sm btn-block">
                                <i class="fas fa-gift"></i> 查詢電子券
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("ViewHistory", "AdminWallet")" class="btn btn-outline-warning btn-sm btn-block">
                                <i class="fas fa-history"></i> 查看收支明細
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-calendar-check"></i> 會員簽到系統
                    </h6>
                    <a href="@Url.Action("Index", "AdminSignIn")" class="btn btn-sm btn-primary">進入管理</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("Rules", "AdminSignIn")" class="btn btn-outline-primary btn-sm btn-block">
                                <i class="fas fa-cog"></i> 簽到規則設定
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("UserHistory", "AdminSignIn")" class="btn btn-outline-success btn-sm btn-block">
                                <i class="fas fa-history"></i> 查看會員簽到紀錄
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-paw"></i> 寵物系統管理
                    </h6>
                    <a href="@Url.Action("Index", "AdminPet")" class="btn btn-sm btn-primary">進入管理</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("SystemRules", "AdminPet")" class="btn btn-outline-primary btn-sm btn-block">
                                <i class="fas fa-cog"></i> 整體寵物系統規則設定
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("IndividualSettings", "AdminPet")" class="btn btn-outline-success btn-sm btn-block">
                                <i class="fas fa-user-edit"></i> 會員個別寵物設定
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("QueryPets", "AdminPet")" class="btn btn-outline-info btn-sm btn-block">
                                <i class="fas fa-search"></i> 會員個別寵物清單含查詢
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("ColorChangeHistory", "AdminPet")" class="btn btn-outline-warning btn-sm btn-block">
                                <i class="fas fa-palette"></i> 換膚／換背景紀錄查詢
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-gamepad"></i> 小遊戲系統管理
                    </h6>
                    <a href="@Url.Action("Index", "AdminMiniGame")" class="btn btn-sm btn-primary">進入管理</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("GameRules", "AdminMiniGame")" class="btn btn-outline-primary btn-sm btn-block">
                                <i class="fas fa-cog"></i> 遊戲規則設定
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("QueryRecords", "AdminMiniGame")" class="btn btn-outline-success btn-sm btn-block">
                                <i class="fas fa-history"></i> 查看會員遊戲紀錄
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 最近活動 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock"></i> 最近活動
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="recentActivityTable">
                            <thead>
                                <tr>
                                    <th>時間</th>
                                    <th>模組</th>
                                    <th>操作</th>
                                    <th>會員</th>
                                    <th>狀態</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2024-01-15 14:30</td>
                                    <td><span class="badge badge-primary">錢包</span></td>
                                    <td>點數發放</td>
                                    <td>user001</td>
                                    <td><span class="badge badge-success">成功</span></td>
                                </tr>
                                <tr>
                                    <td>2024-01-15 14:25</td>
                                    <td><span class="badge badge-info">簽到</span></td>
                                    <td>每日簽到</td>
                                    <td>user002</td>
                                    <td><span class="badge badge-success">成功</span></td>
                                </tr>
                                <tr>
                                    <td>2024-01-15 14:20</td>
                                    <td><span class="badge badge-warning">寵物</span></td>
                                    <td>寵物升級</td>
                                    <td>user003</td>
                                    <td><span class="badge badge-success">成功</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1) !important;
    }

    .card-header {
        background: linear-gradient(135deg, #f8f9fc 0%, #e3e6f0 100%);
        border-bottom: 1px solid #e3e6f0;
    }

    .table th {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        font-weight: 600;
    }

    .badge {
        font-size: 0.75em;
        padding: 0.5em 0.8em;
    }

    .text-xs {
        font-size: 0.7rem;
    }
</style>

<script>
    $(document).ready(function() {
        // 模擬載入數據
        setTimeout(function() {
            $("#totalUsers").text("1,234");
            $("#todaySignIns").text("89");
            $("#activePets").text("156");
            $("#todayGames").text("234");
        }, 1000);

        // 初始化 DataTable
        $("#recentActivityTable").DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
            },
            "pageLength": 10,
            "order": [[0, "desc"]],
            "columnDefs": [
                { "orderable": false, "targets": 4 }
            ]
        });

        // 添加載入動畫
        $(".card").each(function(index) {
            $(this).css("animation-delay", (index * 0.1) + "s");
            $(this).addClass("fade-in");
        });
    });
</script>
