@model GameSpace.Areas.MiniGame.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "管理員儀表板";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-tachometer-alt me-2 text-primary"></i>管理員儀表板
    </h1>
    <div class="d-flex">
        <span class="badge bg-success me-2 shadow-sm" id="systemStatus">
            <i class="fas fa-circle text-success"></i> 系統正常
        </span>
        <span class="badge bg-info shadow-sm" id="currentTime">
            <i class="fas fa-clock"></i> @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
        </span>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">總用戶數</div>
                        <div class="h5 mb-0 font-weight-bold text-white">@Model.TotalUsers.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card shadow h-100 py-2" style="background: linear-gradient(135deg, #1cc88a 0%, #17a673 100%);">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">活躍用戶</div>
                        <div class="h5 mb-0 font-weight-bold text-white">@Model.ActiveUsers.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card shadow h-100 py-2" style="background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">總寵物數</div>
                        <div class="h5 mb-0 font-weight-bold text-white">@Model.TotalPets.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-paw fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card shadow h-100 py-2" style="background: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%);">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">總點數</div>
                        <div class="h5 mb-0 font-weight-bold text-white">@Model.TotalPoints.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-coins fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Today's Statistics -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">今日簽到</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TodaySignIns</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">今日遊戲</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TodayGames</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">本月簽到</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ThisMonthSignIns</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">本月遊戲</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ThisMonthGames</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-trophy fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row">
    <!-- User Growth Chart -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">用戶成長趨勢</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow">
                        <a class="dropdown-item" href="#">匯出資料</a>
                        <a class="dropdown-item" href="#">列印報表</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="userGrowthChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Game Statistics -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">遊戲統計</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="gameStatsChart"></canvas>
                </div>
                <div class="mt-4 text-center small">
                    <span class="mr-2">
                        <i class="fas fa-circle text-primary"></i> 小遊戲
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-success"></i> 競技遊戲
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-info"></i> 休閒遊戲
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">最近活動</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th>用戶</th>
                                <th>活動類型</th>
                                <th>描述</th>
                                <th>時間</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                @activity.UserName.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <div class="font-weight-bold">@activity.UserName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(activity.ActivityType == "簽到" ? "success" : "info")">
                                            @activity.ActivityType
                                        </span>
                                    </td>
                                    <td>@activity.Description</td>
                                    <td>@activity.ActivityTime.ToString("MM/dd HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 用戶成長趨勢圖
        const userGrowthCtx = document.getElementById('userGrowthChart').getContext('2d');
        const userGrowthChart = new Chart(userGrowthCtx, {
            type: 'line',
            data: {
                labels: ['1月', '2月', '3月', '4月', '5月', '6月'],
                datasets: [{
                    label: '用戶數',
                    data: [12, 19, 3, 5, 2, 3],
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // 遊戲統計圓餅圖
        const gameStatsCtx = document.getElementById('gameStatsChart').getContext('2d');
        const gameStatsChart = new Chart(gameStatsCtx, {
            type: 'doughnut',
            data: {
                labels: ['小遊戲', '競技遊戲', '休閒遊戲'],
                datasets: [{
                    data: [@Model.TotalMiniGames, 150, 200],
                    backgroundColor: [
                        'rgb(54, 185, 204)',
                        'rgb(28, 200, 138)',
                        'rgb(246, 194, 62)'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // 更新時間
        setInterval(function() {
            const now = new Date();
            const timeString = now.toLocaleString('zh-TW', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
            document.getElementById('currentTime').innerHTML = '<i class="fas fa-clock"></i> ' + timeString;
        }, 1000);
    </script>
}

