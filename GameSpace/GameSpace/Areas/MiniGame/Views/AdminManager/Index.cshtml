@{
    ViewData["Title"] = "管理者管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- 頁面標題 -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">管理者管理</h1>
        <div>
            <a href="@Url.Action("Create", "AdminManager")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> 新增管理者
            </a>
            <a href="@Url.Action("CreateRole", "AdminManager")" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
                <i class="fas fa-user-tag fa-sm text-white-50"></i> 新增角色
            </a>
        </div>
    </div>

    <!-- 統計卡片 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                總管理者數
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(ViewBag.TotalManagers ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users-cog fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                啟用管理者
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(ViewBag.ActiveManagers ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                角色數量
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(ViewBag.TotalRoles ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tag fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                今日登入
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(ViewBag.TodayLogins ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-sign-in-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 搜尋和篩選 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">搜尋和篩選</h6>
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("Index", "AdminManager")">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="searchTerm">搜尋關鍵字</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="管理者名稱或帳號">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="status">狀態</label>
                            <select class="form-control" id="status" name="status">
                                <option value="">全部</option>
                                <option value="active" selected="@(ViewBag.Status == "active" ? "selected" : "")">啟用</option>
                                <option value="locked" selected="@(ViewBag.Status == "locked" ? "selected" : "")">鎖定</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="role">角色</label>
                            <select class="form-control" id="role" name="role">
                                <option value="">全部</option>
                                @if (ViewBag.RoleList != null)
                                {
                                    @foreach (var role in ViewBag.RoleList)
                                    {
                                        <option value="@role.ManagerRole_Id" @(ViewBag.Role == role.ManagerRole_Id.ToString() ? "selected" : "")>@role.role_name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="sortBy">排序方式</label>
                            <select class="form-control" id="sortBy" name="sortBy">
                                <option value="name" @(ViewBag.SortBy == "name" ? "selected" : "")>管理者名稱</option>
                                <option value="account" @(ViewBag.SortBy == "account" ? "selected" : "")>帳號</option>
                                <option value="created" @(ViewBag.SortBy == "created" ? "selected" : "")>註冊時間</option>
                                <option value="lastLogin" @(ViewBag.SortBy == "lastLogin" ? "selected" : "")>最後登入</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> 搜尋
                                </button>
                                <a href="@Url.Action("Index", "AdminManager")" class="btn btn-secondary">
                                    <i class="fas fa-undo"></i> 重置
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- 管理者列表 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">管理者列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="managerTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>管理者ID</th>
                            <th>管理者名稱</th>
                            <th>帳號</th>
                            <th>角色</th>
                            <th>狀態</th>
                            <th>註冊時間</th>
                            <th>最後登入</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Managers.Any())
                        {
                            @foreach (var manager in Model.Managers)
                            {
                                <tr>
                                    <td>@manager.Manager_Id</td>
                                    <td>@manager.Manager_Name</td>
                                    <td>@manager.Manager_Account</td>
                                    <td>
                                        @if (manager.ManagerRoles.Any())
                                        {
                                            @foreach (var role in manager.ManagerRoles)
                                            {
                                                <span class="badge badge-info">@role.ManagerRolePermission.role_name</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">無角色</span>
                                        }
                                    </td>
                                    <td>
                                        @if (manager.Manager_LockoutEnabled && manager.Manager_LockoutEnd.HasValue && manager.Manager_LockoutEnd > DateTime.Now)
                                        {
                                            <span class="badge badge-danger">鎖定</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">啟用</span>
                                        }
                                    </td>
                                    <td>@manager.Administrator_registration_date?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@(manager.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "AdminManager", new { id = manager.Manager_Id })" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "AdminManager", new { id = manager.Manager_Id })" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "AdminManager", new { id = manager.Manager_Id })" class="btn btn-danger btn-sm" onclick="return confirm('確定要刪除這個管理者嗎？')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">沒有找到管理者資料</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- 分頁 -->
            @if (Model != null && Model.TotalCount > 0)
            {
                <nav aria-label="管理者分頁">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", "AdminManager", new { page = Model.PageNumber - 1, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status, role = ViewBag.Role, sortBy = ViewBag.SortBy })">上一頁</a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", "AdminManager", new { page = i, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status, role = ViewBag.Role, sortBy = ViewBag.SortBy })">@i</a>
                            </li>
                        }
                        
                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", "AdminManager", new { page = Model.PageNumber + 1, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status, role = ViewBag.Role, sortBy = ViewBag.SortBy })">下一頁</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#managerTable').DataTable({
                "paging": false,
                "searching": false,
                "info": false,
                "ordering": true,
                "columnDefs": [
                    { "orderable": false, "targets": 7 }
                ]
            });
        });
    </script>
}

