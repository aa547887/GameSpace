@{
    ViewData["Title"] = "簽到管理";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">簽到管理</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchInput" placeholder="搜尋用戶...">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="searchBtn">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-primary" id="addSignInBtn">
                                <i class="fas fa-plus"></i> 新增簽到記錄
                            </button>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="signInTable">
                            <thead>
                                <tr>
                                    <th>簽到ID</th>
                                    <th>用戶ID</th>
                                    <th>簽到日期</th>
                                    <th>連續天數</th>
                                    <th>獲得獎勵</th>
                                    <th>簽到時間</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- 數據將通過 AJAX 加載 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 新增/編輯簽到模態框 -->
<div class="modal fade" id="signInModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signInModalTitle">新增簽到記錄</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="signInForm">
                    <input type="hidden" id="signInId" name="Id">
                    <div class="form-group">
                        <label for="userId">用戶ID</label>
                        <input type="text" class="form-control" id="userId" name="UserId" required>
                    </div>
                    <div class="form-group">
                        <label for="signInDate">簽到日期</label>
                        <input type="date" class="form-control" id="signInDate" name="SignInDate" required>
                    </div>
                    <div class="form-group">
                        <label for="consecutiveDays">連續天數</label>
                        <input type="number" class="form-control" id="consecutiveDays" name="ConsecutiveDays" min="1" required>
                    </div>
                    <div class="form-group">
                        <label for="reward">獲得獎勵</label>
                        <input type="text" class="form-control" id="reward" name="Reward" placeholder="例如：100遊戲幣">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="saveSignInBtn">儲存</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadSignIns();
            
            $('#addSignInBtn').click(function() {
                $('#signInModalTitle').text('新增簽到記錄');
                $('#signInForm')[0].reset();
                $('#signInId').val('');
                $('#signInDate').val(new Date().toISOString().split('T')[0]);
                $('#signInModal').modal('show');
            });
            
            $('#saveSignInBtn').click(function() {
                saveSignIn();
            });
            
            $('#searchBtn').click(function() {
                loadSignIns();
            });
            
            $('#searchInput').keypress(function(e) {
                if (e.which == 13) {
                    loadSignIns();
                }
            });
        });
        
        function loadSignIns() {
            var searchTerm = $('#searchInput').val();
            $.ajax({
                url: '/MiniGame/SignIn/GetSignIns',
                type: 'GET',
                data: { search: searchTerm },
                success: function(data) {
                    var tbody = $('#signInTable tbody');
                    tbody.empty();
                    
                    if (data && data.length > 0) {
                        $.each(data, function(index, signIn) {
                            var row = '<tr>' +
                                '<td>' + signIn.id + '</td>' +
                                '<td>' + signIn.userId + '</td>' +
                                '<td>' + formatDate(signIn.signInDate) + '</td>' +
                                '<td>' + signIn.consecutiveDays + '</td>' +
                                '<td>' + (signIn.reward || '無') + '</td>' +
                                '<td>' + formatDateTime(signIn.createdAt) + '</td>' +
                                '<td>' +
                                    '<button class="btn btn-sm btn-primary edit-signin" data-id="' + signIn.id + '">編輯</button> ' +
                                    '<button class="btn btn-sm btn-danger delete-signin" data-id="' + signIn.id + '">刪除</button>' +
                                '</td>' +
                            '</tr>';
                            tbody.append(row);
                        });
                    } else {
                        tbody.append('<tr><td colspan="7" class="text-center">無數據</td></tr>');
                    }
                },
                error: function() {
                    alert('載入簽到數據失敗');
                }
            });
        }
        
        function saveSignIn() {
            var formData = $('#signInForm').serialize();
            var isEdit = $('#signInId').val() !== '';
            var url = isEdit ? '/MiniGame/SignIn/Update' : '/MiniGame/SignIn/Create';
            
            $.ajax({
                url: url,
                type: 'POST',
                data: formData,
                success: function(response) {
                    if (response.success) {
                        $('#signInModal').modal('hide');
                        loadSignIns();
                        alert(isEdit ? '簽到記錄更新成功' : '簽到記錄新增成功');
                    } else {
                        alert('操作失敗: ' + response.message);
                    }
                },
                error: function() {
                    alert('操作失敗');
                }
            });
        }
        
        function formatDate(dateString) {
            var date = new Date(dateString);
            return date.toLocaleDateString('zh-TW');
        }
        
        function formatDateTime(dateString) {
            var date = new Date(dateString);
            return date.toLocaleString('zh-TW');
        }
        
        // 編輯簽到記錄
        $(document).on('click', '.edit-signin', function() {
            var signInId = $(this).data('id');
            $.ajax({
                url: '/MiniGame/SignIn/Get/' + signInId,
                type: 'GET',
                success: function(signIn) {
                    $('#signInModalTitle').text('編輯簽到記錄');
                    $('#signInId').val(signIn.id);
                    $('#userId').val(signIn.userId);
                    $('#signInDate').val(signIn.signInDate);
                    $('#consecutiveDays').val(signIn.consecutiveDays);
                    $('#reward').val(signIn.reward);
                    $('#signInModal').modal('show');
                },
                error: function() {
                    alert('載入簽到資料失敗');
                }
            });
        });
        
        // 刪除簽到記錄
        $(document).on('click', '.delete-signin', function() {
            if (confirm('確定要刪除這個簽到記錄嗎？')) {
                var signInId = $(this).data('id');
                $.ajax({
                    url: '/MiniGame/SignIn/Delete/' + signInId,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            loadSignIns();
                            alert('簽到記錄刪除成功');
                        } else {
                            alert('刪除失敗: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('刪除失敗');
                    }
                });
            }
        });
    </script>
}
