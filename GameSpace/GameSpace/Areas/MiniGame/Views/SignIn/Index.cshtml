@{
    ViewData["Title"] = "每日簽到";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-calendar-check mr-2"></i>每日簽到
        </h1>
        <div class="d-flex">
            <span class="badge badge-info mr-2">
                <i class="fas fa-clock"></i> @DateTime.Now.ToString("yyyy-MM-dd")
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-calendar-alt"></i> 簽到狀態
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-calendar-check fa-5x text-success mb-3"></i>
                        <h4 class="text-success">今日已簽到</h4>
                        <p class="text-muted">恭喜您完成今日簽到！</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card border-left-primary">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">連續簽到</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">7 天</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-left-success">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">今日獲得</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">10 點數</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-left-info">
                                <div class="card-body">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">總簽到</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">45 天</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-gift"></i> 簽到獎勵
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            每日簽到
                            <span class="badge badge-primary">10 點數</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            連續3天
                            <span class="badge badge-success">50 點數</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            連續7天
                            <span class="badge badge-info">100 點數</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            連續15天
                            <span class="badge badge-warning">200 點數</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            連續30天
                            <span class="badge badge-danger">500 點數</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-history"></i> 簽到記錄
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="signInTable">
                            <thead class="thead-light">
                                <tr>
                                    <th>日期</th>
                                    <th>狀態</th>
                                    <th>獲得點數</th>
                                    <th>連續天數</th>
                                    <th>備註</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2024-01-15</td>
                                    <td><span class="badge badge-success">已簽到</span></td>
                                    <td class="text-success">+10</td>
                                    <td>7</td>
                                    <td>連續7天獎勵 +100</td>
                                </tr>
                                <tr>
                                    <td>2024-01-14</td>
                                    <td><span class="badge badge-success">已簽到</span></td>
                                    <td class="text-success">+10</td>
                                    <td>6</td>
                                    <td>每日簽到</td>
                                </tr>
                                <tr>
                                    <td>2024-01-13</td>
                                    <td><span class="badge badge-success">已簽到</span></td>
                                    <td class="text-success">+10</td>
                                    <td>5</td>
                                    <td>每日簽到</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $("#signInTable").DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
            },
            "pageLength": 10,
            "order": [[ 0, "desc" ]]
        });
    });
</script>
