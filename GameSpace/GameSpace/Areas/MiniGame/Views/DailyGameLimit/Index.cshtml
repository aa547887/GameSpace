@model List<GameSpace.Areas.MiniGame.Models.ViewModels.DailyGameLimitListViewModel>
@{
    ViewData["Title"] = "每日遊戲次數限制設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-gamepad"></i> 每日遊戲次數限制設定
        </h1>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> 新增設定
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list"></i> 設定列表
            </h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>設定名稱</th>
                                <th>每日限制</th>
                                <th>描述</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SettingName</td>
                                    <td>@item.DailyLimit 次/天</td>
                                    <td>@(item.Description ?? "無")</td>
                                    <td>
                                        @if (item.IsEnabled)
                                        {
                                            <span class="badge badge-success">啟用</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">停用</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm">詳細</a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">編輯</a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">刪除</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <h5>沒有找到任何設定</h5>
                    <a href="@Url.Action("Create")" class="btn btn-primary">新增設定</a>
                </div>
            }
        </div>
    </div>
</div>


