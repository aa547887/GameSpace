@model GameSpace.Areas.MiniGame.Models.ViewModels.DailyGameLimitStatisticsViewModel
@{
    ViewData["Title"] = "每日遊戲次數限制統計";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-chart-bar"></i> 每日遊戲次數限制統計
        </h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> 返回列表
        </a>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總設定數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalSettings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-cog fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">啟用設定</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.EnabledSettings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">停用設定</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.DisabledSettings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-pause-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">平均限制</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AverageDailyLimit 次/天</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">限制範圍統計</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">最小限制</div>
                                <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.MinDailyLimit 次/天</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">最大限制</div>
                                <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.MaxDailyLimit 次/天</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">最後更新</h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">最後更新時間</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.LastUpdated.ToString("yyyy-MM-dd HH:mm:ss")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

