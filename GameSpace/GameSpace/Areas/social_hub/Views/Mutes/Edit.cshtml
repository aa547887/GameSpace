@model GameSpace.Models.Mute
@{
    ViewData["Title"] = "編輯詞彙";

    bool canManage = (bool)(ViewBag.CanManageMutes ?? false);
    bool canAdminAll = (bool)(ViewBag.CanAdminAll ?? false);
    int currentMid = (int)(ViewBag.ManagerId ?? 0);
    bool isOwner = Model?.ManagerId.HasValue == true && Model.ManagerId.Value == currentMid;
    string managerName = ViewBag.ManagerName as string ?? "-";
}

<div class="mutes-header">
    <h2 class="mutes-title">
        <span>@ViewData["Title"]</span>
        @if (!canAdminAll && !isOwner)
        {
            <span class="badge rounded-pill bg-warning text-dark">僅可管理自己建立</span>
        }
        else
        {
            <span class="badge rounded-pill badge-manage">可管理</span>
        }
    </h2>
    <div class="mutes-subtle">
        <span class="me-3"><i class="far fa-clock me-1"></i>@Html.AppTime(Model?.CreatedAt, "yyyy/MM/dd HH:mm")</span>
        <span><i class="far fa-id-badge me-1"></i>建立者：@managerName (@Model?.ManagerId)</span>
    </div>
</div>

<div class="mutes-card">
    <div class="card-body">
        <form asp-action="Edit" method="post" class="js-prevent-double-submit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MuteId" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Word" class="form-label">詞彙</label>
                <input asp-for="Word" class="form-control" placeholder="請輸入要過濾的詞彙" autocomplete="off" maxlength="50" />
                <span asp-validation-for="Word" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Replacement" class="form-label">替代字（選填）</label>
                <input asp-for="Replacement" class="form-control" placeholder="例：＊＊＊、或自訂如【封鎖】" autocomplete="off" maxlength="50" />
                <span asp-validation-for="Replacement" class="text-danger"></span>
                <div class="form-text">
                    留白時將使用預設遮罩（星號或固定字樣）；此設定<strong>只影響顯示</strong>，資料庫會保留原文。
                </div>
            </div>

            <div class="form-check form-switch mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">啟用</label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>儲存
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>返回
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link href="~/lib/social_hub/css/mutes.css" rel="stylesheet" />
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/social_hub/js/mutes.js"></script>
}
