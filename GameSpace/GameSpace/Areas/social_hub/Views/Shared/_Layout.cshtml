<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GamiPort</title>
    @* <title>@ViewData["Title"]</title> *@


    <link rel="icon" type="image/x-icon" href="~/icon/ImageToStl.com_Gamiport.ico" asp-append-version="true" />

    <!-- Bootstrap 5 & FontAwesome -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/stylecol.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        .card {
            border-radius: 1rem;
        }

        .badge {
            font-weight: 600;
        }

        .table td, .table th {
            vertical-align: middle;
        }
    </style>
</head>
<body id="top" class="d-flex flex-column vh-100">

    <!-- 第一層 Topbar -->
    @Html.Partial("_TopbarLevel1")

    <div class="d-flex flex-grow-1 position-relative">
        <!-- Sidebar -->
        <div id="sidebar" class="bg-dark text-white d-flex flex-column">
            <div class="p-3 flex-grow-1 d-flex flex-column">
                @Html.Partial("_Sidebar")
            </div>
        </div>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="flex-grow-1 d-flex flex-column overflow-hidden ms-0">
            @* @Html.Partial("_TopbarLevel2") *@

            <!-- Main Content -->
            <div class="flex-grow-1 overflow-auto p-3">
                @RenderBody()
            </div>

            <!-- Footer -->
            @Html.Partial("_Footer")
        </div>
    </div>

    <!-- Toggle Button 左下固定 -->
    <button id="sidebarToggle" class="btn btn-primary position-fixed bottom-0 start-0 m-3">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Scroll to Top Button 右下固定 -->
    <a class="btn btn-primary rounded-circle position-fixed bottom-0 end-0 m-3" href="#top"
       style="width:45px;height:45px;">
        <i class="fas fa-angle-up"></i>
    </a>

    @* ===== Scripts（順序很重要） ===== *@

    @* 1) jQuery 先（CDN + 本機 fallback） *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        // 如果 CDN 失敗則改用本機。請依你的實際 lib 路徑擇一。
        if (!window.jQuery) {
            document.write('<script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"><\/script>');
            // 或者如果你的專案是這個路徑，改為：
            // document.write('<script src="@Url.Content("~/lib/jquery/jquery.min.js")"><\/script>');
        }

        // 回報內容高度，父頁會依此調整 iframe 高度避免捲軸
        (function(){
          function report(){
            // 取得文件完整高度（含內距）
            const h = Math.ceil(document.documentElement.scrollHeight || document.body.scrollHeight || 600);
            window.parent?.postMessage({ type:'modal:height', height: h }, '*');
          }
          new ResizeObserver(report).observe(document.body);
          window.addEventListener('load', report);
          document.addEventListener('DOMContentLoaded', report);
          setTimeout(report, 0);
        })();

        // 任何帶 data-parent-close 的按鈕都能通知父頁關閉
        document.addEventListener('click', (e)=>{
          const btn = e.target.closest('[data-parent-close]');
          if(!btn) return;
          e.preventDefault();
          window.parent?.postMessage({ type:'modal:cancel' }, '*');
        });

    </script>

    @* 2) Bootstrap（不依賴 jQuery，但放後面無妨） *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* 3) 其他共用腳本 *@
    <script src="~/font-awesome/js/all.min.js"></script>

    @* SignalR（不依賴 jQuery，可保留原本位置） *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>

    @* 你的共用腳本（若用到 $，現在已可安全使用） *@
    <script src="~/js/test.js"></script>

    @* 4) View 的 Scripts（Create 會在這裡載 _ValidationScriptsPartial） *@
    @RenderSection("Scripts", required: false)
    @* 5) 全站通用 iframe Modal Host *@
    @await Html.PartialAsync("_ActionModalHost")

</body>

</html>
