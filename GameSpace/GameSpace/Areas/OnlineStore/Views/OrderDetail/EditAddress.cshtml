@model GameSpace.Areas.OnlineStore.ViewModels.ShippingAddressEditViewModels
@{
    ViewData["Title"] = "編輯收件地址";
}
<h5 class="mb-3">編輯收件地址</h5>

<!-- ★ 新增：顯示來自 TempData 的訊息（成功/錯誤/資訊） -->
@if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success mb-3">@ok</div>
}
@if (TempData["Warn"] is string warn && !string.IsNullOrWhiteSpace(warn))
{
    <div class="alert alert-warning mb-3">@warn</div>
}
@if (TempData["Info"] is string info && !string.IsNullOrWhiteSpace(info))
{
    <div class="alert alert-info mb-3">@info</div>
}
@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger mb-3">@err</div>
}

<form asp-area="OnlineStore" asp-controller="OrderDetail" asp-action="EditAddress" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="OrderId" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="mb-3">
        <label asp-for="Recipient" class="form-label">收件人 :</label>
        <input asp-for="Recipient" class="form-control" style="width:40%" />
        <span asp-validation-for="Recipient" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">行動電話 :</label>
        <input asp-for="Phone" class="form-control" style="width:40%" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-2 mb-3">
            <label asp-for="Country" class="form-label" >國家</label>
            <!-- ★ CHANGED: 國家改下拉，套 select2 -->
            <select asp-for="Country" class="form-select select2" asp-items="@(ViewBag.Countries as IEnumerable<SelectListItem>)"></select>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="col-md-2 mb-3">
            <label asp-for="City" class="form-label">城市</label>
            <!-- ★ CHANGED: 城市改下拉（台灣縣市） -->
            <select asp-for="City" class="form-select select2" asp-items="@(ViewBag.TaiwanCities as IEnumerable<SelectListItem>)"></select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="col-md-2 mb-3">
            <label asp-for="Zipcode" class="form-label">郵遞區號</label>
            <input asp-for="Zipcode" class="form-control" />
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>
    </div>


    <div class="mb-3">
        <label asp-for="Address1" class="form-label">地址</label>
        <input asp-for="Address1" class="form-control" style="width:50%" />
        <span asp-validation-for="Address1" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address2" class="form-label">備註</label>
        <input asp-for="Address2" class="form-control" style="width:50%" />
        <span asp-validation-for="Address2" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary"
           asp-area="OnlineStore" asp-controller="OrderDetail" asp-action="Detail"
           asp-route-id="@Model.OrderId">取消</a>

        <!-- ★ 關鍵：Submit 不要覆蓋 form 的 action -->
        <button type="submit" class="btn btn-primary">儲存</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- ★ CHANGED: Select2 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // ★ CHANGED: 啟用可搜尋下拉
            $('.select2').select2({
                width: '100%',
                placeholder: '請選擇',
                allowClear: true
            });
        });
    </script>
}
