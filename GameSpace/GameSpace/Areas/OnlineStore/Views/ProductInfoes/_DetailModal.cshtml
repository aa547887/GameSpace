@model GameSpace.Areas.OnlineStore.ViewModels.ProductDetailModalVM

<div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">商品明細（Detail）- @Model.ProductName</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
            <!-- 頂端條 -->
            <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="small text-muted">
                    商品ID：#@Model.ProductId　|　@Model.ProductType
                </div>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">上架</span>
                    }
                    else
                    {

                        <span class="badge bg-secondary">下架</span>
                    }
                </div>
            </div>

            <!-- 共同欄位（由 Info 帶來） -->
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input class="form-control" value="@Model.Price.ToString("N0")" readonly />
                        <label>售價</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input class="form-control" value="@Model.ShipmentQuantity" readonly />
                        <label>存量(Info)</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input class="form-control" value="@Model.SupplierName" readonly />
                        <label>供應商</label>
                    </div>
                </div>
            </div>

            <hr class="my-3" />

            @if (Model.ProductType == "game")
            {
                <!-- game 區 -->
                <h6 class="mb-2">Game</h6>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.PlatformId" readonly /><label>平台ID</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.PlatformName" readonly /><label>平台名稱</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.GameType" readonly /><label>遊戲類型</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.DownloadLink" readonly /><label>下載連結</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <textarea class="form-control" style="height:100px" readonly>@Model.GameDescription</textarea>
                            <label>說明</label>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- nogame 區 -->
                <h6 class="mb-2">NoGame</h6>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.MerchTypeName" readonly /><label>周邊分類</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.DigitalCode" readonly /><label>數位代碼</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.Size" readonly /><label>尺寸</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.Color" readonly /><label>顏色</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.Weight" readonly /><label>重量</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.Dimensions" readonly /><label>尺寸(mm/cm)</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.Material" readonly /><label>材質</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input class="form-control" value="@Model.StockQuantity" readonly /><label>庫存(Detail)</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <textarea class="form-control" style="height:100px" readonly>@Model.OtherDescription</textarea>
                            <label>說明</label>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Images?.Count > 0)
            {
                <hr class="my-3" />
                <div class="row g-2">
                    @foreach (var im in Model.Images)
                    {
                        <div class="col-4 col-md-3 col-lg-2">
                            <img class="img-fluid rounded border" src="@im.Url" alt="@im.Alt" />
                        </div>
                    }
                </div>
            }
        </div>

        <div class="modal-footer">
            <small class="text-muted me-auto">
                建立：@Model.ProductCreatedAt.ToString("yyyy/MM/dd HH:mm")（@Model.ProductCreatedBy）　
                更新：@Model.ProductUpdatedAt?.ToString("yyyy/MM/dd HH:mm")（@Model.ProductUpdatedBy）
            </small>
            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">關閉</button>
        </div>
    </div>
</div>
