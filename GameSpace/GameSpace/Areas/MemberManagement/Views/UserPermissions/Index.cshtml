@model IEnumerable<GameSpace.Areas.MemberManagement.Models.UserPermissionVM>

@{
    ViewData["Title"] = "GameSpace";
    var currentId = ViewBag.Id as int?;
    var currentNickname = ViewBag.Nickname as string;
}

<h1 class="mb-3">會員權限管理</h1>

<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label for="id" class="form-label">使用者編號</label>
            <input id="id" name="id" type="number" class="form-control"
                   value="@(currentId?.ToString() ?? "")" placeholder="例如：10000001" />
        </div>
        <div class="col-auto">
            <label for="nickname" class="form-label">暱稱</label>
            <input id="nickname" name="nickname" type="text" class="form-control"
                   value="@(currentNickname ?? "")" placeholder="關鍵字" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">搜尋</button>
            <a asp-action="Index" class="btn btn-outline-secondary">清除</a>
        </div>
    </div>
</form>

<p class="text-muted">共 @Model.Count() 筆結果。</p>

<table id="userTable" class="table table-striped table-hover align-middle w-100">
    <thead>
        <tr>
            <th>使用者編號</th>
            <th>暱稱</th>
            <th>帳號狀態</th>
            <th>商城權限</th>
            <th>訊息權限</th>
            <th class="text-nowrap">操作</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="6" class="text-center text-muted">沒有符合條件的資料</td></tr>
        }
        else
        {
            foreach (var row in Model)
            {
                <tr>
                    <td>@row.UserId</td>
                    <td>@row.UserNickName</td>
                    <td>@(row.UserStatus ? "啟用" : "停用")</td>
                    <td>@(row.ShoppingPermission ? "允許" : "不允許")</td>
                    <td>@(row.MessagePermission ? "允許" : "不允許")</td>
                    <td class="text-nowrap">
                        <a asp-action="Edit"
                           asp-route-id="@row.UserId"
                           asp-route-searchId="@(currentId?.ToString())"
                           asp-route-searchNickname="@currentNickname"
                           class="btn btn-sm btn-primary">編輯</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Styles {
    <!-- DataTables + Bootstrap 5 -->
    <link href="https://cdn.datatables.net/v/bs5/dt-2.1.3/r-3.0.2/datatables.min.css" rel="stylesheet" />
}

@section Scripts {
    <!-- jQuery（若已在 _Layout 載入可移除這行） -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- DataTables + Bootstrap 5 -->
    <script src="https://cdn.datatables.net/v/bs5/dt-2.1.3/r-3.0.2/datatables.min.js"></script>

    <script>
        $(function () {
            const table = $('#userTable').DataTable({
                responsive: true,
                paging: true,
                searching: false,     // 會在右上角出現 DataTables 的即時搜尋
                stateSave: true,     // 記住排序/頁碼等狀態
                pageLength: 10,
                lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, '全部']],
                order: [[0, 'asc']],  // 依「使用者編號」預設遞增
                autoWidth: false,
                columnDefs:[
                     { targets: 0, className: 'text-start' },
                    { targets: [1,5], orderable: false } ],
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/2.1.3/i18n/zh-HANT.json'
                }
            });

            // 可選：把伺服端表單的暱稱關鍵字，同步到 DataTables 的全域搜尋
            const q = '@(currentNickname ?? string.Empty)'.trim();
            if (q) table.search(q).draw();
        });
    </script>
}
