@model IEnumerable<GameSpace.Areas.MemberManagement.Models.UserIntroduceVM>

@{
    ViewData["Title"] = "GameSpace";
    var totalUserId = Model?.Select(m => m.UserId).Distinct().Count() ?? 0;

    // 取回目前搜尋值以便回填
    int? currentUserId = ViewBag.UserId as int?;
    string currentUserNickName = ViewBag.UserNickName as string;
}

<h1 class="d-flex align-items-center gap-3">
    會員資訊
    <span class="mb-0 fw-normal">(總人數：@totalUserId)</span>
</h1>

<!-- 搜尋表單（GET） -->
<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label for="userId" class="form-label">使用者編號</label>
            <input id="userId" name="userId" type="number" class="form-control"
                   value="@(currentUserId?.ToString() ?? "")" placeholder="例如：10000001" />
        </div>
        <div class="col-auto">
            <label for="userNickName" class="form-label">暱稱</label>
            <input id="userNickName" name="userNickName" type="text" class="form-control"
                   value="@(currentUserNickName ?? "")" placeholder="關鍵字" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">搜尋</button>
            <a asp-action="Index" class="btn btn-outline-secondary">清除</a>
        </div>
    </div>
</form>

<table id="usersTable" class="table table-striped table-hover align-middle w-100">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.UserId)</th>
            <th>@Html.DisplayNameFor(m => m.UserNickName)</th>
            <th>@Html.DisplayNameFor(m => m.Gender)</th>
            <th>@Html.DisplayNameFor(m => m.DateOfBirth)</th>
            @* <th>@Html.DisplayNameFor(m => m.IdNumber)</th> *@
            <th>@Html.DisplayNameFor(m => m.Cellphone)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>@Html.DisplayNameFor(m => m.Address)</th>
            @* <th>@Html.DisplayNameFor(m => m.UserPicture)</th> *@
            @* <th>@Html.DisplayNameFor(m => m.UserIntroduce1)</th> *@
            <th>@Html.DisplayNameFor(m => m.CreateAccount)</th>
            @* <th style="width:1%; white-space:nowrap;"></th> *@
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="8" class="text-center text-muted">沒有符合條件的資料</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td>@item.UserNickName</td>
                    <td>@item.Gender</td>
                    @* 用 data-order 放 ISO 格式，讓排序依真正日期值 *@
                    <td data-order="@item.DateOfBirth.ToString("O")">
                        @item.DateOfBirth.ToString("yyyy-MM-dd")
                    </td>
                    @* <td>@item.IdNumber</td> *@
                    <td>@item.Cellphone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    @* <td>@item.UserPicture</td> *@
                    @* <td>@item.UserIntroduce1</td> *@
                    <td data-order="@item.CreateAccount.ToString("O")">
                        @item.CreateAccount.ToString("yyyy-MM-dd HH:mm")
                    </td>
                    @* <td> 
                         預留操作按鈕位置（需要時自行加入）
                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-secondary">詳細</a>
                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-primary">修改</a>
                     </td> *@
                </tr>
            }
        }
    </tbody>
</table>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> @* 若 _Layout 已載入 jQuery，請移除這行 *@
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(function () {
            $('#usersTable').DataTable({
                // UI
                paging: true,
                pageLength: 10,
                lengthMenu: [10, 25, 50, 100],
                autoWidth: false,

                // 不顯示 DataTables 內建搜尋框（因為上面有自己的 GET 表單）
                searching: false,
                dom:
                  "<'row'<'col-md-6'l><'col-md-6 text-md-end'>>" +
                  "<'row'<'col-12'tr>>" +
                  "<'row'<'col-md-5'i><'col-md-7'p>>",

                // 不設定預設排序（維持目前輸出順序；想預設排序可改成 [[0, 'asc']]）
                order: [],

                // 最後一欄（操作）不排序、也不參與搜尋
                columnDefs: [
                    { targets: [1,2,3,4,5,6], orderable: false, searchable: false }
                ],

                // 語系
                language: {
                    processing:   "處理中...",
                    lengthMenu:   "每頁顯示 _MENU_ 筆",
                    zeroRecords:  "沒有符合的結果",
                    info:         "第 _START_–_END_ 筆，共 _TOTAL_ 筆",
                    infoEmpty:    "顯示第 0–0 筆，共 0 筆",
                    infoFiltered: "(自 _MAX_ 筆資料中篩選)",
                    paginate: {
                        first:    "第一頁",
                        previous: "上一頁",
                        next:     "下一頁",
                        last:     "最後一頁"
                    }
                }
            });
        });
    </script>
}
