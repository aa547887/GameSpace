@model GameSpace.Areas.Forum.Models.PostEditVm

@{
    ViewData["Title"] = "新增管理員文章";
}

<h2>新增管理員文章</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>標題</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>摘要</label>
        <input asp-for="Tldr" class="form-control" />
    </div>
    <div class="form-group">
        <label>內容 (Markdown)</label>
        <textarea asp-for="BodyMd" class="form-control" rows="6"></textarea>
    </div>
    <div class="form-group">
        <label>來源名稱</label>
        <input asp-for="SourceName" class="form-control" />
    </div>
    <div class="form-group">
        <label>來源連結</label>
        <input asp-for="SourceUrl" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="Pinned" class="form-check-input" />
        <label asp-for="Pinned" class="form-check-label">置頂</label>
    </div>

    <button type="submit" class="btn btn-primary">送出</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>
