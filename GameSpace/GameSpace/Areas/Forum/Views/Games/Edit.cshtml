
@model GameSpace.Areas.Forum.Models.Game.GameEditVm
@{
    ViewData["Title"] = "編輯遊戲";
}
<h2>編輯遊戲</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="GameId" />
    <div class="mb-3">
        <label class="form-label">名稱 (英文)</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">中文名</label>
        <input asp-for="NameZh" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">類型</label>
        <input asp-for="Genre" class="form-control" />
    </div>
    <button class="btn btn-primary">儲存</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>
