@model GameSpace.Areas.MiniGame.ViewModels.UserWalletViewModel
@{
    ViewData["Title"] = "會員錢包詳情";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">會員錢包詳情</h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary">返回列表</a>
    </div>

    <!-- 會員基本資訊 -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">會員基本資訊</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <p><strong>會員ID:</strong> @Model.UserID</p>
                            <p><strong>會員帳號:</strong> @Model.UserAccount</p>
                            <p><strong>會員姓名:</strong> @Model.UserName</p>
                        </div>
                        <div class="col-sm-6">
                            <p><strong>當前點數:</strong> <span class="text-primary font-weight-bold">@Model.CurrentPoints</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 點數調整 -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">點數調整</h6>
                </div>
                <div class="card-body">
                    <form asp-action="AdjustPoints" method="post">
                        <input type="hidden" name="userId" value="@Model.UserID" />
                        <div class="form-group">
                            <label for="adjustPoints">調整點數</label>
                            <input type="number" class="form-control" id="adjustPoints" name="adjustPoints" 
                                   placeholder="正數為增加，負數為減少" />
                        </div>
                        <div class="form-group">
                            <label for="adjustReason">調整原因</label>
                            <textarea class="form-control" id="adjustReason" name="adjustReason" 
                                      rows="3" placeholder="請輸入調整原因"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">確認調整</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 錢包歷史記錄 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">錢包歷史記錄</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>時間</th>
                            <th>類型</th>
                            <th>金額</th>
                            <th>說明</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.WalletHistory != null && Model.WalletHistory.Any())
                        {
                            @foreach (var history in Model.WalletHistory)
                            {
                                <tr>
                                    <td>@history.ChangeTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@history.ChangeType</td>
                                    <td class="@(history.ChangeType == "增加" ? "text-success" : "text-danger")">
                                        @(history.ChangeType == "增加" ? "+" : "-")@history.ChangeAmount
                                    </td>
                                    <td>@history.Description</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">暫無記錄</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 優惠券列表 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">優惠券列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>優惠券代碼</th>
                            <th>類型</th>
                            <th>狀態</th>
                            <th>獲得時間</th>
                            <th>使用時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.UserCoupons != null && Model.UserCoupons.Any())
                        {
                            @foreach (var coupon in Model.UserCoupons)
                            {
                                <tr>
                                    <td>@coupon.CouponCode</td>
                                    <td>@coupon.CouponTypeName</td>
                                    <td>
                                        <span class="badge @(coupon.IsUsed ? "badge-danger" : "badge-success")">
                                            @(coupon.IsUsed ? "已使用" : "未使用")
                                        </span>
                                    </td>
                                    <td>@coupon.AcquiredTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@(coupon.UsedTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "-")</td>
                                    <td>
                                        @if (!coupon.IsUsed)
                                        {
                                            <form asp-action="RemoveCoupon" method="post" style="display: inline;">
                                                <input type="hidden" name="couponId" value="@coupon.CouponID" />
                                                <input type="hidden" name="userId" value="@Model.UserID" />
                                                <button type="submit" class="btn btn-danger btn-sm" 
                                                        onclick="return confirm('確定要刪除此優惠券嗎？')">刪除</button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">暫無優惠券</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 電子禮券列表 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">電子禮券列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>禮券代碼</th>
                            <th>類型</th>
                            <th>狀態</th>
                            <th>獲得時間</th>
                            <th>使用時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.UserEVouchers != null && Model.UserEVouchers.Any())
                        {
                            @foreach (var evoucher in Model.UserEVouchers)
                            {
                                <tr>
                                    <td>@evoucher.EVoucherCode</td>
                                    <td>@evoucher.EVoucherTypeName</td>
                                    <td>
                                        <span class="badge @(evoucher.IsUsed ? "badge-danger" : "badge-success")">
                                            @(evoucher.IsUsed ? "已使用" : "未使用")
                                        </span>
                                    </td>
                                    <td>@evoucher.AcquiredTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@(evoucher.UsedTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "-")</td>
                                    <td>
                                        @if (!evoucher.IsUsed)
                                        {
                                            <form asp-action="RemoveEVoucher" method="post" style="display: inline;">
                                                <input type="hidden" name="evoucherId" value="@evoucher.EVoucherID" />
                                                <input type="hidden" name="userId" value="@Model.UserID" />
                                                <button type="submit" class="btn btn-danger btn-sm" 
                                                        onclick="return confirm('確定要刪除此電子禮券嗎？')">刪除</button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">暫無電子禮券</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>