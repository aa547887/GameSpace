@model List<GameSpace.Areas.MiniGame.ViewModels.UserWalletViewModel>
@{
    ViewData["Title"] = "會員錢包管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">會員錢包管理</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">會員錢包列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>會員ID</th>
                            <th>會員帳號</th>
                            <th>會員姓名</th>
                            <th>當前點數</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var wallet in Model)
                            {
                                <tr>
                                    <td>@wallet.UserID</td>
                                    <td>@wallet.UserAccount</td>
                                    <td>@wallet.UserName</td>
                                    <td>@wallet.CurrentPoints</td>
                                    <td>
                                        <a href="@Url.Action("Details", new { userId = wallet.UserID })" class="btn btn-info btn-sm">詳情</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">暫無資料</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>