@model List<GameSpace.Areas.MiniGame.ViewModels.SignInStatsViewModel>
@{
    ViewData["Title"] = "簽到管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">簽到管理</h1>
        <div>
            <a href="@Url.Action("Rules")" class="btn btn-info">規則設定</a>
            <a href="@Url.Action("Export")" class="btn btn-success">匯出資料</a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">會員簽到統計</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>會員ID</th>
                            <th>會員帳號</th>
                            <th>會員姓名</th>
                            <th>連續簽到天數</th>
                            <th>最後簽到時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var stats in Model)
                            {
                                <tr>
                                    <td>@stats.UserID</td>
                                    <td>@stats.UserAccount</td>
                                    <td>@stats.UserName</td>
                                    <td>
                                        <span class="badge badge-primary">@stats.ConsecutiveDays 天</span>
                                    </td>
                                    <td>@stats.SignDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a href="@Url.Action("Details", new { userId = stats.UserID })" class="btn btn-info btn-sm">詳情</a>
                                        <form asp-action="ProcessSignIn" method="post" style="display: inline;">
                                            <input type="hidden" name="userId" value="@stats.UserID" />
                                            <button type="submit" class="btn btn-success btn-sm" 
                                                    onclick="return confirm('確定要為此會員執行簽到嗎？')">手動簽到</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">暫無資料</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>