@model List<GameSpace.Areas.MiniGame.ViewModels.PetViewModel>
@{
    ViewData["Title"] = "寵物管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">寵物管理</h1>
        <div>
            <a href="@Url.Action("Rules")" class="btn btn-info">規則設定</a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">寵物列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>寵物ID</th>
                            <th>會員帳號</th>
                            <th>寵物名稱</th>
                            <th>寵物類型</th>
                            <th>等級</th>
                            <th>經驗值</th>
                            <th>狀態</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var pet in Model)
                            {
                                <tr>
                                    <td>@pet.PetID</td>
                                    <td>@pet.UserAccount</td>
                                    <td>@pet.PetName</td>
                                    <td>@pet.PetType</td>
                                    <td>
                                        <span class="badge badge-primary">Lv.@pet.PetLevel</span>
                                    </td>
                                    <td>@pet.PetExp</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-6">
                                                <small>飢餓: @pet.Hunger%</small><br>
                                                <small>心情: @pet.Happiness%</small>
                                            </div>
                                            <div class="col-6">
                                                <small>健康: @pet.Health%</small><br>
                                                <small>體力: @pet.Energy%</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { petId = pet.PetID })" class="btn btn-info btn-sm">詳情</a>
                                        <a href="@Url.Action("Edit", new { petId = pet.PetID })" class="btn btn-warning btn-sm">編輯</a>
                                        <form asp-action="Delete" method="post" style="display: inline;">
                                            <input type="hidden" name="petId" value="@pet.PetID" />
                                            <button type="submit" class="btn btn-danger btn-sm" 
                                                    onclick="return confirm('確定要刪除此寵物嗎？')">刪除</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">暫無資料</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>