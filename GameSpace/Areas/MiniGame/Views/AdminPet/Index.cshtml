@{
    ViewData["Title"] = "寵物管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">寵物管理</h1>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" onclick="refreshPetData()">
                <i class="fas fa-sync-alt"></i> 重新整理
            </button>
            <button type="button" class="btn btn-success" onclick="exportPetData()">
                <i class="fas fa-download"></i> 匯出
            </button>
        </div>
    </div>

    <!-- 統計卡片 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總寵物數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalPets">@(ViewBag.TotalPets ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-paw fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">平均等級</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="avgLevel">@(ViewBag.AvgLevel ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">總經驗值</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalExperience">@(ViewBag.TotalExperience ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-star fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">今日升級</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="todayLevelUps">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-up fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 寵物列表 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">寵物列表</h6>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="refreshPetData()">
                            <i class="fas fa-sync-alt"></i> 重新整理
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-success" onclick="exportPetData()">
                            <i class="fas fa-download"></i> 匯出
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="petTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>寵物ID</th>
                                    <th>會員ID</th>
                                    <th>會員名稱</th>
                                    <th>寵物名稱</th>
                                    <th>等級</th>
                                    <th>經驗值</th>
                                    <th>飢餓</th>
                                    <th>心情</th>
                                    <th>體力</th>
                                    <th>清潔</th>
                                    <th>健康</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody id="petTableBody">
                                <!-- 動態載入資料 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            initializePetTable();
            loadPetData();
        });

        function initializePetTable() {
            $("#petTable").DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
                },
                "pageLength": 25,
                "order": [[4, "desc"]]
            });
        }

        function loadPetData() {
            $.ajax({
                url: "@Url.Action("GetPetData", "AdminPet")",
                type: "GET",
                success: function(response) {
                    if (response.success) {
                        updatePetTable(response.data);
                    } else {
                        showError(response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError("載入寵物數據失敗：" + error);
                }
            });
        }

        function updatePetTable(data) {
            var table = $("#petTable").DataTable();
            table.clear();
            
            data.forEach(function(item) {
                var actionButtons = `
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-info" onclick="viewPetDetails(${item.PetID})">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-warning" onclick="editPet(${item.PetID})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-success" onclick="levelUpPet(${item.PetID})">
                            <i class="fas fa-arrow-up"></i>
                        </button>
                    </div>
                `;
                
                table.row.add([
                    item.PetID,
                    item.UserID,
                    item.UserName,
                    item.PetName,
                    item.Level,
                    item.Experience,
                    item.Hunger,
                    item.Mood,
                    item.Stamina,
                    item.Cleanliness,
                    item.Health,
                    actionButtons
                ]);
            });
            
            table.draw();
        }

        function refreshPetData() {
            loadPetData();
        }

        function exportPetData() {
            alert("匯出功能開發中...");
        }

        function viewPetDetails(petId) {
            alert("查看詳情功能開發中...");
        }

        function editPet(petId) {
            alert("編輯功能開發中...");
        }

        function levelUpPet(petId) {
            if (confirm("確定要讓此寵物升級嗎？")) {
                $.ajax({
                    url: "@Url.Action("LevelUpPet", "AdminPet")",
                    type: "POST",
                    data: { petId: petId },
                    success: function(response) {
                        if (response.success) {
                            showSuccess(response.message);
                            loadPetData();
                        } else {
                            showError(response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        showError("升級失敗：" + error);
                    }
                });
            }
        }
    </script>
}
