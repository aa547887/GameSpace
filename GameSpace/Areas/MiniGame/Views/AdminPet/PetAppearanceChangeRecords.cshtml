@{
    ViewData["Title"] = "寵物外觀變更紀錄";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">寵物外觀變更紀錄</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">外觀變更紀錄查詢</h6>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-primary" id="refreshData">
                            <i class="fas fa-sync-alt"></i> 重新整理
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-success" id="exportData">
                            <i class="fas fa-download"></i> 匯出
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="number" class="form-control" id="petId" placeholder="寵物ID...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-control" id="changeType">
                                <option value="">所有變更類型</option>
                                <option value="skin">換膚色</option>
                                <option value="background">換背景</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary" type="button" id="searchBtn">
                                <i class="fas fa-search"></i> 搜尋
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="appearanceChangeTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>紀錄ID</th>
                                    <th>寵物ID</th>
                                    <th>會員名稱</th>
                                    <th>會員帳號</th>
                                    <th>寵物名稱</th>
                                    <th>變更類型</th>
                                    <th>舊值</th>
                                    <th>新值</th>
                                    <th>消耗點數</th>
                                    <th>變更時間</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- 數據將通過 AJAX 載入 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        .ready(function() {
            loadAppearanceChangeRecords();

            #searchBtn.click(function() {
                loadAppearanceChangeRecords();
            });

            #refreshData.click(function() {
                loadAppearanceChangeRecords();
            });

            function loadAppearanceChangeRecords() {
                var petId = #petId.val();
                var changeType = #changeType.val();
                
                $.ajax({
                    url: '@Url.Action("GetPetAppearanceChangeRecords", "AdminPet")',
                    type: 'GET',
                    data: {
                        petId: petId,
                        changeType: changeType
                    },
                    success: function(response) {
                        if (response.success) {
                            var tbody = #appearanceChangeTable tbody;
                            tbody.empty();
                            
                            if (response.data.length > 0) {
                                response.data.forEach(function(item) {
                                    var changeTypeBadge = item.changeType === 'skin' ? 'badge-warning' : 'badge-info';
                                    var row = '<tr>' +
                                        '<td>' + item.logID + '</td>' +
                                        '<td>' + item.petID + '</td>' +
                                        '<td>' + item.user_name + '</td>' +
                                        '<td>' + item.user_Account + '</td>' +
                                        '<td>' + item.petName + '</td>' +
                                        '<td><span class="badge ' + changeTypeBadge + '">' + item.changeType + '</span></td>' +
                                        '<td>' + item.oldValue + '</td>' +
                                        '<td>' + item.newValue + '</td>' +
                                        '<td><span class="badge badge-danger">' + item.pointsCost + '</span></td>' +
                                        '<td>' + new Date(item.changeDate).toLocaleString() + '</td>' +
                                    '</tr>';
                                    tbody.append(row);
                                });
                            } else {
                                tbody.append('<tr><td colspan="10" class="text-center">沒有找到相關資料</td></tr>');
                            }
                        } else {
                            alert('載入資料失敗：' + response.message);
                        }
                    },
                    error: function() {
                        alert('載入資料時發生錯誤');
                    }
                });
            }
        });
    </script>
}
