<!-- Toast Container -->
<div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
    <!-- Toast notifications will be dynamically inserted here -->
</div>

<!-- Error Retry Component -->
<div id="errorRetry" class="error-retry" style="display: none;">
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">載入失敗</h4>
        <p>無法載入數據，請檢查網路連接或稍後再試。</p>
        <hr>
        <button class="btn btn-outline-danger" onclick="retryLoad()">
            <i class="fas fa-redo"></i> 重新載入
        </button>
    </div>
</div>

<!-- Offline Indicator -->
<div id="offlineIndicator" class="alert alert-warning position-fixed bottom-0 start-0 m-3" style="display: none; z-index: 1050;">
    <i class="fas fa-wifi"></i> 網路連接已斷開，部分功能可能無法使用
</div>
