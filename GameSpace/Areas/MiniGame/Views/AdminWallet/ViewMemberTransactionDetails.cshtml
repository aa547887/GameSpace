@{
    ViewData["Title"] = "查看會員收支明細";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">查看會員收支明細</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">會員收支明細查詢</h6>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-primary" id="refreshData">
                            <i class="fas fa-sync-alt"></i> 重新整理
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-success" id="exportData">
                            <i class="fas fa-download"></i> 匯出
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="number" class="form-control" id="userId" placeholder="輸入會員ID...">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="button" id="searchBtn">
                                        <i class="fas fa-search"></i> 查詢
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="transactionDetailsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>交易ID</th>
                                    <th>會員名稱</th>
                                    <th>會員帳號</th>
                                    <th>交易類型</th>
                                    <th>金額</th>
                                    <th>描述</th>
                                    <th>交易時間</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- 數據將通過 AJAX 載入 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        .ready(function() {
            #searchBtn.click(function() {
                var userId = #userId.val();
                if (!userId) {
                    alert('請輸入會員ID');
                    return;
                }
                loadTransactionDetails(userId);
            });

            #refreshData.click(function() {
                var userId = #userId.val();
                if (userId) {
                    loadTransactionDetails(userId);
                }
            });

            function loadTransactionDetails(userId) {
                $.ajax({
                    url: '@Url.Action("GetMemberTransactionDetails", "AdminWallet")',
                    type: 'GET',
                    data: { userId: userId },
                    success: function(response) {
                        if (response.success) {
                            var tbody = #transactionDetailsTable tbody;
                            tbody.empty();
                            
                            if (response.data.length > 0) {
                                response.data.forEach(function(item) {
                                    var row = '<tr>' +
                                        '<td>' + item.transactionID + '</td>' +
                                        '<td>' + item.user_name + '</td>' +
                                        '<td>' + item.user_Account + '</td>' +
                                        '<td><span class="badge badge-info">' + item.transactionType + '</span></td>' +
                                        '<td>' + item.amount + '</td>' +
                                        '<td>' + item.description + '</td>' +
                                        '<td>' + new Date(item.createdAt).toLocaleString() + '</td>' +
                                    '</tr>';
                                    tbody.append(row);
                                });
                            } else {
                                tbody.append('<tr><td colspan="7" class="text-center">沒有找到相關資料</td></tr>');
                            }
                        } else {
                            alert('載入資料失敗：' + response.message);
                        }
                    },
                    error: function() {
                        alert('載入資料時發生錯誤');
                    }
                });
            }
        });
    </script>
}
