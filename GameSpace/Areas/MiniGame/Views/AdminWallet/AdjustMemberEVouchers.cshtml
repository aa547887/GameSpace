@{
    ViewData["Title"] = "調整會員電子禮券";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">調整會員電子禮券</h1>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">發放電子禮券</h6>
                </div>
                <div class="card-body">
                    <form id="issueEVoucherForm">
                        <div class="form-group">
                            <label for="userId">會員ID</label>
                            <input type="number" class="form-control" id="userId" required>
                        </div>
                        <div class="form-group">
                            <label for="voucherName">禮券名稱</label>
                            <input type="text" class="form-control" id="voucherName" required>
                        </div>
                        <div class="form-group">
                            <label for="voucherValue">禮券面額</label>
                            <input type="number" class="form-control" id="voucherValue" step="0.01" min="0" required>
                        </div>
                        <div class="form-group">
                            <label for="expiryDate">到期日期</label>
                            <input type="date" class="form-control" id="expiryDate" required>
                        </div>
                        <div class="form-group">
                            <label for="reason">發放原因</label>
                            <textarea class="form-control" id="reason" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-gift"></i> 發放電子禮券
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">發放記錄</h6>
                </div>
                <div class="card-body">
                    <div id="issueHistory">
                        <!-- 發放記錄將在這裡顯示 -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        .ready(function() {
            #issueEVoucherForm.submit(function(e) {
                e.preventDefault();
                
                var userId = #userId.val();
                var voucherName = #voucherName.val();
                var voucherValue = #voucherValue.val();
                var expiryDate = #expiryDate.val();
                var reason = #reason.val();
                
                if (!userId || !voucherName || !voucherValue || !expiryDate || !reason) {
                    alert('請填寫所有必要欄位');
                    return;
                }
                
                $.ajax({
                    url: '@Url.Action("AdjustMemberEVouchers", "AdminWallet")',
                    type: 'POST',
                    data: {
                        userId: userId,
                        voucherName: voucherName,
                        voucherValue: voucherValue,
                        expiryDate: expiryDate,
                        reason: reason
                    },
                    success: function(response) {
                        if (response.success) {
                            alert('電子禮券發放成功！');
                            #issueEVoucherForm[0].reset();
                            loadIssueHistory();
                        } else {
                            alert('發放失敗：' + response.message);
                        }
                    },
                    error: function() {
                        alert('發放電子禮券時發生錯誤');
                    }
                });
            });
            
            function loadIssueHistory() {
                // 這裡可以添加載入發放記錄的功能
                #issueHistory.html('<p class="text-muted">發放記錄載入中...</p>');
            }
        });
    </script>
}
