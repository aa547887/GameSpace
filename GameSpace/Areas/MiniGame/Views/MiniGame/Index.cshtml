@model List<GameSpace.Areas.MiniGame.ViewModels.MiniGameViewModel>
@{
    ViewData["Title"] = "小遊戲管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">小遊戲管理</h1>
        <div>
            <a href="@Url.Action("Rules")" class="btn btn-info">規則設定</a>
            <a href="@Url.Action("Statistics")" class="btn btn-success">統計資料</a>
            <a href="@Url.Action("Export")" class="btn btn-warning">匯出記錄</a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">遊戲記錄列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>遊戲ID</th>
                            <th>會員帳號</th>
                            <th>寵物名稱</th>
                            <th>遊戲類型</th>
                            <th>開始時間</th>
                            <th>結束時間</th>
                            <th>結果</th>
                            <th>獲得點數</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var game in Model)
                            {
                                <tr>
                                    <td>@game.GameID</td>
                                    <td>@game.UserAccount</td>
                                    <td>@game.PetName</td>
                                    <td>@game.GameType</td>
                                    <td>@game.StartTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@(game.EndTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "進行中")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(game.GameResult))
                                        {
                                            <span class="badge @(game.GameResult == "勝利" ? "badge-success" : "badge-danger")">
                                                @game.GameResult
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">進行中</span>
                                        }
                                    </td>
                                    <td>@game.PointsEarned</td>
                                    <td>
                                        <a href="@Url.Action("Details", new { gameId = game.GameID })" class="btn btn-info btn-sm">詳情</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">暫無資料</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>