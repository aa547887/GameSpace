@{
    ViewData["Title"] = "查看會員遊戲紀錄";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">查看會員遊戲紀錄</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">遊戲紀錄查詢</h6>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-primary" id="refreshData">
                            <i class="fas fa-sync-alt"></i> 重新整理
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-success" id="exportData">
                            <i class="fas fa-download"></i> 匯出
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchTerm" placeholder="搜尋會員名稱或帳號...">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <input type="date" class="form-control" id="startDate" placeholder="開始日期">
                        </div>
                        <div class="col-md-2">
                            <input type="date" class="form-control" id="endDate" placeholder="結束日期">
                        </div>
                        <div class="col-md-2">
                            <select class="form-control" id="gameResult">
                                <option value="">所有結果</option>
                                <option value="win">勝利</option>
                                <option value="lose">失敗</option>
                                <option value="abort">中止</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary" type="button" id="searchBtn">
                                <i class="fas fa-search"></i> 搜尋
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="gameRecordsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>遊戲ID</th>
                                    <th>會員ID</th>
                                    <th>會員名稱</th>
                                    <th>會員帳號</th>
                                    <th>遊戲會話ID</th>
                                    <th>開始時間</th>
                                    <th>結束時間</th>
                                    <th>結果</th>
                                    <th>獲得點數</th>
                                    <th>獲得寵物經驗</th>
                                    <th>獲得優惠券</th>
                                    <th>創建時間</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- 數據將通過 AJAX 載入 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        .ready(function() {
            loadGameRecords();

            #searchBtn.click(function() {
                loadGameRecords();
            });

            #searchTerm.keypress(function(e) {
                if (e.which == 13) {
                    loadGameRecords();
                }
            });

            #refreshData.click(function() {
                loadGameRecords();
            });

            function loadGameRecords() {
                var searchTerm = #searchTerm.val();
                var startDate = #startDate.val();
                var endDate = #endDate.val();
                var gameResult = #gameResult.val();
                
                $.ajax({
                    url: '@Url.Action("GetMemberGameRecords", "AdminMiniGame")',
                    type: 'GET',
                    data: {
                        searchTerm: searchTerm,
                        startDate: startDate,
                        endDate: endDate,
                        gameResult: gameResult
                    },
                    success: function(response) {
                        if (response.success) {
                            var tbody = #gameRecordsTable tbody;
                            tbody.empty();
                            
                            if (response.data.length > 0) {
                                response.data.forEach(function(item) {
                                    var resultBadge = '';
                                    if (item.result === 'win') {
                                        resultBadge = 'badge-success';
                                    } else if (item.result === 'lose') {
                                        resultBadge = 'badge-danger';
                                    } else {
                                        resultBadge = 'badge-warning';
                                    }
                                    
                                    var row = '<tr>' +
                                        '<td>' + item.gameID + '</td>' +
                                        '<td>' + item.user_ID + '</td>' +
                                        '<td>' + item.user_name + '</td>' +
                                        '<td>' + item.user_Account + '</td>' +
                                        '<td>' + item.sessionId + '</td>' +
                                        '<td>' + new Date(item.startTime).toLocaleString() + '</td>' +
                                        '<td>' + (item.endTime ? new Date(item.endTime).toLocaleString() : '進行中') + '</td>' +
                                        '<td><span class="badge ' + resultBadge + '">' + item.result + '</span></td>' +
                                        '<td><span class="badge badge-success">' + (item.pointsEarned || 0) + '</span></td>' +
                                        '<td><span class="badge badge-info">' + (item.petExpEarned || 0) + '</span></td>' +
                                        '<td><span class="badge badge-warning">' + (item.couponEarned || 0) + '</span></td>' +
                                        '<td>' + new Date(item.createdAt).toLocaleString() + '</td>' +
                                    '</tr>';
                                    tbody.append(row);
                                });
                            } else {
                                tbody.append('<tr><td colspan="12" class="text-center">沒有找到相關資料</td></tr>');
                            }
                        } else {
                            alert('載入資料失敗：' + response.message);
                        }
                    },
                    error: function() {
                        alert('載入資料時發生錯誤');
                    }
                });
            }
        });
    </script>
}
