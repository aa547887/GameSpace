@{
    ViewData["Title"] = "小遊戲管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">小遊戲管理</h1>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" onclick="refreshGameData()">
                <i class="fas fa-sync-alt"></i> 重新整理
            </button>
            <button type="button" class="btn btn-success" onclick="exportGameData()">
                <i class="fas fa-download"></i> 匯出
            </button>
        </div>
    </div>

    <!-- 統計卡片 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總遊戲次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalGames">@(ViewBag.TotalGames ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">平均分數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="avgScore">@(ViewBag.AvgScore ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">最高分數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="highestScore">@(ViewBag.HighestScore ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-trophy fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">今日遊戲</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="todayGames">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 遊戲記錄列表 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">遊戲記錄</h6>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="refreshGameData()">
                            <i class="fas fa-sync-alt"></i> 重新整理
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-success" onclick="exportGameData()">
                            <i class="fas fa-download"></i> 匯出
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="gameTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>記錄ID</th>
                                    <th>會員ID</th>
                                    <th>會員名稱</th>
                                    <th>遊戲類型</th>
                                    <th>分數</th>
                                    <th>遊戲時間</th>
                                    <th>獎勵</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody id="gameTableBody">
                                <!-- 動態載入資料 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            initializeGameTable();
            loadGameData();
        });

        function initializeGameTable() {
            $("#gameTable").DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
                },
                "pageLength": 25,
                "order": [[5, "desc"]]
            });
        }

        function loadGameData() {
            $.ajax({
                url: "@Url.Action("GetGameData", "AdminMiniGame")",
                type: "GET",
                success: function(response) {
                    if (response.success) {
                        updateGameTable(response.data);
                    } else {
                        showError(response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError("載入遊戲數據失敗：" + error);
                }
            });
        }

        function updateGameTable(data) {
            var table = $("#gameTable").DataTable();
            table.clear();
            
            data.forEach(function(item) {
                var actionButtons = `
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-info" onclick="viewGameDetails(${item.GameRecordID})">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-warning" onclick="editGameRecord(${item.GameRecordID})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteGameRecord(${item.GameRecordID})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
                
                table.row.add([
                    item.GameRecordID,
                    item.UserID,
                    item.UserName,
                    item.GameType,
                    item.Score,
                    item.GameTime,
                    item.Reward,
                    actionButtons
                ]);
            });
            
            table.draw();
        }

        function refreshGameData() {
            loadGameData();
        }

        function exportGameData() {
            alert("匯出功能開發中...");
        }

        function viewGameDetails(gameRecordId) {
            alert("查看詳情功能開發中...");
        }

        function editGameRecord(gameRecordId) {
            alert("編輯功能開發中...");
        }

        function deleteGameRecord(gameRecordId) {
            if (confirm("確定要刪除此遊戲記錄嗎？")) {
                $.ajax({
                    url: "@Url.Action("DeleteGameRecord", "AdminMiniGame")",
                    type: "POST",
                    data: { gameRecordId: gameRecordId },
                    success: function(response) {
                        if (response.success) {
                            showSuccess(response.message);
                            loadGameData();
                        } else {
                            showError(response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        showError("刪除失敗：" + error);
                    }
                });
            }
        }
    </script>
}
