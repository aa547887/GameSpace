@{
    ViewData["Title"] = "遊戲規則設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">遊戲規則設定</h1>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createRuleModal">
            <i class="fas fa-plus"></i> 新增規則
        </button>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">遊戲規則列表</h6>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-primary" id="refreshData">
                            <i class="fas fa-sync-alt"></i> 重新整理
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="gameRulesTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>設定ID</th>
                                    <th>設定名稱</th>
                                    <th>設定值</th>
                                    <th>描述</th>
                                    <th>創建時間</th>
                                    <th>最後更新</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- 數據將通過 AJAX 載入 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 新增規則模態框 -->
<div class="modal fade" id="createRuleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">新增遊戲規則</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createRuleForm">
                    <div class="form-group">
                        <label for="settingName">設定名稱</label>
                        <input type="text" class="form-control" id="settingName" required>
                    </div>
                    <div class="form-group">
                        <label for="settingValue">設定值</label>
                        <input type="text" class="form-control" id="settingValue" required>
                    </div>
                    <div class="form-group">
                        <label for="description">描述</label>
                        <textarea class="form-control" id="description" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="saveRuleBtn">儲存</button>
            </div>
        </div>
    </div>
</div>

<!-- 編輯規則模態框 -->
<div class="modal fade" id="editRuleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">編輯遊戲規則</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editRuleForm">
                    <input type="hidden" id="editSettingId">
                    <div class="form-group">
                        <label for="editSettingName">設定名稱</label>
                        <input type="text" class="form-control" id="editSettingName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="editSettingValue">設定值</label>
                        <input type="text" class="form-control" id="editSettingValue" required>
                    </div>
                    <div class="form-group">
                        <label for="editDescription">描述</label>
                        <textarea class="form-control" id="editDescription" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="updateRuleBtn">更新</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        .ready(function() {
            loadGameRules();

            #refreshData.click(function() {
                loadGameRules();
            });

            #saveRuleBtn.click(function() {
                var settingName = #settingName.val();
                var settingValue = #settingValue.val();
                var description = #description.val();
                
                if (!settingName || !settingValue) {
                    alert('請填寫所有必要欄位');
                    return;
                }
                
                $.ajax({
                    url: '@Url.Action("CreateGameRule", "AdminMiniGame")',
                    type: 'POST',
                    data: {
                        settingName: settingName,
                        settingValue: settingValue,
                        description: description
                    },
                    success: function(response) {
                        if (response.success) {
                            alert('規則創建成功！');
                            #createRuleModal.modal('hide');
                            #createRuleForm[0].reset();
                            loadGameRules();
                        } else {
                            alert('創建失敗：' + response.message);
                        }
                    },
                    error: function() {
                        alert('創建規則時發生錯誤');
                    }
                });
            });

            #updateRuleBtn.click(function() {
                var settingId = #editSettingId.val();
                var settingValue = #editSettingValue.val();
                var description = #editDescription.val();
                
                if (!settingValue) {
                    alert('請填寫設定值');
                    return;
                }
                
                $.ajax({
                    url: '@Url.Action("UpdateGameRuleSettings", "AdminMiniGame")',
                    type: 'POST',
                    data: {
                        settingId: settingId,
                        settingValue: settingValue,
                        description: description
                    },
                    success: function(response) {
                        if (response.success) {
                            alert('規則更新成功！');
                            #editRuleModal.modal('hide');
                            loadGameRules();
                        } else {
                            alert('更新失敗：' + response.message);
                        }
                    },
                    error: function() {
                        alert('更新規則時發生錯誤');
                    }
                });
            });

            function loadGameRules() {
                $.ajax({
                    url: '@Url.Action("GetGameRuleSettings", "AdminMiniGame")',
                    type: 'GET',
                    success: function(response) {
                        if (response.success) {
                            var tbody = #gameRulesTable tbody;
                            tbody.empty();
                            
                            if (response.data.length > 0) {
                                response.data.forEach(function(item) {
                                    var row = '<tr>' +
                                        '<td>' + item.settingID + '</td>' +
                                        '<td>' + item.settingName + '</td>' +
                                        '<td>' + item.settingValue + '</td>' +
                                        '<td>' + (item.description || '') + '</td>' +
                                        '<td>' + new Date(item.createdAt).toLocaleString() + '</td>' +
                                        '<td>' + new Date(item.updatedAt).toLocaleString() + '</td>' +
                                        '<td>' +
                                            '<button class="btn btn-sm btn-warning" onclick="editRule(' + item.settingID + ', \'' + item.settingName + '\', \'' + item.settingValue + '\', \'' + (item.description || '') + '\')">' +
                                                '<i class="fas fa-edit"></i> 編輯' +
                                            '</button>' +
                                        '</td>' +
                                    '</tr>';
                                    tbody.append(row);
                                });
                            } else {
                                tbody.append('<tr><td colspan="7" class="text-center">沒有找到相關資料</td></tr>');
                            }
                        } else {
                            alert('載入資料失敗：' + response.message);
                        }
                    },
                    error: function() {
                        alert('載入資料時發生錯誤');
                    }
                });
            }

            window.editRule = function(settingId, settingName, settingValue, description) {
                #editSettingId.val(settingId);
                #editSettingName.val(settingName);
                #editSettingValue.val(settingValue);
                #editDescription.val(description);
                #editRuleModal.modal('show');
            };
        });
    </script>
}
