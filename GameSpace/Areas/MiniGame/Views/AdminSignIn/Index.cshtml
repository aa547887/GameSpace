@{
    ViewData["Title"] = "簽到管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">簽到管理</h1>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" onclick="refreshSignInData()">
                <i class="fas fa-sync-alt"></i> 重新整理
            </button>
            <button type="button" class="btn btn-success" onclick="exportSignInData()">
                <i class="fas fa-download"></i> 匯出
            </button>
        </div>
    </div>

    <!-- 統計卡片 -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總簽到次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalSignIns">@(ViewBag.TotalSignIns ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">今日簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="todaySignIns">@(ViewBag.TodaySignIns ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">連續簽到</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="continuousSignIns">@(ViewBag.ContinuousSignIns ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-fire fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">總獎勵</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalRewards">@(ViewBag.TotalRewards ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gift fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 簽到記錄列表 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">簽到記錄</h6>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="refreshSignInData()">
                            <i class="fas fa-sync-alt"></i> 重新整理
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-success" onclick="exportSignInData()">
                            <i class="fas fa-download"></i> 匯出
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="signInTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>記錄ID</th>
                                    <th>會員ID</th>
                                    <th>會員名稱</th>
                                    <th>簽到日期</th>
                                    <th>連續天數</th>
                                    <th>獎勵</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody id="signInTableBody">
                                <!-- 動態載入資料 -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            initializeSignInTable();
            loadSignInData();
        });

        function initializeSignInTable() {
            $("#signInTable").DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Chinese-traditional.json"
                },
                "pageLength": 25,
                "order": [[3, "desc"]]
            });
        }

        function loadSignInData() {
            $.ajax({
                url: "@Url.Action("GetSignInData", "AdminSignIn")",
                type: "GET",
                success: function(response) {
                    if (response.success) {
                        updateSignInTable(response.data);
                    } else {
                        showError(response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError("載入簽到數據失敗：" + error);
                }
            });
        }

        function updateSignInTable(data) {
            var table = $("#signInTable").DataTable();
            table.clear();
            
            data.forEach(function(item) {
                var actionButtons = `
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-info" onclick="viewSignInDetails(${item.SignInRecordID})">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-warning" onclick="editSignInRecord(${item.SignInRecordID})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteSignInRecord(${item.SignInRecordID})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
                
                table.row.add([
                    item.SignInRecordID,
                    item.UserID,
                    item.UserName,
                    item.SignInDate,
                    item.ContinuousDays,
                    item.Reward,
                    actionButtons
                ]);
            });
            
            table.draw();
        }

        function refreshSignInData() {
            loadSignInData();
        }

        function exportSignInData() {
            alert("匯出功能開發中...");
        }

        function viewSignInDetails(signInRecordId) {
            alert("查看詳情功能開發中...");
        }

        function editSignInRecord(signInRecordId) {
            alert("編輯功能開發中...");
        }

        function deleteSignInRecord(signInRecordId) {
            if (confirm("確定要刪除此簽到記錄嗎？")) {
                $.ajax({
                    url: "@Url.Action("DeleteSignInRecord", "AdminSignIn")",
                    type: "POST",
                    data: { signInRecordId: signInRecordId },
                    success: function(response) {
                        if (response.success) {
                            showSuccess(response.message);
                            loadSignInData();
                        } else {
                            showError(response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        showError("刪除失敗：" + error);
                    }
                });
            }
        }
    </script>
}
