@model GameSpace.Areas.MiniGame.Models.PetLevelUpRule
@{
    ViewData["Title"] = "升級規則詳情";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">升級規則詳情</h1>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle"></i> 升級規則資訊
                    </h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">等級</dt>
                        <dd class="col-sm-9">@Model.Level</dd>
                        
                        <dt class="col-sm-3">所需經驗值</dt>
                        <dd class="col-sm-9">@Model.ExperienceRequired.ToString("N0")</dd>
                        
                        <dt class="col-sm-3">點數獎勵</dt>
                        <dd class="col-sm-9">@Model.PointsReward.ToString("N0")</dd>
                        
                        <dt class="col-sm-3">經驗獎勵</dt>
                        <dd class="col-sm-9">@Model.ExpReward.ToString("N0")</dd>
                        
                        <dt class="col-sm-3">狀態</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-success">啟用</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">停用</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">備註</dt>
                        <dd class="col-sm-9">@(Model.Remarks ?? "-")</dd>
                        
                        <dt class="col-sm-3">建立時間</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                        
                        <dt class="col-sm-3">更新時間</dt>
                        <dd class="col-sm-9">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    </dl>
                    
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> 編輯
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> 返回列表
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
