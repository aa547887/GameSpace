@model IEnumerable<GameSpace.Areas.MiniGame.Models.PetLevelUpRule>
@{
    ViewData["Title"] = "寵物升級規則管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">寵物升級規則管理</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> 新增升級規則
        </a>
    </div>

    <!-- 訊息顯示 -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- 資料表格 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-level-up-alt"></i> 升級規則列表
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>等級</th>
                            <th>所需經驗值</th>
                            <th>點數獎勵</th>
                            <th>經驗獎勵</th>
                            <th>狀態</th>
                            <th>備註</th>
                            <th>建立時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Level</td>
                                <td>@item.ExperienceRequired.ToString("N0")</td>
                                <td>@item.PointsReward.ToString("N0")</td>
                                <td>@item.ExpReward.ToString("N0")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">啟用</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">停用</span>
                                    }
                                </td>
                                <td>@(item.Remarks ?? "-")</td>
                                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-@(item.IsActive ? "secondary" : "success") btn-sm">
                                                <i class="fas fa-@(item.IsActive ? "pause" : "play")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
