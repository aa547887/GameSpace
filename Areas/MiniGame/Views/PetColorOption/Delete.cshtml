@model GameSpace.Areas.MiniGame.Models.PetColorOption

@{
    ViewData["Title"] = "刪除寵物顏色選項";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-trash"></i> 刪除寵物顏色選項
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> 返回列表
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>警告：</strong> 您確定要刪除這個顏色選項嗎？此操作無法復原。
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">ID</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">顏色名稱</dt>
                                <dd class="col-sm-8">@Model.ColorName</dd>

                                <dt class="col-sm-4">顏色代碼</dt>
                                <dd class="col-sm-8">
                                    <code>@Model.ColorCode</code>
                                </dd>

                                <dt class="col-sm-4">描述</dt>
                                <dd class="col-sm-8">@(Model.Description ?? "-")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">狀態</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge badge-success">啟用</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">停用</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">排序順序</dt>
                                <dd class="col-sm-8">@Model.SortOrder</dd>

                                <dt class="col-sm-4">建立時間</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- 顏色預覽 -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h5>即將刪除的顏色選項</h5>
                            <div class="color-preview-container" style="padding: 20px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9;">
                                <div class="d-flex align-items-center">
                                    <div class="color-preview" style="width: 100px; height: 100px; background-color: @Model.ColorCode; border: 2px solid #ccc; border-radius: 8px; margin-right: 20px;"></div>
                                    <div>
                                        <h6>@Model.ColorName</h6>
                                        <p class="text-muted mb-0">代碼: <code>@Model.ColorCode</code></p>
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            <p class="text-muted mb-0">@Model.Description</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input asp-for="Id" type="hidden" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> 確認刪除
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> 取消
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
