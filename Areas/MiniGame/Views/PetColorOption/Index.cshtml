@model IEnumerable<GameSpace.Models.PetColorOption>

@{
    ViewData["Title"] = "寵物顏色選項管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-palette"></i> 寵物顏色選項管理
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> 新增顏色選項
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>顏色名稱</th>
                                        <th>顏色代碼</th>
                                        <th>顏色預覽</th>
                                        <th>是否啟用</th>
                                        <th>排序順序</th>
                                        <th>建立時間</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.ColorName</td>
                                            <td>@item.ColorCode</td>
                                            <td>
                                                <div class="color-preview" style="width: 30px; height: 30px; background-color: @item.ColorCode; border: 1px solid #ccc; border-radius: 4px;"></div>
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge badge-success">啟用</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">停用</span>
                                                }
                                            </td>
                                            <td>@item.SortOrder</td>
                                            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> 編輯
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i> 詳情
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> 刪除
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 目前沒有任何寵物顏色選項。
                            <a asp-action="Create" class="btn btn-primary btn-sm ml-2">
                                <i class="fas fa-plus"></i> 立即新增
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .color-preview {
        display: inline-block;
        vertical-align: middle;
    }
</style>
