@model GameSpace.Areas.MiniGame.Models.ViewModels.PetColorOptionViewModel

@{
    ViewData["Title"] = "編輯寵物顏色選項";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i> 編輯寵物顏色選項
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> 返回列表
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ColorName" class="control-label"></label>
                                    <input asp-for="ColorName" class="form-control" placeholder="請輸入顏色名稱" />
                                    <span asp-validation-for="ColorName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ColorCode" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="ColorCode" class="form-control" placeholder="#FF0000" />
                                        <div class="input-group-append">
                                            <input type="color" id="colorPicker" class="form-control" style="width: 50px; height: 38px;" />
                                        </div>
                                    </div>
                                    <span asp-validation-for="ColorCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="請輸入顏色描述（選填）"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SortOrder" class="control-label"></label>
                                    <input asp-for="SortOrder" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="SortOrder" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" />
                                        <label asp-for="IsActive" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 顏色預覽 -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">顏色預覽</label>
                                    <div class="color-preview-container" style="padding: 10px; border: 1px solid #ddd; border-radius: 4px; background-color: #f9f9f9;">
                                        <div id="colorPreview" style="width: 100px; height: 50px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 10px;"></div>
                                        <small class="text-muted">預覽顏色效果</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> 更新顏色選項
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> 取消
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // 顏色選擇器與文字框同步
            $('#colorPicker').on('input', function() {
                $('#ColorCode').val($(this).val());
                updateColorPreview();
            });

            $('#ColorCode').on('input', function() {
                var colorCode = $(this).val();
                if (/^#[0-9A-Fa-f]{6}$/.test(colorCode)) {
                    $('#colorPicker').val(colorCode);
                    updateColorPreview();
                }
            });

            function updateColorPreview() {
                var colorCode = $('#ColorCode').val();
                if (/^#[0-9A-Fa-f]{6}$/.test(colorCode)) {
                    $('#colorPreview').css('background-color', colorCode);
                }
            }

            // 初始化預覽
            updateColorPreview();
        });
    </script>
}
