@model Areas.MiniGame.Models.PetBackgroundCostSetting
@{
    ViewData["Title"] = "寵物換背景所需點數設定詳情";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">寵物換背景所需點數設定詳情</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
            <i class="fas fa-edit fa-sm text-white-50"></i> 編輯
        </a>
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> 返回列表
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">設定資訊</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label font-weight-bold">設定名稱</label>
                    <p class="form-control-plaintext">@Model.SettingName</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label font-weight-bold">所需點數</label>
                    <p class="form-control-plaintext">@Model.RequiredPoints</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label font-weight-bold">排序順序</label>
                    <p class="form-control-plaintext">@Model.SortOrder</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label font-weight-bold">啟用狀態</label>
                    <p class="form-control-plaintext">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">啟用</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">停用</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label class="form-label font-weight-bold">描述</label>
            <p class="form-control-plaintext">@(Model.Description ?? "無")</p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label font-weight-bold">建立時間</label>
                    <p class="form-control-plaintext">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label font-weight-bold">更新時間</label>
                    <p class="form-control-plaintext">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                </div>
            </div>
        </div>
    </div>
</div>
