@model Areas.MiniGame.Models.ViewModels.PetBackgroundCostSettingViewModels.IndexViewModel
@{
    ViewData["Title"] = "寵物換背景所需點數設定管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">寵物換背景所需點數設定管理</h1>
    <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> 新增設定
    </a>
</div>

<!-- 搜尋和篩選 -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">搜尋和篩選</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="searchTerm" class="form-label">搜尋關鍵字</label>
                <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@Model.SearchTerm" placeholder="設定名稱或描述">
            </div>
            <div class="col-md-3">
                <label for="isActive" class="form-label">啟用狀態</label>
                <select class="form-select" id="isActive" name="isActive">
                    <option value="">全部</option>
                    <option value="true" @(Model.IsActiveFilter == true ? "selected" : "")>啟用</option>
                    <option value="false" @(Model.IsActiveFilter == false ? "selected" : "")>停用</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">搜尋</button>
                <a asp-action="Index" class="btn btn-secondary">清除</a>
            </div>
        </form>
    </div>
</div>

<!-- 結果列表 -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">設定列表</h6>
        <div class="text-muted small">
            共 @Model.TotalItems 筆資料，第 @Model.CurrentPage / @Model.TotalPages 頁
        </div>
    </div>
    <div class="card-body">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>設定名稱</th>
                            <th>所需點數</th>
                            <th>啟用狀態</th>
                            <th>排序順序</th>
                            <th>建立時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.SettingName</td>
                                <td>@item.RequiredPoints</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">啟用</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">停用</span>
                                    }
                                </td>
                                <td>@item.SortOrder</td>
                                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">詳情</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">編輯</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">刪除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- 分頁 -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="分頁導航">
                    <ul class="pagination justify-content-center">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-isActive="@Model.IsActiveFilter">上一頁</a>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm" asp-route-isActive="@Model.IsActiveFilter">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-isActive="@Model.IsActiveFilter">下一頁</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted">沒有找到符合條件的資料</p>
                <a asp-action="Create" class="btn btn-primary">新增第一筆設定</a>
            </div>
        }
    </div>
</div>
