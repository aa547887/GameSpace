@model Areas.MiniGame.Models.ViewModels.PetBackgroundCostSettingViewModels.EditViewModel
@{
    ViewData["Title"] = "編輯寵物換背景所需點數設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">編輯寵物換背景所需點數設定</h1>
    <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> 返回列表
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">設定資訊</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SettingName" class="form-label">設定名稱 <span class="text-danger">*</span></label>
                        <input asp-for="SettingName" class="form-control" placeholder="請輸入設定名稱" />
                        <span asp-validation-for="SettingName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="RequiredPoints" class="form-label">所需點數 <span class="text-danger">*</span></label>
                        <input asp-for="RequiredPoints" class="form-control" type="number" min="0" placeholder="請輸入所需點數" />
                        <span asp-validation-for="RequiredPoints" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SortOrder" class="form-label">排序順序</label>
                        <input asp-for="SortOrder" class="form-control" type="number" min="0" placeholder="請輸入排序順序" />
                        <span asp-validation-for="SortOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">是否啟用</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">描述</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="請輸入描述（選填）"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> 更新
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> 取消
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
