@model GameSpace.Areas.MiniGame.Models.ViewModels.PetColorCostSettingListViewModel

@{
    ViewData["Title"] = "寵物換色所需點數設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-palette"></i> 寵物換色所需點數設定管理
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> 新增設定
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- 搜尋和篩選 -->
                    <form method="get" class="mb-3">
                        <div class="row">
                            <div class="col-md-4">
                                <input asp-for="SearchTerm" class="form-control" placeholder="搜尋設定名稱或描述" />
                            </div>
                            <div class="col-md-3">
                                <select asp-for="IsActiveFilter" class="form-control">
                                    <option value="">全部狀態</option>
                                    <option value="true">啟用</option>
                                    <option value="false">停用</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-info">
                                    <i class="fas fa-search"></i> 搜尋
                                </button>
                            </div>
                            <div class="col-md-3">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-refresh"></i> 重置
                                </a>
                            </div>
                        </div>
                    </form>

                    <!-- 結果表格 -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>設定名稱</th>
                                    <th>顏色預覽</th>
                                    <th>所需點數</th>
                                    <th>狀態</th>
                                    <th>排序順序</th>
                                    <th>建立時間</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Settings.Any())
                                {
                                    @foreach (var item in Model.Settings)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.SettingName</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="color-preview" style="width: 30px; height: 30px; background-color: @item.ColorCode; border: 1px solid #ccc; border-radius: 4px; margin-right: 8px;"></div>
                                                    <span class="text-muted">@item.ColorCode</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge badge-primary">@item.RequiredPoints 點</span>
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge badge-success">啟用</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">停用</span>
                                                }
                                            </td>
                                            <td>@item.SortOrder</td>
                                            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i> 詳情
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i> 編輯
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i> 刪除
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">
                                            <i class="fas fa-info-circle"></i> 沒有找到任何設定項目
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- 分頁 -->
                    @if (Model.TotalCount > Model.PageSize)
                    {
                        <nav aria-label="分頁導航">
                            <ul class="pagination justify-content-center">
                                @{
                                    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
                                    var currentPage = Model.PageNumber;
                                }
                                
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?pageNumber=@(currentPage - 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm&isActiveFilter=@Model.IsActiveFilter">上一頁</a>
                                    </li>
                                }
                                
                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="?pageNumber=@i&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm&isActiveFilter=@Model.IsActiveFilter">@i</a>
                                    </li>
                                }
                                
                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?pageNumber=@(currentPage + 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm&isActiveFilter=@Model.IsActiveFilter">下一頁</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
