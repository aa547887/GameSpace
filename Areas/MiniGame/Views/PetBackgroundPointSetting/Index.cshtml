@model Areas.MiniGame.Models.PetBackgroundPointSettingListViewModel
@{
    ViewData["Title"] = "寵物換背景所需點數設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">寵物換背景所需點數設定</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> 新增設定
        </a>
    </div>

    <!-- 訊息顯示 -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- 搜尋和篩選 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">搜尋和篩選</h6>
        </div>
        <div class="card-body">
            <form method="get" class="form-inline">
                <div class="form-group mr-3">
                    <label for="searchKeyword" class="sr-only">搜尋關鍵字</label>
                    <input type="text" class="form-control" id="searchKeyword" name="searchKeyword" 
                           value="@Model.SearchKeyword" placeholder="搜尋關鍵字">
                </div>
                <div class="form-group mr-3">
                    <label for="isEnabledFilter" class="sr-only">啟用狀態</label>
                    <select class="form-control" id="isEnabledFilter" name="isEnabledFilter">
                        <option value="">全部</option>
                        <option value="true" @(Model.IsEnabledFilter == true ? "selected" : "")>啟用</option>
                        <option value="false" @(Model.IsEnabledFilter == false ? "selected" : "")>停用</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">搜尋</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">清除</a>
            </form>
        </div>
    </div>

    <!-- 設定列表 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">設定列表</h6>
        </div>
        <div class="card-body">
            @if (Model.Settings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>寵物等級</th>
                                <th>所需點數</th>
                                <th>啟用狀態</th>
                                <th>備註</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in Model.Settings)
                            {
                                <tr>
                                    <td>@setting.PetLevel</td>
                                    <td>@setting.RequiredPoints</td>
                                    <td>
                                        @if (setting.IsEnabled)
                                        {
                                            <span class="badge badge-success">啟用</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">停用</span>
                                        }
                                    </td>
                                    <td>@(setting.Remarks ?? "-")</td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = setting.Id })" class="btn btn-info btn-sm">
                                            <i class="fas fa-edit"></i> 編輯
                                        </a>
                                        <form method="post" action="@Url.Action("ToggleEnabled")" class="d-inline">
                                            <input type="hidden" name="id" value="@setting.Id" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-warning btn-sm" 
                                                    onclick="return confirm('確定要切換此設定的啟用狀態嗎？')">
                                                <i class="fas fa-toggle-on"></i> 切換狀態
                                            </button>
                                        </form>
                                        <form method="post" action="@Url.Action("Delete")" class="d-inline">
                                            <input type="hidden" name="id" value="@setting.Id" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm" 
                                                    onclick="return confirm('確定要刪除此設定嗎？此操作無法復原。')">
                                                <i class="fas fa-trash"></i> 刪除
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- 分頁 -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="分頁導航">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, isEnabledFilter = Model.IsEnabledFilter })">上一頁</a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, isEnabledFilter = Model.IsEnabledFilter })">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize, searchKeyword = Model.SearchKeyword, isEnabledFilter = Model.IsEnabledFilter })">下一頁</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">沒有找到符合條件的設定</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">新增第一個設定</a>
                </div>
            }
        </div>
    </div>
</div>
