@model Areas.MiniGame.Models.PetBackgroundPointSettingViewModel
@{
    ViewData["Title"] = "新增寵物換背景所需點數設定";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">新增寵物換背景所需點數設定</h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> 返回列表
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">設定資訊</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group">
                            <label asp-for="PetLevel" class="form-label">寵物等級 *</label>
                            <input asp-for="PetLevel" class="form-control" placeholder="請輸入寵物等級 (1-100)" />
                            <span asp-validation-for="PetLevel" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RequiredPoints" class="form-label">所需點數 *</label>
                            <input asp-for="RequiredPoints" class="form-control" placeholder="請輸入所需點數 (0-10000)" />
                            <span asp-validation-for="RequiredPoints" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="IsEnabled" class="form-check-input" type="checkbox" />
                                <label asp-for="IsEnabled" class="form-check-label">
                                    啟用此設定
                                </label>
                            </div>
                            <span asp-validation-for="IsEnabled" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Remarks" class="form-label">備註</label>
                            <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="請輸入備註 (選填)"></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> 儲存設定
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> 取消
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">說明</h6>
                </div>
                <div class="card-body">
                    <h6>寵物等級</h6>
                    <p class="text-muted small">設定寵物的等級，範圍為 1-100。</p>
                    
                    <h6>所需點數</h6>
                    <p class="text-muted small">設定該等級寵物換背景所需的點數，範圍為 0-10000。</p>
                    
                    <h6>啟用狀態</h6>
                    <p class="text-muted small">控制此設定是否生效。</p>
                    
                    <h6>備註</h6>
                    <p class="text-muted small">可選的備註說明，最多 500 字。</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
