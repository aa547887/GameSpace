@model GameSpace.Areas.MiniGame.Models.ViewModels.PetOptionManagementViewModel
@{
    ViewData["Title"] = "寵物選項管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-palette"></i> 寵物選項管理
        </h1>
        <div>
            <a href="@Url.Action("ColorOptions", "PetOptionManagement")" class="btn btn-primary btn-sm">
                <i class="fas fa-palette"></i> 顏色選項管理
            </a>
            <a href="@Url.Action("BackgroundOptions", "PetOptionManagement")" class="btn btn-info btn-sm">
                <i class="fas fa-image"></i> 背景選項管理
            </a>
        </div>
    </div>

    <!-- 統計資訊卡片 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">顏色選項總數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.TotalColorOptions</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-palette fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">啟用顏色選項</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.ActiveColorOptions</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">背景選項總數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.TotalBackgroundOptions</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-image fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">啟用背景選項</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.ActiveBackgroundOptions</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- 顏色選項快速管理 -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-palette"></i> 顏色選項管理
                    </h6>
                    <div>
                        <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#quickAddColorModal">
                            <i class="fas fa-plus"></i> 快速新增
                        </button>
                        <a href="@Url.Action("ColorOptions", "PetOptionManagement")" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-list"></i> 完整管理
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="colorTable">
                            <thead>
                                <tr>
                                    <th>顏色名稱</th>
                                    <th>顏色預覽</th>
                                    <th>狀態</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ColorOptions.ColorOptions != null && Model.ColorOptions.ColorOptions.Any())
                                {
                                    @foreach (var color in Model.ColorOptions.ColorOptions.Take(5))
                                    {
                                        <tr>
                                            <td>@color.ColorName</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="color-preview" style="width: 30px; height: 30px; background-color: @color.ColorCode; border: 1px solid #ddd; border-radius: 4px; margin-right: 10px;"></div>
                                                    <span class="text-muted">@color.ColorCode</span>
                                                </div>
                                            </td>
                                            <td>
                                                @if (color.IsActive)
                                                {
                                                    <span class="badge badge-success">啟用</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">停用</span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" onclick="toggleColorStatus(@color.Id)">
                                                    <i class="fas fa-toggle-on"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">暫無顏色選項</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.ColorOptions.ColorOptions != null && Model.ColorOptions.ColorOptions.Count() > 5)
                    {
                        <div class="text-center mt-3">
                            <a href="@Url.Action("ColorOptions", "PetOptionManagement")" class="btn btn-sm btn-outline-primary">
                                查看全部 (@Model.ColorOptions.ColorOptions.Count() 個)
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- 背景選項快速管理 -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-image"></i> 背景選項管理
                    </h6>
                    <div>
                        <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#quickAddBackgroundModal">
                            <i class="fas fa-plus"></i> 快速新增
                        </button>
                        <a href="@Url.Action("BackgroundOptions", "PetOptionManagement")" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-list"></i> 完整管理
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="backgroundTable">
                            <thead>
                                <tr>
                                    <th>背景名稱</th>
                                    <th>背景預覽</th>
                                    <th>狀態</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.BackgroundOptions.BackgroundOptions != null && Model.BackgroundOptions.BackgroundOptions.Any())
                                {
                                    @foreach (var background in Model.BackgroundOptions.BackgroundOptions.Take(5))
                                    {
                                        <tr>
                                            <td>@background.Name</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="background-preview" style="width: 30px; height: 30px; background-color: @background.BackgroundColorCode; border: 1px solid #ddd; border-radius: 4px; margin-right: 10px;"></div>
                                                    <span class="text-muted">@background.BackgroundColorCode</span>
                                                </div>
                                            </td>
                                            <td>
                                                @if (background.IsActive)
                                                {
                                                    <span class="badge badge-success">啟用</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">停用</span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-info" onclick="toggleBackgroundStatus(@background.Id)">
                                                    <i class="fas fa-toggle-on"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">暫無背景選項</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.BackgroundOptions.BackgroundOptions != null && Model.BackgroundOptions.BackgroundOptions.Count() > 5)
                    {
                        <div class="text-center mt-3">
                            <a href="@Url.Action("BackgroundOptions", "PetOptionManagement")" class="btn btn-sm btn-outline-info">
                                查看全部 (@Model.BackgroundOptions.BackgroundOptions.Count() 個)
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 快速新增顏色選項 Modal -->
<div class="modal fade" id="quickAddColorModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">快速新增顏色選項</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="quickAddColorForm">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="colorName">顏色名稱</label>
                        <input type="text" class="form-control" id="colorName" name="colorName" required>
                    </div>
                    <div class="form-group">
                        <label for="colorCode">顏色代碼</label>
                        <div class="input-group">
                            <input type="color" class="form-control" id="colorPicker" onchange="updateColorCode()">
                            <input type="text" class="form-control" id="colorCode" name="colorCode" placeholder="#000000" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="colorDescription">描述</label>
                        <textarea class="form-control" id="colorDescription" name="description" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="colorIsActive" name="isActive" checked>
                            <label class="form-check-label" for="colorIsActive">啟用</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary">新增</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 快速新增背景選項 Modal -->
<div class="modal fade" id="quickAddBackgroundModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">快速新增背景選項</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="quickAddBackgroundForm">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="backgroundName">背景名稱</label>
                        <input type="text" class="form-control" id="backgroundName" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="backgroundColorCode">背景顏色代碼</label>
                        <div class="input-group">
                            <input type="color" class="form-control" id="backgroundColorPicker" onchange="updateBackgroundColorCode()">
                            <input type="text" class="form-control" id="backgroundColorCode" name="backgroundColorCode" placeholder="#000000" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="backgroundDescription">描述</label>
                        <textarea class="form-control" id="backgroundDescription" name="description" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="backgroundIsActive" name="isActive" checked>
                            <label class="form-check-label" for="backgroundIsActive">啟用</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-info">新增</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 更新顏色代碼
        function updateColorCode() {
            const colorPicker = document.getElementById('colorPicker');
            const colorCode = document.getElementById('colorCode');
            colorCode.value = colorPicker.value;
        }

        // 更新背景顏色代碼
        function updateBackgroundColorCode() {
            const colorPicker = document.getElementById('backgroundColorPicker');
            const colorCode = document.getElementById('backgroundColorCode');
            colorCode.value = colorPicker.value;
        }

        // 快速新增顏色選項
        $('#quickAddColorForm').on('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                colorName: $('#colorName').val(),
                colorCode: $('#colorCode').val(),
                description: $('#colorDescription').val(),
                isActive: $('#colorIsActive').is(':checked'),
                sortOrder: 0
            };

            $.ajax({
                url: '@Url.Action("QuickAddColor", "PetOptionManagement")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        $('#quickAddColorModal').modal('hide');
                        $('#quickAddColorForm')[0].reset();
                        showAlert('success', response.message);
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showAlert('error', response.message);
                    }
                },
                error: function() {
                    showAlert('error', '新增失敗，請稍後再試');
                }
            });
        });

        // 快速新增背景選項
        $('#quickAddBackgroundForm').on('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                name: $('#backgroundName').val(),
                backgroundColorCode: $('#backgroundColorCode').val(),
                description: $('#backgroundDescription').val(),
                isActive: $('#backgroundIsActive').is(':checked'),
                sortOrder: 0
            };

            $.ajax({
                url: '@Url.Action("QuickAddBackground", "PetOptionManagement")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        $('#quickAddBackgroundModal').modal('hide');
                        $('#quickAddBackgroundForm')[0].reset();
                        showAlert('success', response.message);
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showAlert('error', response.message);
                    }
                },
                error: function() {
                    showAlert('error', '新增失敗，請稍後再試');
                }
            });
        });

        // 切換顏色選項狀態
        function toggleColorStatus(id) {
            $.ajax({
                url: '@Url.Action("ToggleStatus", "PetOptionManagement")',
                type: 'POST',
                data: {
                    optionType: 'color',
                    id: id
                },
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        showAlert('success', response.message);
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showAlert('error', response.message);
                    }
                },
                error: function() {
                    showAlert('error', '狀態更新失敗，請稍後再試');
                }
            });
        }

        // 切換背景選項狀態
        function toggleBackgroundStatus(id) {
            $.ajax({
                url: '@Url.Action("ToggleStatus", "PetOptionManagement")',
                type: 'POST',
                data: {
                    optionType: 'background',
                    id: id
                },
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        showAlert('success', response.message);
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showAlert('error', response.message);
                    }
                },
                error: function() {
                    showAlert('error', '狀態更新失敗，請稍後再試');
                }
            });
        }

        // 顯示提示訊息
        function showAlert(type, message) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            `;
            $('body').prepend(alertHtml);
            setTimeout(() => $('.alert').fadeOut(), 3000);
        }
    </script>
}
