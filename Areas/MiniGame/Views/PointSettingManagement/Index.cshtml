@model Areas.MiniGame.Models.PetSkinColorPointSettingListViewModel
@{
    ViewData["Title"] = "寵物換色所需點數設定管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">寵物換色所需點數設定管理</h1>
        <a href="@Url.Action("Create")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> 新增設定
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">設定列表</h6>
        </div>
        <div class="card-body">
            @if (Model.Settings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>寵物等級</th>
                                <th>換色所需點數</th>
                                <th>狀態</th>
                                <th>建立時間</th>
                                <th>建立者</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in Model.Settings)
                            {
                                <tr>
                                    <td>@setting.PetLevel</td>
                                    <td>@setting.RequiredPoints</td>
                                    <td>
                                        @if (setting.IsEnabled)
                                        {
                                            <span class="badge badge-success">啟用</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">停用</span>
                                        }
                                    </td>
                                    <td>@setting.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@setting.CreatedByName</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Edit", new { id = setting.Id })" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i> 編輯
                                            </a>
                                            <form method="post" action="@Url.Action("ToggleEnabled")" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@setting.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-pause"></i> 停用
                                                </button>
                                            </form>
                                            <form method="post" action="@Url.Action("Delete")" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@setting.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i> 刪除
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-info-circle fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">目前沒有任何設定</h5>
                    <p class="text-gray-500">點擊上方「新增設定」按鈕來建立第一個設定</p>
                </div>
            }
        </div>
    </div>
</div>
